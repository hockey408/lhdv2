        FRB_Exposure       = CAST(NULL AS decimal(38,6)),  -- not applicable for instruments
        ACB_Exposure       = CASE WHEN ISNULL(I.AMORTIZED_COST_BASIS,0) <> 0 THEN I.AMORTIZED_COST_BASIS END,
        Derived_ACB_Exposure = CASE 
                                  WHEN ISNULL(
                                         COALESCE(I.DERIVED_AMORTIZED_COST_BASIS, I.[DERIVED_ AMORTIZED_COST_BASIS]),
                                         0
                                       ) <> 0
                                  THEN COALESCE(I.DERIVED_AMORTIZED_COST_BASIS, I.[DERIVED_ AMORTIZED_COST_BASIS])
                               END
    FROM latest_instr AS I
    WHERE (I.RISKCD IS NULL OR I.RISK_BAS_SEG_CD IS NULL OR I.FDICCD IS NULL)
)

