Waterfall Amount (Sel, TotalAware) :=
VAR step   = SELECTEDVALUE( 'Waterfall Steps'[Step] )
VAR prev   = [Exposure Prev (Sel)]
VAR newA   = [Δ New (Sel)]
VAR closed = [Δ Closed (Sel)]
VAR xin    = [Δ Xfer In (Sel)]
VAR xout   = [Δ Xfer Out (Sel)]
VAR bal    = [Δ Balance Change (Sel)]
VAR curr   = [Exposure Curr (Sel)]
RETURN
SWITCH(
  TRUE(),
  step = "Previous Balance", prev,
  step = "New Accounts",     newA,
  step = "Closed Accounts",  closed,
  step = "Transfers In",     xin,
  step = "Transfers Out",    xout,
  step = "Balance Change",   bal,
  step = "Current Balance",  curr - (prev + newA + closed + xin + xout + bal),
  BLANK()
)










let
    // Define start and end dates dynamically from your model data
    StartDate = #date(2020, 1, 31),
    EndDate = Date.EndOfMonth(DateTime.Date(DateTime.LocalNow())),
    // Generate list of all month ends
    MonthEnds = List.Dates(
        StartDate,
        Duration.Days(EndDate - StartDate) / 30 + 2,
        #duration(31,0,0,0)
    ),
    // Convert to table and ensure each is true month-end
    MonthEndTable = Table.FromList(
        List.Transform(MonthEnds, each Date.EndOfMonth(_)),
        Splitter.SplitByNothing(),
        {"MonthEnd"}
    ),
    // Remove duplicates and sort ascending
    CleanTable = Table.Distinct(MonthEndTable),
    Sorted = Table.Sort(CleanTable, {{"MonthEnd", Order.Ascending}})
in
    Sorted





= Table.Distinct(
    Table.SelectColumns(Source, {"MonthEnd"})
)

= Table.AddColumn(Source, "MonthEnd", each Date.EndOfMonth([Date]))






Date Duplicates =
COUNTROWS(
    FILTER(
        SUMMARIZE('Dim_Date', 'Dim_Date'[MonthEnd]),
        CALCULATE(COUNTROWS('Dim_Date')) > 1
    )
)





Portfolio PSI (Latest) =
VAR lm = CALCULATE( MAX( 'Date'[MonthEnd] ) )
RETURN
CALCULATE(
    MAX( RC_PSI_ByDescription[PSI_TOTAL] ),
    RC_PSI_ByDescription[MONTH_END] = lm
)





-- ================= RC Exposure Flow: Rolling MoM (Adds/Closes/Transfers/Balance) =================
-- Emits rows per Current_Month × RC_DESCRIPTION × Movement_Type with Exposure_Change and Account_Count.
-- Movement_Type: Previous Balance, New Account, Closed Account, Transfer In, Transfer Out, Balance Change, Current Balance
-- ================================================================================================

WITH params AS (
  SELECT
    ADD_MONTHS(CURRENT_DATE, -13)::DATE AS min_me  -- rolling window anchor (13 months covers 12 flows)
),

base AS (
  SELECT
    Account_Identifier,
    RC_CODE,
    RC_DESCRIPTION,
    CAST(END_OF_MONTH_DATE AS DATE) AS month_end,
    SOURCE_SYSTEM_BALANCE::FLOAT8   AS exposure
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB, params p
  WHERE GL_ACCOUNT_HIER_LEVEL_4 = 'Total Loans'
    AND END_OF_MONTH_DATE >= p.min_me
),

-- Pair each month with its previous month (only where both exist in base to keep set tight)
months AS (
  SELECT DISTINCT b.month_end AS curr_me,
         ADD_MONTHS(b.month_end, -1)::DATE AS prev_me
  FROM base b
),

curr AS (
  SELECT m.curr_me, b.Account_Identifier, b.RC_CODE, b.RC_DESCRIPTION, b.exposure
  FROM months m
  JOIN base   b ON b.month_end = m.curr_me
),
prev AS (
  SELECT m.curr_me, b.Account_Identifier, b.RC_CODE, b.RC_DESCRIPTION, b.exposure
  FROM months m
  JOIN base   b ON b.month_end = m.prev_me
),

-- Full outer by Account within each curr_me so we see adds/drops and transfers
pc AS (
  SELECT
    COALESCE(c.curr_me, p.curr_me)                        AS curr_me,
    COALESCE(c.Account_Identifier, p.Account_Identifier)  AS Account_Identifier,

    -- current snapshot
    c.RC_CODE        AS curr_rc,
    c.RC_DESCRIPTION AS curr_desc,
    c.exposure       AS curr_exp,

    -- previous snapshot (same account, previous month)
    p.RC_CODE        AS prev_rc,
    p.RC_DESCRIPTION AS prev_desc,
    p.exposure       AS prev_exp
  FROM curr c
  FULL OUTER JOIN prev p
    ON p.curr_me = c.curr_me
   AND p.Account_Identifier = c.Account_Identifier
),

-- 1) Previous Balance (per previous RC)
prev_bal AS (
  SELECT
    curr_me AS month_end,
    prev_desc AS rc_description,
    'Previous Balance'::VARCHAR(32) AS movement_type,
    SUM(COALESCE(prev_exp,0))       AS exposure_change,
    COUNT(DISTINCT Account_Identifier) AS account_count
  FROM pc
  WHERE prev_desc IS NOT NULL
  GROUP BY curr_me, prev_desc
),

-- 2) New (exists now, not before) → attribute to current RC
new_acct AS (
  SELECT
    curr_me AS month_end,
    curr_desc AS rc_description,
    'New Account'::VARCHAR(32) AS movement_type,
    SUM(COALESCE(curr_exp,0))  AS exposure_change,
    COUNT(DISTINCT Account_Identifier) AS account_count
  FROM pc
  WHERE prev_desc IS NULL AND curr_desc IS NOT NULL
  GROUP BY curr_me, curr_desc
),

-- 3) Closed (existed before, gone now) → attribute to previous RC (negative)
closed_acct AS (
  SELECT
    curr_me AS month_end,
    prev_desc AS rc_description,
    'Closed Account'::VARCHAR(32) AS movement_type,
    SUM(-COALESCE(prev_exp,0))    AS exposure_change,
    COUNT(DISTINCT Account_Identifier) AS account_count
  FROM pc
  WHERE prev_desc IS NOT NULL AND curr_desc IS NULL
  GROUP BY curr_me, prev_desc
),

-- 4) Transfers: prev_rc <> curr_rc → two sides
xfer_out AS (
  SELECT
    curr_me AS month_end,
    prev_desc AS rc_description,
    'Transfer Out'::VARCHAR(32) AS movement_type,
    SUM(-COALESCE(prev_exp,0))  AS exposure_change,
    COUNT(DISTINCT Account_Identifier) AS account_count
  FROM pc
  WHERE prev_desc IS NOT NULL AND curr_desc IS NOT NULL AND prev_rc <> curr_rc
  GROUP BY curr_me, prev_desc
),
xfer_in AS (
  SELECT
    curr_me AS month_end,
    curr_desc AS rc_description,
    'Transfer In'::VARCHAR(32) AS movement_type,
    SUM(COALESCE(curr_exp,0))  AS exposure_change,
    COUNT(DISTINCT Account_Identifier) AS account_count
  FROM pc
  WHERE prev_desc IS NOT NULL AND curr_desc IS NOT NULL AND prev_rc <> curr_rc
  GROUP BY curr_me, curr_desc
),

-- 5) Balance change for persisters (same RC both months)
bal_chg AS (
  SELECT
    curr_me AS month_end,
    curr_desc AS rc_description,
    'Balance Change'::VARCHAR(32) AS movement_type,
    SUM(COALESCE(curr_exp,0) - COALESCE(prev_exp,0)) AS exposure_change,
    COUNT(DISTINCT Account_Identifier) AS account_count
  FROM pc
  WHERE prev_desc IS NOT NULL AND curr_desc IS NOT NULL AND prev_rc = curr_rc
  GROUP BY curr_me, curr_desc
),

-- 6) Current Balance (per current RC)
curr_bal AS (
  SELECT
    curr_me AS month_end,
    curr_desc AS rc_description,
    'Current Balance'::VARCHAR(32) AS movement_type,
    SUM(COALESCE(curr_exp,0)) AS exposure_change,
    COUNT(DISTINCT Account_Identifier) AS account_count
  FROM pc
  WHERE curr_desc IS NOT NULL
  GROUP BY curr_me, curr_desc
),

unioned AS (
  SELECT * FROM prev_bal
  UNION ALL SELECT * FROM new_acct
  UNION ALL SELECT * FROM closed_acct
  UNION ALL SELECT * FROM xfer_in
  UNION ALL SELECT * FROM xfer_out
  UNION ALL SELECT * FROM bal_chg
  UNION ALL SELECT * FROM curr_bal
)

SELECT
  month_end,
  rc_description,
  movement_type,
  exposure_change,
  account_count
FROM unioned
ORDER BY month_end DESC,
         rc_description,
         CASE movement_type
           WHEN 'Previous Balance' THEN 1
           WHEN 'New Account'      THEN 2
           WHEN 'Closed Account'   THEN 3
           WHEN 'Transfer In'      THEN 4
           WHEN 'Transfer Out'     THEN 5
           WHEN 'Balance Change'   THEN 6
           WHEN 'Current Balance'  THEN 7
           ELSE 99
         END;








Waterfall Amount (Sel, Total Aware) =
VAR step = SELECTEDVALUE ( 'Waterfall Steps'[Step] )
VAR prevBal = [Exposure Prev (Sel)]
VAR newAcc  = [Δ New (Sel)]
VAR closed  = [Δ Closed (Sel)]
VAR xin     = [Δ Xfer In (Sel)]
VAR xout    = [Δ Xfer Out (Sel)]
VAR balchg  = [Δ Balance Change (Sel)]
VAR currBal = [Exposure Curr (Sel)]
RETURN
SWITCH (
    TRUE(),
    step = "Previous Balance", prevBal,
    step = "New Accounts",     newAcc,
    step = "Closed Accounts",  closed,
    step = "Transfers In",     xin,
    step = "Transfers Out",    xout,
    step = "Balance Change",   balchg,
    step = "Current Balance",  currBal - (
        prevBal + newAcc + closed + xin + xout + balchg
    ),   -- ✅ this forces Power BI to treat it as a total reset
    BLANK()
)




Waterfall Steps =
DATATABLE(
    "Step", STRING, "IsTotal", BOOLEAN,
    {
        {"Previous Balance", TRUE()},
        {"New Accounts", FALSE()},
        {"Closed Accounts", FALSE()},
        {"Transfers In", FALSE()},
        {"Transfers Out", FALSE()},
        {"Balance Change", FALSE()},
        {"Current Balance", TRUE()}
    }
)




Selected Month =
SELECTEDVALUE ( 'Date'[MonthEnd], CALCULATE ( MAX ( 'Date'[MonthEnd] ), ALL ( 'Date' ) ) )

Exposure Prev (Sel) =
VAR pm = EOMONTH ( [Selected Month], -1 )
RETURN
CALCULATE ( SUM ( RC_Code_Model_Base[Actual] ), RC_Code_Model_Base[MONTH_END] = pm )

Exposure Curr (Sel) =
VAR lm = [Selected Month]
RETURN
CALCULATE ( SUM ( RC_Code_Model_Base[Actual] ), RC_Code_Model_Base[MONTH_END] = lm )

Δ New (Sel) =
VAR lm = [Selected Month]
RETURN COALESCE (
    CALCULATE (
        SUM ( RC_Exposure_Flow[Exposure_Change] ),
        RC_Exposure_Flow[MONTH_END] = lm,
        RC_Exposure_Flow[Movement_Type] = "New Account"
    ), 0
)

Δ Closed (Sel) =
VAR lm = [Selected Month]
RETURN COALESCE (
    CALCULATE (
        SUM ( RC_Exposure_Flow[Exposure_Change] ),
        RC_Exposure_Flow[MONTH_END] = lm,
        RC_Exposure_Flow[Movement_Type] = "Closed Account"
    ), 0
)

Δ Xfer In (Sel) =
VAR lm = [Selected Month]
RETURN COALESCE (
    CALCULATE (
        SUM ( RC_Exposure_Flow[Exposure_Change] ),
        RC_Exposure_Flow[MONTH_END] = lm,
        RC_Exposure_Flow[Movement_Type] = "Transfer In"
    ), 0
)

Δ Xfer Out (Sel) =
VAR lm = [Selected Month]
RETURN COALESCE (
    CALCULATE (
        SUM ( RC_Exposure_Flow[Exposure_Change] ),
        RC_Exposure_Flow[MONTH_END] = lm,
        RC_Exposure_Flow[Movement_Type] = "Transfer Out"
    ), 0
)

Δ Balance Change (Sel) =
VAR lm = [Selected Month]
RETURN COALESCE (
    CALCULATE (
        SUM ( RC_Exposure_Flow[Exposure_Change] ),
        RC_Exposure_Flow[MONTH_END] = lm,
        RC_Exposure_Flow[Movement_Type] = "Balance Change"
    ), 0
)

Waterfall Steps =
DATATABLE(
    "Step", STRING,
    {
        {"Previous Balance"},
        {"New Accounts"},
        {"Closed Accounts"},
        {"Transfers In"},
        {"Transfers Out"},
        {"Balance Change"}
        -- no "Current Balance" here
    }
)

Waterfall Amount (Sel) =
SWITCH (
    SELECTEDVALUE ( 'Waterfall Steps'[Step] ),
    "Previous Balance", [Exposure Prev (Sel)],
    "New Accounts",     [Δ New (Sel)],
    "Closed Accounts",  [Δ Closed (Sel)],
    "Transfers In",     [Δ Xfer In (Sel)],
    "Transfers Out",    [Δ Xfer Out (Sel)],
    "Balance Change",   [Δ Balance Change (Sel)],
    0
)







Waterfall Steps =
DATATABLE(
    "Step", STRING,
    {
        {"Previous Balance"},
        {"New Accounts"},
        {"Closed Accounts"},
        {"Transfers In"},
        {"Transfers Out"},
        {"Balance Change"},
        {"Current Balance"}
    }
)

-- Month helpers (use your Date table if preferred)
Latest Month =
CALCULATE ( MAX ( RC_Code_Model_Base[MONTH_END] ), ALL ( RC_Code_Model_Base ) )

Prior Month =
EOMONTH ( [Latest Month], -1 )

-- Start/end amounts (use your actuals)
Exposure Prev (Latest) =
VAR pm = [Prior Month]
RETURN
CALCULATE ( SUM ( RC_Code_Model_Base[Actual] ), RC_Code_Model_Base[MONTH_END] = pm )

Exposure Curr (Latest) =
VAR lm = [Latest Month]
RETURN
CALCULATE ( SUM ( RC_Code_Model_Base[Actual] ), RC_Code_Model_Base[MONTH_END] = lm )

-- Movement deltas from your flow table
Δ New (Latest) =
VAR lm = [Latest Month]
RETURN
CALCULATE (
    SUM ( RC_Exposure_Flow[Exposure_Change] ),
    RC_Exposure_Flow[MONTH_END] = lm,
    RC_Exposure_Flow[Movement_Type] = "New Account"
)

Δ Closed (Latest) =
VAR lm = [Latest Month]
RETURN
CALCULATE (
    SUM ( RC_Exposure_Flow[Exposure_Change] ),
    RC_Exposure_Flow[MONTH_END] = lm,
    RC_Exposure_Flow[Movement_Type] = "Closed Account"
)

Δ Xfer In (Latest) =
VAR lm = [Latest Month]
RETURN
CALCULATE (
    SUM ( RC_Exposure_Flow[Exposure_Change] ),
    RC_Exposure_Flow[MONTH_END] = lm,
    RC_Exposure_Flow[Movement_Type] = "Transfer In"
)

Δ Xfer Out (Latest) =
VAR lm = [Latest Month]
RETURN
CALCULATE (
    SUM ( RC_Exposure_Flow[Exposure_Change] ),
    RC_Exposure_Flow[MONTH_END] = lm,
    RC_Exposure_Flow[Movement_Type] = "Transfer Out"
)

Δ Balance Change (Latest) =
VAR lm = [Latest Month]
RETURN
CALCULATE (
    SUM ( RC_Exposure_Flow[Exposure_Change] ),
    RC_Exposure_Flow[MONTH_END] = lm,
    RC_Exposure_Flow[Movement_Type] = "Balance Change"
)

Waterfall Amount (Latest) =
SWITCH (
    SELECTEDVALUE ( 'Waterfall Steps'[Step] ),
    "Previous Balance", [Exposure Prev (Latest)],
    "New Accounts",     [Δ New (Latest)],
    "Closed Accounts",  [Δ Closed (Latest)],   -- should already be negative if built that way
    "Transfers In",     [Δ Xfer In (Latest)],
    "Transfers Out",    [Δ Xfer Out (Latest)], -- expect negative
    "Balance Change",   [Δ Balance Change (Latest)],
    "Current Balance",  [Exposure Curr (Latest)],
    BLANK()
)








=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE],
       Pop[END_OF_MONTH_DATE], CurrEOM,
       Pop[Prev_SSB], 0,
       Pop[Curr_RBC_Flag], "N")

=-SUMIFS(Pop[SOURCE_SYSTEM_BALANCE],
        Pop[END_OF_MONTH_DATE], PrevEOM,
        Pop[Curr_SSB], 0,
        Pop[Prev_RBC_Flag], "N")

= SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[END_OF_MONTH_DATE], CurrEOM, Pop[Curr_RBC_Flag], "Y")
 -SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[END_OF_MONTH_DATE], PrevEOM, Pop[Prev_RBC_Flag], "Y")

=SUMIFS(Pop[Exposure_Delta],
       Pop[END_OF_MONTH_DATE], CurrEOM,
       Pop[Prev_SSB], ">0",
       Pop[Exposure_Delta], "<>0",
       Pop[Curr_RBC_Flag], "N")

=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[END_OF_MONTH_DATE], CurrEOM)










=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE],
       Pop[END_OF_MONTH_DATE], CurrEOM,
       Pop[Prev_SSB], 0,
       Pop[Curr_RBC_Flag], "N")





=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[MonthFlag], "PREV")

=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE],
       Pop[MonthFlag], "CURR",
       Pop[MoM_Status], "Downgrade IN",
       Pop[AutoChangeFlag], "N")

=-SUMIFS(Pop[SOURCE_SYSTEM_BALANCE],
        Pop[MonthFlag], "PREV",
        Pop[Curr_SSB], 0,
        Pop[AutoChangeFlag], "N")

= SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[MonthFlag], "CURR", Pop[RBC_CODE], "R")
 -SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[MonthFlag], "PREV", Pop[RBC_CODE], "R")

=SUMIFS(Pop[Exposure_Delta],
       Pop[MonthFlag], "CURR",
       Pop[MoM_Status], "Persisting Bal Change",
       Pop[AutoChangeFlag], "N")

=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[MonthFlag], "CURR")







=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[END_OF_MONTH_DATE], PrevEOM, Pop[Normalized_ID], [@Normalized_ID])

=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[END_OF_MONTH_DATE], CurrEOM, Pop[Normalized_ID], [@Normalized_ID])

=IF([@MonthFlag]="CURR", [@SOURCE_SYSTEM_BALANCE]-[@Prev_SSB], 0)

=IF(
   OR(
      COUNTIFS(Pop[END_OF_MONTH_DATE],PrevEOM, Pop[Normalized_ID],[@Normalized_ID], Pop[RBC_CODE],"R")>0,
      COUNTIFS(Pop[END_OF_MONTH_DATE],CurrEOM, Pop[Normalized_ID],[@Normalized_ID], Pop[RBC_CODE],"R")>0
   ),
   "Y","N"
)

=IF([@MonthFlag]<>"CURR","",
   IF([@Prev_SSB]=0,"Downgrade IN",
   IF([@Exposure_Delta]<>0,"Persisting Bal Change","Persisting No Bal Change")))







=SUM(--(FREQUENCY(MATCH(IF(Pop[END_OF_MONTH_DATE]=PrevEOM,Pop[ACCOUNT_IDENTIFIER]),IF(Pop[END_OF_MONTH_DATE]=PrevEOM,Pop[ACCOUNT_IDENTIFIER]),0),ROW(Pop[ACCOUNT_IDENTIFIER])-ROW(FIRSTCELL)+1)>0))






-- ======================= RC Exposure Flow (Adds/Drops/Transfers) ========================
-- Compares current vs prior month exposures by RC per Account_Identifier.
-- Detects: New, Closed, Transfer In/Out, and Balance Change.
-- ========================================================================================

WITH base AS (
  SELECT
    Account_Identifier,
    RC_CODE,
    RC_DESCRIPTION,
    CAST(END_OF_MONTH_DATE AS DATE) AS month_end,
    SOURCE_SYSTEM_BALANCE::FLOAT8   AS exposure
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE GL_ACCOUNT_HIER_LEVEL_4 = 'Total Loans'
),

lagged AS (
  SELECT
    b.Account_Identifier,
    b.RC_CODE AS curr_rc,
    b.RC_DESCRIPTION AS curr_rc_desc,
    b.month_end,
    b.exposure AS curr_exp,
    LAG(b.RC_CODE)        OVER (PARTITION BY b.Account_Identifier ORDER BY b.month_end) AS prev_rc,
    LAG(b.RC_DESCRIPTION) OVER (PARTITION BY b.Account_Identifier ORDER BY b.month_end) AS prev_rc_desc,
    LAG(b.exposure)       OVER (PARTITION BY b.Account_Identifier ORDER BY b.month_end) AS prev_exp,
    LAG(b.month_end)      OVER (PARTITION BY b.Account_Identifier ORDER BY b.month_end) AS prev_me
  FROM base b
),

movements AS (
  SELECT
    month_end,
    curr_rc_desc AS rc_description,
    CASE
      WHEN prev_rc IS NULL AND curr_rc IS NOT NULL THEN 'New Account'
      WHEN prev_rc IS NOT NULL AND curr_rc IS NULL THEN 'Closed Account'
      WHEN prev_rc <> curr_rc AND prev_rc IS NOT NULL AND curr_rc IS NOT NULL THEN
           CASE WHEN curr_rc_desc <> prev_rc_desc THEN 'Transfer In' ELSE 'Transfer Out' END
      ELSE 'Balance Change'
    END AS movement_type,
    SUM(COALESCE(curr_exp,0) - COALESCE(prev_exp,0)) AS exposure_change,
    COUNT(DISTINCT Account_Identifier) AS account_count
  FROM lagged
  WHERE prev_me = ADD_MONTHS(month_end, -1)
  GROUP BY month_end, curr_rc_desc,
           CASE
             WHEN prev_rc IS NULL AND curr_rc IS NOT NULL THEN 'New Account'
             WHEN prev_rc IS NOT NULL AND curr_rc IS NULL THEN 'Closed Account'
             WHEN prev_rc <> curr_rc AND prev_rc IS NOT NULL AND curr_rc IS NOT NULL THEN
                  CASE WHEN curr_rc_desc <> prev_rc_desc THEN 'Transfer In' ELSE 'Transfer Out' END
             ELSE 'Balance Change'
           END
)

SELECT * FROM movements
ORDER BY month_end DESC, rc_description, movement_type;







=IFERROR(
  SUMIFS(Pop[SOURCE_SYSTEM_BALANCE],
         Pop[END_OF_MONTH_DATE], CurrEOM,
         Pop[Prev_SSB], 0,
         Pop[AutoChangeFlag], "N"),
  0
)

=IFERROR(
 -SUMIFS(Pop[SOURCE_SYSTEM_BALANCE],
         Pop[END_OF_MONTH_DATE], PrevEOM,
         Pop[Curr_SSB], 0,
         Pop[AutoChangeFlag], "N"),
 0
)

=IFERROR(
  SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[END_OF_MONTH_DATE], CurrEOM, Pop[AutoChangeFlag], "Y")
 -SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[END_OF_MONTH_DATE], PrevEOM,  Pop[AutoChangeFlag], "Y"),
 0
)

=IFERROR(
  SUMIFS(Pop[Exposure_Delta],
         Pop[END_OF_MONTH_DATE], CurrEOM,
         Pop[Prev_SSB], ">0",
         Pop[Exposure_Delta], "<>0",
         Pop[AutoChangeFlag], "N"),
 0
)

=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[END_OF_MONTH_DATE], CurrEOM)




=IF(
  COUNTIFS(
    Pop[END_OF_MONTH_DATE], $B$1,
    Pop[Normalized_ID], [@Normalized_ID],
    Pop[NON_ACCRUAL_FLAG], "Y"
  ) > 0,
  "Y",
  ""
)




=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[END_OF_MONTH_DATE], $B$1, Pop[Normalized_ID], [@Normalized_ID])

=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[END_OF_MONTH_DATE], $B$2, Pop[Normalized_ID], [@Normalized_ID])

=IF(COUNTIFS(Pop[END_OF_MONTH_DATE], $B$1, Pop[Normalized_ID], [@Normalized_ID], Pop[NON_ACCRUAL_FLAG], "Y)>0, "Y", "")

=IF(COUNTIFS(Pop[END_OF_MONTH_DATE], $B$1, Pop[Normalized_ID], [@Normalized_ID], Pop[RBC_CODE], "R")>0, "R", "")

=IF(OR(UPPER(TRIM([@RBC_CODE]))="R", [@Prev_RBC]="R"), "Y", "N")

=IF([@END_OF_MONTH_DATE]=$B$2, [@SOURCE_SYSTEM_BALANCE]-[@Prev_SSB], "")






=IF(TRIM([@ACCOUNT_IDENTIFIER])="","§NULL§", UPPER(TRIM([@ACCOUNT_IDENTIFIER])))





=LET(
  id, [@ACCOUNT_IDENTIFIER],
  XLOOKUP(
    id,
    FILTER(Pop[ACCOUNT_IDENTIFIER], Pop[END_OF_MONTH_DATE]=$B$2),
    FILTER(Pop[SOURCE_SYSTEM_BALANCE], Pop[END_OF_MONTH_DATE]=$B$2),
    ""
  )
)






=IF(UPPER(TRIM([@RBC_CODE]))="R","Y","N")

Item
Amount (formula)
Prev Month Non-Accrual Bal
=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[MonthFlag],"PREV")
Downgrade IN (ex-Auto)
=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[MonthFlag],"CURR", Pop[MoM_Status],"Downgrade IN", Pop[AutoChangeFlag],"N")
Exits (ex-Auto)
=-SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[MonthFlag],"PREV", Pop[Curr_SSB],"", Pop[AutoChangeFlag],"N")
Autochange (net)
=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[MonthFlag],"CURR", Pop[RBC_CODE],"R") - SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[MonthFlag],"PREV", Pop[RBC_CODE],"R")
Persisting Bal Change (ex-Auto)
=SUMIFS(Pop[Exposure_Delta], Pop[MonthFlag],"CURR", Pop[MoM_Status],"Persisting Bal Change", Pop[AutoChangeFlag],"N")
Persisting No Change
=0
Current Month Bal
=SUMIFS(Pop[SOURCE_SYSTEM_BALANCE], Pop[MonthFlag],"CURR")






=IF([@END_OF_MONTH_DATE]=$B$2,"CURR",IF([@END_OF_MONTH_DATE]=$B$1,"PREV",""))

=LET(
  id, [@ACCOUNT_IDENTIFIER],
  XLOOKUP(
    id,
    FILTER(Pop[ACCOUNT_IDENTIFIER],Pop[END_OF_MONTH_DATE]=$B$1),
    FILTER(Pop[RBC_CODE],         Pop[END_OF_MONTH_DATE]=$B$1),
    ""
  )
)

=IF(OR(UPPER(TRIM([@RBC_CODE]))="R", UPPER(TRIM([@Prev_RBC]))="R"), "Y", "N")

=LET(
  id, [@ACCOUNT_IDENTIFIER],
  XLOOKUP(
    id,
    FILTER(Pop[ACCOUNT_IDENTIFIER],Pop[END_OF_MONTH_DATE]=$B$2),
    FILTER(Pop[SOURCE_SYSTEM_BALANCE],Pop[END_OF_MONTH_DATE]=$B$2),
    ""
  )
)






=LET(
  prod, UPPER(TRIM([@PROD_HIER_LEVEL_5])),
  bank, UPPER(TRIM([@BANK_CODE])),
  bal,  N([@SOURCE_SYSTEM_BALANCE]),
  css,  UPPER(TRIM([@CONTRACT_SOURCE_SYSTEM])),
  rbc,  UPPER(TRIM([@RBC_CODE])),

  isSamyaProd, prod="BUSINESS RE TERM LOANS",
  isCaseyProd, OR(prod="BUSINESS NON-RE TERM LOANS", prod="BUSINESS COMMITMENT DRAW"),
  isLCIT,      bank="L-CIT",

  IFS(
    /* Samya ≥ 500k */
    AND(isSamyaProd, isLCIT, bal>=500000), "Samya",
    /* Casey ≥ 250k */
    AND(isCaseyProd, isLCIT, bal>=250000), "Casey",

    /* Samya under-threshold (meets criteria but <500k) */
    AND(isSamyaProd, isLCIT, bal<500000),  "Under $500k; Not Reviewed",

    /* Casey under-threshold (meets criteria but <250k) */
    AND(isCaseyProd, isLCIT, bal<250000),  "Under $250k; Not Reviewed",

    /* Remaining buckets in stated precedence */
    css="INFL10", "Daniel",
    bank="L-SVB", "Eleanor",
    rbc="R",      "Autochange",
    bank="L-FCB", "Connor",
    TRUE,         "NOT REVIEWED"
  )
)


=LET(
  id,  [@ACCOUNT_IDENTIFIER],
  prev, XLOOKUP(
          id,
          FILTER(Pop[ACCOUNT_IDENTIFIER], Pop[END_OF_MONTH_DATE]=$B$1),
          FILTER(Pop[SOURCE_SYSTEM_BALANCE], Pop[END_OF_MONTH_DATE]=$B$1),
          ""
        ),
  N(prev)
)


=LET(
  id,  [@ACCOUNT_IDENTIFIER],
  XLOOKUP(
    id,
    FILTER(Pop[ACCOUNT_IDENTIFIER], Pop[END_OF_MONTH_DATE]=$B$1),
    FILTER(Pop[NON_ACCRUAL_FLAG],  Pop[END_OF_MONTH_DATE]=$B$1),
    ""
  )
)

=LET(
  rowDate, [@END_OF_MONTH_DATE],
  currBal, N([@SOURCE_SYSTEM_BALANCE]),
  currFlag, UPPER(TRIM([@NON_ACCRUAL_FLAG])),
  prevBal,  N([@Prev_SSB]),
  prevFlag, UPPER(TRIM([@Prev_NA_Flag])),

  /* Does this account appear in current month at all (from a prev row)? */
  currBalFromPrev, XLOOKUP(
                      [@ACCOUNT_IDENTIFIER],
                      FILTER(Pop[ACCOUNT_IDENTIFIER], Pop[END_OF_MONTH_DATE]=$B$2),
                      FILTER(Pop[SOURCE_SYSTEM_BALANCE], Pop[END_OF_MONTH_DATE]=$B$2),
                      ""
                    ),

  IF(
    rowDate=$B$2,
      /* We’re on a CURRENT-MONTH row */
      IF(AND(prevFlag<>"Y", currFlag="Y"), "Downgrade IN",
      IF(AND(prevFlag="Y",  currFlag="Y", currBal<>prevBal), "Persisting Bal Change",
      IF(AND(prevFlag="Y",  currFlag="Y", currBal=prevBal),  "Persisting No Bal Change",
         "" ))),
    /* Else: we’re on a PREV-MONTH row — only show EXITs here */
    IF(AND(rowDate=$B$1, currBalFromPrev=""), "EXIT", "")
  )
)








=LET(
  prod, UPPER(TRIM([@PROD_HIER_LEVEL_5])),
  bank, UPPER(TRIM([@BANK_CODE])),
  bal,  N([@SOURCE_SYSTEM_BALANCE]),
  css,  UPPER(TRIM([@CONTRACT_SOURCE_SYSTEM])),
  rbc,  UPPER(TRIM([@RBC_CODE])),
  IFS(
    AND(prod="BUSINESS RE TERM LOANS", bank="L-CIT", bal>500000), "Samya",
    AND(OR(prod="BUSINESS NON-RE TERM LOANS", prod="BUSINESS COMMITMENT DRAW"), bank="L-CIT", bal>250000), "Casey",
    css="INFL10", "Daniel",
    bank="L-SVB", "Eleanor",
    rbc="R", "Autochange",
    bank="L-FCB", "Connor",
    TRUE, "NOT REVIEWED"
  )
)





Client Pain Point
Breslin Analytics Solution
