    AVERAGE ( RC_Code_Model_Base[Severity_0_100] ),
    TREATAS ( ROW ( "d", lm ), RC_Code_Model_Base[MONTH_END] ),
    TREATAS ( VALUES ( Dim_RC[RC_DESCRIPTION] ), RC_Code_Model_Base[RC_DESCRIPTION] )
)


ML Anomaly Pctl (Latest) =
