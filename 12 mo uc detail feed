/* Last 12 EOM SEC_UNFUNDED for ApplID='LO' with Cards removed */
SET NOCOUNT ON;

WITH MaxEOM AS (
    SELECT EOMONTH(MAX(CAST(LoadDate AS DATE))) AS curr_eom
    FROM CRDLMTUFCALC.dbo.CREDIT_LINE_MONTHLY
),
Months AS (
    SELECT 0 AS n, curr_eom AS eom FROM MaxEOM
    UNION ALL
    SELECT n + 1, EOMONTH(DATEADD(MONTH, -1, eom))
    FROM Months
    WHERE n < 11
),
Cards AS (  -- date-scoped exclusion
    SELECT DISTINCT CAST(LOADDT AS DATE) AS LoadDate,
           CUST_LINE_NBR                AS CreditLineNumber
    FROM CRDADMPRD.CRDADMPRD.dbo.CDM_CARDS_LOAN
    WHERE CAST(LOADDT AS DATE) IN (SELECT eom FROM Months)
),
CLM AS (
    SELECT
        CAST(a.LoadDate AS DATE) AS LoadDate,
        a.CreditLineNumber,
        a.ApplID,
        a.RunID,
        ROW_NUMBER() OVER (
            PARTITION BY CAST(a.LoadDate AS DATE), a.CreditLineNumber
            ORDER BY a.RunID DESC
        ) AS rn
    FROM CRDLMTUFCALC.dbo.CREDIT_LINE_MONTHLY a
    WHERE CAST(a.LoadDate AS DATE) IN (SELECT eom FROM Months)
),
CLM_Latest AS (
    SELECT * FROM CLM WHERE rn = 1 AND ApplID = 'LO'
),
UF AS (
    SELECT
        CAST(b.LoadDate AS DATE) AS LoadDate,
        b.CreditLineNumber,
        b.SecUnfunded,
        b.RunID,
        ROW_NUMBER() OVER (
            PARTITION BY CAST(b.LoadDate AS DATE), b.CreditLineNumber
            ORDER BY b.RunID DESC
        ) AS rn
    FROM CRDLMTUFCALC.dbo.CALCULATED_UNFUNDED b
    WHERE CAST(b.LoadDate AS DATE) IN (SELECT eom FROM Months)
),
UF_Latest AS (
    SELECT * FROM UF WHERE rn = 1
)
SELECT
    u.LoadDate        AS EOM,
    SUM(u.SecUnfunded) AS SEC_UNFUNDED
FROM CLM_Latest c
JOIN UF_Latest u
  ON u.LoadDate = c.LoadDate
 AND u.CreditLineNumber = c.CreditLineNumber
LEFT JOIN Cards x
  ON x.LoadDate = u.LoadDate
 AND x.CreditLineNumber = u.CreditLineNumber
WHERE x.CreditLineNumber IS NULL          -- exclude Cards (date-scoped)
GROUP BY u.LoadDate
ORDER BY u.LoadDate
OPTION (MAXRECURSION 12);






/* === Trend of SEC_UNFUNDED for system = 'UBS' over the last 12 month-ends === */
/* Finds latest EOM from CREDIT_LINE_MONTHLY, generates prior 11 EOMs, gets latest rows per date/line,
   applies Cards tagging first (date-scoped), then system mapping incl. UBS, and aggregates. */

SET NOCOUNT ON;

/* Latest EOM present in CLM */
WITH MaxEOM AS (
    SELECT EOMONTH(MAX(CAST(LoadDate AS DATE))) AS curr_eom
    FROM CRDLMTUFCALC.dbo.CREDIT_LINE_MONTHLY
),
/* Last 12 month-ends, starting from latest present */
Months AS (
    SELECT 0 AS n, curr_eom AS eom
    FROM MaxEOM
    UNION ALL
    SELECT n + 1,
           EOMONTH(DATEADD(MONTH, -1, eom))
    FROM Months
    WHERE n < 11
),
/* Cards tagging (date-scoped) limited to our 12 months */
Cards AS (
    SELECT DISTINCT CAST(c.LOADDT AS DATE) AS LoadDate,
           c.CUST_LINE_NBR                 AS CreditLineNumber
    FROM CRDADMPRD.CRDADMPRD.dbo.CDM_CARDS_LOAN c
    WHERE CAST(c.LOADDT AS DATE) IN (SELECT eom FROM Months)
),
/* Latest CLM per date & line */
CLM AS (
    SELECT
        CAST(a.LoadDate AS DATE) AS LoadDate,
        a.CreditLineNumber,
        a.NetUtilized,
        a.ApplID,
        a.RunID,
        ROW_NUMBER() OVER (
            PARTITION BY CAST(a.LoadDate AS DATE), a.CreditLineNumber
            ORDER BY a.RunID DESC
        ) AS rn
    FROM CRDLMTUFCALC.dbo.CREDIT_LINE_MONTHLY a
    WHERE CAST(a.LoadDate AS DATE) IN (SELECT eom FROM Months)
),
CLM_Latest AS (
    SELECT * FROM CLM WHERE rn = 1
),
/* Latest Unfunded per date & line */
UF AS (
    SELECT
        CAST(b.LoadDate AS DATE) AS LoadDate,
        b.CreditLineNumber,
        b.SecUnfunded,
        b.RunID,
        ROW_NUMBER() OVER (
            PARTITION BY CAST(b.LoadDate AS DATE), b.CreditLineNumber
            ORDER BY b.RunID DESC
        ) AS rn
    FROM CRDLMTUFCALC.dbo.CALCULATED_UNFUNDED b
    WHERE CAST(b.LoadDate AS DATE) IN (SELECT eom FROM Months)
),
UF_Latest AS (
    SELECT * FROM UF WHERE rn = 1
),
/* Tag system — Cards first (date-scoped), then other mappings incl. UBS */
Flux AS (
    SELECT
        c.LoadDate,
        c.CreditLineNumber,
        c.NetUtilized,
        COALESCE(u.SecUnfunded, 0.0) AS SecUnfunded,
        c.ApplID,
        CASE
            WHEN EXISTS (
                SELECT 1 FROM Cards x
                WHERE x.LoadDate = c.LoadDate
                  AND x.CreditLineNumber = c.CreditLineNumber
            ) THEN 'Cards'
            WHEN c.ApplID IN ('CF')                     THEN 'CFD'
            WHEN c.ApplID IN ('ML')                     THEN 'Miser Lines'
            WHEN c.ApplID IN ('MO')                     THEN 'Miser Mortgage'
            WHEN c.CreditLineNumber LIKE '%iMX%'        THEN 'iMX'
            WHEN c.ApplID IN ('LN')                     THEN 'CBS'
            WHEN c.ApplID IN ('LO')                     THEN 'UBS'
            WHEN c.ApplID IN ('LJ')                     THEN 'LJ'
            ELSE NULL
        END AS [system]
    FROM CLM_Latest c
    LEFT JOIN UF_Latest u
      ON u.LoadDate = c.LoadDate
     AND u.CreditLineNumber = c.CreditLineNumber
)
/* Aggregate to monthly trend for UBS with MoM deltas */
SELECT
    f.LoadDate                                 AS [EOM],
    SUM(f.SecUnfunded)                         AS [SEC_UNFUNDED],
    SUM(f.SecUnfunded)
      - LAG(SUM(f.SecUnfunded)) OVER (ORDER BY f.LoadDate)               AS [MoM_Change],
    CASE
        WHEN LAG(SUM(f.SecUnfunded)) OVER (ORDER BY f.LoadDate) = 0 THEN NULL
        ELSE (SUM(f.SecUnfunded)
             - LAG(SUM(f.SecUnfunded)) OVER (ORDER BY f.LoadDate))
             / NULLIF(LAG(SUM(f.SecUnfunded)) OVER (ORDER BY f.LoadDate), 0.0)
    END                                          AS [MoM_Change_Pct]
FROM Flux f
WHERE f.[system] = 'UBS'
GROUP BY f.LoadDate
ORDER BY f.LoadDate
OPTION (MAXRECURSION 12);






/* Clean up temp tables */
IF OBJECT_ID('tempdb..#FLUX')   IS NOT NULL DROP TABLE #FLUX;
IF OBJECT_ID('tempdb..#CARDS')  IS NOT NULL DROP TABLE #CARDS;

/* Params */
DECLARE @system NVARCHAR(150);
DECLARE @current_period DATETIME = '2025-10-31';
DECLARE @prior_period   DATETIME = '2025-09-30';

/* Cards for system tagging */
SELECT DISTINCT LOADDT, CUST_LINE_NBR
INTO #CARDS
FROM CRDADMPRD.CRDADMPRD.dbo.CDM_CARDS_LOAN
WHERE CAST(LOADDT AS DATE) IN (@current_period, @prior_period);

/* === Latest row per table, per date & credit line === */
WITH CLM AS (
    SELECT
        CAST(a.LoadDate AS DATE) AS LoadDate,
        a.CreditLineNumber,
        a.NetUtilized,
        a.ApplID,
        a.RunID,
        ROW_NUMBER() OVER (
            PARTITION BY CAST(a.LoadDate AS DATE), a.CreditLineNumber
            ORDER BY a.RunID DESC
        ) AS rn
    FROM CRDLMTUFCALC.dbo.CREDIT_LINE_MONTHLY a
    WHERE CAST(a.LoadDate AS DATE) IN (@current_period, @prior_period)
),
CLM_Latest AS (
    SELECT * FROM CLM WHERE rn = 1
),
UF AS (
    SELECT
        CAST(b.LoadDate AS DATE) AS LoadDate,
        b.CreditLineNumber,
        b.SecUnfunded,
        b.RunID,
        ROW_NUMBER() OVER (
            PARTITION BY CAST(b.LoadDate AS DATE), b.CreditLineNumber
            ORDER BY b.RunID DESC
        ) AS rn
    FROM CRDLMTUFCALC.dbo.CALCULATED_UNFUNDED b
    WHERE CAST(b.LoadDate AS DATE) IN (@current_period, @prior_period)
),
UF_Latest AS (
    SELECT * FROM UF WHERE rn = 1
)

/* Build flux set (one row per date & credit line) */
SELECT
    c.LoadDate,
    c.CreditLineNumber,
    (c.NetUtilized + COALESCE(u.SecUnfunded, 0)) AS commitment,
    c.NetUtilized,
    COALESCE(u.SecUnfunded, 0) AS SecUnfunded,
    c.ApplID,
    @system AS [system]
INTO #FLUX
FROM CLM_Latest c
LEFT JOIN UF_Latest u
  ON u.LoadDate = c.LoadDate
 AND u.CreditLineNumber = c.CreditLineNumber;

/* System tagging (date-scoped) */
UPDATE f
SET    [system] = 'Cards'
FROM   #FLUX f
JOIN   #CARDS c
  ON   c.CUST_LINE_NBR = f.CreditLineNumber
 AND   CAST(c.LOADDT AS DATE) = f.LoadDate
WHERE  f.[system] IS NULL;

UPDATE #FLUX SET [system] = 'CFD'            WHERE ApplID IN ('CF')         AND [system] IS NULL;
UPDATE #FLUX SET [system] = 'Miser Lines'    WHERE ApplID IN ('ML')         AND [system] IS NULL;
UPDATE #FLUX SET [system] = 'Miser Mortgage' WHERE ApplID IN ('MO')         AND [system] IS NULL;
UPDATE #FLUX SET [system] = 'iMX'            WHERE CreditLineNumber LIKE '%iMX%' AND [system] IS NULL;
UPDATE #FLUX SET [system] = 'CBS'            WHERE ApplID IN ('LN')         AND [system] IS NULL;
UPDATE #FLUX SET [system] = 'UBS'            WHERE ApplID IN ('LO')         AND [system] IS NULL;
UPDATE #FLUX SET [system] = 'LJ'             WHERE ApplID IN ('LJ')         AND [system] IS NULL;

/* Results */
SELECT *
FROM #FLUX;





/*=============================================================
NULL checks for CRR / RBS / FDIC on a manually specified date
Now also filters to only rows with non-null/non-zero exposure
===============================================================*/

DECLARE @AsOfDate date = '2025-09-30';  -- << set your snapshot date here

/* Sargable date window: [@AsOfDate, @AsOfDate + 1) */
WITH date_window AS (
    SELECT 
        start_dt = CAST(@AsOfDate AS datetime2(0)),
        end_dt   = DATEADD(day, 1, CAST(@AsOfDate AS datetime2(0)))
),

/*======== Credit Lines: CRR/RBS/FDIC NULLs, with exposures ========*/
creditline_nulls AS (
    SELECT
        SourceTable    = 'CDM_CREDITLINES_ALL_TOPSIDED',
        IdentifierType = 'CUST_LINE_NBR',
        Identifier     = CAST(L.CUST_LINE_NBR AS varchar(64)),
        AsOfDate       = CAST(L.LOADDT AS date),

        CRR  = L.RISK_CD,
        RBS  = L.RISK_BAS_SEG_CD,
        FDIC = L.FDIC_CD,

        SEC_Exposure       = CAST(CASE WHEN ISNULL(L.SEC_UNFUNDED,0) <> 0 THEN L.SEC_UNFUNDED END AS decimal(38,6)),
        FRB_Exposure       = CAST(CASE WHEN ISNULL(L.FRB_UNFUNDED,0) <> 0 THEN L.FRB_UNFUNDED END AS decimal(38,6)),
        ACB_Exposure       = CAST(CASE WHEN ISNULL(L.AMORTIZED_COST_BASIS,0) <> 0 THEN L.AMORTIZED_COST_BASIS END AS decimal(38,6)),
        Derived_ACB_Exposure = CAST(NULL AS decimal(38,6))  -- not applicable for credit lines
    FROM CRDADMPRD.dbo.CDM_CREDITLINES_ALL_TOPSIDED L
    CROSS JOIN date_window w
    WHERE L.LOADDT >= w.start_dt AND L.LOADDT < w.end_dt
      AND (L.RISK_CD IS NULL OR L.RISK_BAS_SEG_CD IS NULL OR L.FDIC_CD IS NULL)
      AND (
            ISNULL(L.SEC_UNFUNDED,0) <> 0 OR 
            ISNULL(L.FRB_UNFUNDED,0) <> 0 OR 
            ISNULL(L.AMORTIZED_COST_BASIS,0) <> 0
          )
),

/*======== Instruments: CRR/RBS/FDIC NULLs, with exposures ========*/
instrument_nulls AS (
    SELECT
        SourceTable    = 'CDM_INSTRUMENTS_TOPSIDED',
        IdentifierType = 'ACCTNBR',
        Identifier     = CAST(I.ACCTNBR AS varchar(64)),
        AsOfDate       = CAST(I.LOADDT AS date),

        CRR  = I.RISKCD,
        RBS  = I.RISK_BAS_SEG_CD,
        FDIC = I.FDICCD,

        SEC_Exposure       = CAST(NULL AS decimal(38,6)),  -- not applicable for instruments
        FRB_Exposure       = CAST(NULL AS decimal(38,6)),  -- not applicable for instruments
        ACB_Exposure       = CAST(CASE WHEN ISNULL(I.AMORTIZED_COST_BASIS,0) <> 0 THEN I.AMORTIZED_COST_BASIS END AS decimal(38,6)),
        Derived_ACB_Exposure = CAST(CASE WHEN ISNULL(I.DERIVED_AMORTIZED_COST_BASIS,0) <> 0 THEN I.DERIVED_AMORTIZED_COST_BASIS END AS decimal(38,6))
    FROM CRDADMPRD.dbo.CDM_INSTRUMENTS_TOPSIDED I
    CROSS JOIN date_window w
    WHERE I.LOADDT >= w.start_dt AND I.LOADDT < w.end_dt
      AND (I.RISKCD IS NULL OR I.RISK_BAS_SEG_CD IS NULL OR I.FDICCD IS NULL)
      AND (
            ISNULL(I.AMORTIZED_COST_BASIS,0) <> 0 OR 
            ISNULL(I.DERIVED_AMORTIZED_COST_BASIS,0) <> 0
          )
)

/*======== Final unified output ========*/
SELECT
    SourceTable,
    IdentifierType,
    Identifier,
    AsOfDate,
    CRR,
    RBS,
    FDIC,
    SEC_Exposure,
    FRB_Exposure,
    ACB_Exposure,
    Derived_ACB_Exposure
FROM creditline_nulls

UNION ALL

SELECT
    SourceTable,
    IdentifierType,
    Identifier,
    AsOfDate,
    CRR,
    RBS,
    FDIC,
    SEC_Exposure,
    FRB_Exposure,
    ACB_Exposure,
    Derived_ACB_Exposure
FROM instrument_nulls
ORDER BY SourceTable, Identifier;






/*=============================================================
NULL checks for CRR / RBS / FDIC on a manually specified date
- Uses sargable range filter on LOADDT
- Unifies outputs from Credit Lines and Instruments
===============================================================*/

DECLARE @AsOfDate date = '2025-09-30';  -- << set your date here

/* Sargable date window: [@AsOfDate, @AsOfDate + 1) */
WITH date_window AS (
    SELECT 
        start_dt = CAST(@AsOfDate AS datetime2(0)),
        end_dt   = DATEADD(day, 1, CAST(@AsOfDate AS datetime2(0)))
),

/*======== Credit Lines: CRR/RBS/FDIC NULLs, with exposures ========*/
creditline_nulls AS (
    SELECT
        SourceTable    = 'CDM_CREDITLINES_ALL_TOPSIDED',
        IdentifierType = 'CUST_LINE_NBR',
        Identifier     = CAST(L.CUST_LINE_NBR AS varchar(64)),
        AsOfDate       = CAST(L.LOADDT AS date),

        CRR  = L.RISK_CD,
        RBS  = L.RISK_BAS_SEG_CD,
        FDIC = L.FDIC_CD,

        SEC_Exposure       = CAST(CASE WHEN ISNULL(L.SEC_UNFUNDED,0) <> 0 THEN L.SEC_UNFUNDED END AS decimal(38,6)),
        FRB_Exposure       = CAST(CASE WHEN ISNULL(L.FRB_UNFUNDED,0) <> 0 THEN L.FRB_UNFUNDED END AS decimal(38,6)),
        ACB_Exposure       = CAST(CASE WHEN ISNULL(L.AMORTIZED_COST_BASIS,0) <> 0 THEN L.AMORTIZED_COST_BASIS END AS decimal(38,6)),
        Derived_ACB_Exposure = CAST(NULL AS decimal(38,6))  -- not applicable for credit lines
    FROM CRDADMPRD.dbo.CDM_CREDITLINES_ALL_TOPSIDED L
    CROSS JOIN date_window w
    WHERE L.LOADDT >= w.start_dt AND L.LOADDT < w.end_dt
      AND (L.RISK_CD IS NULL OR L.RISK_BAS_SEG_CD IS NULL OR L.FDIC_CD IS NULL)
),

/*======== Instruments: CRR/RBS/FDIC NULLs, with exposures ========*/
instrument_nulls AS (
    SELECT
        SourceTable    = 'CDM_INSTRUMENTS_TOPSIDED',
        IdentifierType = 'ACCTNBR',
        Identifier     = CAST(I.ACCTNBR AS varchar(64)),
        AsOfDate       = CAST(I.LOADDT AS date),

        CRR  = I.RISKCD,
        RBS  = I.RISK_BAS_SEG_CD,
        FDIC = I.FDICCD,

        SEC_Exposure       = CAST(NULL AS decimal(38,6)),  -- not applicable for instruments
        FRB_Exposure       = CAST(NULL AS decimal(38,6)),  -- not applicable for instruments
        ACB_Exposure       = CAST(CASE WHEN ISNULL(I.AMORTIZED_COST_BASIS,0) <> 0 THEN I.AMORTIZED_COST_BASIS END AS decimal(38,6)),
        Derived_ACB_Exposure = CAST(CASE WHEN ISNULL(I.DERIVED_AMORTIZED_COST_BASIS,0) <> 0 THEN I.DERIVED_AMORTIZED_COST_BASIS END AS decimal(38,6))
    FROM CRDADMPRD.dbo.CDM_INSTRUMENTS_TOPSIDED I
    CROSS JOIN date_window w
    WHERE I.LOADDT >= w.start_dt AND I.LOADDT < w.end_dt
      AND (I.RISKCD IS NULL OR I.RISK_BAS_SEG_CD IS NULL OR I.FDICCD IS NULL)
)

/*======== Final unified output ========*/
SELECT
    SourceTable,
    IdentifierType,
    Identifier,
    AsOfDate,
    CRR,
    RBS,
    FDIC,
    SEC_Exposure,
    FRB_Exposure,
    ACB_Exposure,
    Derived_ACB_Exposure
FROM creditline_nulls

UNION ALL

SELECT
    SourceTable,
