RETURN
CALCULATE (
    AVERAGE ( RC_ML_Scored[Anomaly_Score_0_100] ),
    TREATAS ( ROW ( "d", lm ), RC_ML_Scored[MONTH_END] ),
    TREATAS ( VALUES ( Dim_RC[RC_DESCRIPTION] ), RC_ML_Scored[RC_DESCRIPTION] )
)

