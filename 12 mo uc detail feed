/*=============================================================
NULL checks for CRR / RBS / FDIC at latest month end
Across:
  1) CRDADMPRD.dbo.CDM_CREDITLINES_ALL_TOPSIDED  (key: CUST_LINE_NBR)
  2) CRDADMPRD.dbo.CDM_INSTRUMENTS_TOPSIDED      (key: ACCTNBR)

Edit the variables below to add manual fields or force a specific EOM.
===============================================================*/

DECLARE @AsOfEOM        date         = NULL;  -- Set to a specific EOM to override auto-latest, e.g. '2025-09-30'
DECLARE @Analyst        varchar(100) = '<<your name here>>';
DECLARE @RunLabel       varchar(120) = 'CRR/RBS/FDIC NULL Audit';
DECLARE @Comments       varchar(200) = NULL;

/*======== Latest EOM filters (use @AsOfEOM if provided, else MAX(LOADDT) per table) ========*/
WITH latest_lines AS (
    SELECT L.*
    FROM CRDADMPRD.dbo.CDM_CREDITLINES_ALL_TOPSIDED AS L
    WHERE L.LOADDT = COALESCE(
        @AsOfEOM,
        (SELECT MAX(LOADDT) FROM CRDADMPRD.dbo.CDM_CREDITLINES_ALL_TOPSIDED)
    )
),
latest_instr AS (
    SELECT I.*
    FROM CRDADMPRD.dbo.CDM_INSTRUMENTS_TOPSIDED AS I
    WHERE I.LOADDT = COALESCE(
        @AsOfEOM,
        (SELECT MAX(LOADDT) FROM CRDADMPRD.dbo.CDM_INSTRUMENTS_TOPSIDED)
    )
),

/*======== Credit Lines: rows where CRR/RBS/FDIC is NULL, with exposures ========*/
creditline_nulls AS (
    SELECT
        SourceTable            = 'CDM_CREDITLINES_ALL_TOPSIDED',
        IdentifierType         = 'CUST_LINE_NBR',
        Identifier             = CAST(L.CUST_LINE_NBR AS varchar(64)),
        AsOfEOM                = L.LOADDT,

        -- Target code columns
        CRR                    = L.RISK_CD,
        RBS                    = L.RISK_BAS_SEG_CD,
        FDIC                   = L.FDIC_CD,

        -- Exposures (only show values if non-null and non-zero)
        SEC_Exposure           = CASE WHEN ISNULL(L.SEC_UNFUNDED,0) <> 0 THEN L.SEC_UNFUNDED END,
        FRB_Exposure           = CASE WHEN ISNULL(L.FRB_UNFUNDED,0) <> 0 THEN L.FRB_UNFUNDED END,
        ACB_Exposure           = CASE WHEN ISNULL(L.AMORTIZED_COST_BASIS,0) <> 0 THEN L.AMORTIZED_COST_BASIS END,

        -- Manual fields
        Analyst                = @Analyst,
        RunLabel               = @RunLabel,
        Comments               = @Comments
    FROM latest_lines AS L
    WHERE
        (L.RISK_CD IS NULL OR L.RISK_BAS_SEG_CD IS NULL OR L.FDIC_CD IS NULL)
),

/*======== Instruments: rows where CRR/RBS/FDIC is NULL, with exposures ========*/
instrument_nulls AS (
    SELECT
        SourceTable            = 'CDM_INSTRUMENTS_TOPSIDED',
        IdentifierType         = 'ACCTNBR',
        Identifier             = CAST(I.ACCTNBR AS varchar(64)),
        AsOfEOM                = I.LOADDT,

        -- Target code columns (note: CRR column is RISKCD in instruments)
        CRR                    = I.RISKCD,
        RBS                    = I.RISK_BAS_SEG_CD,
        FDIC                   = I.FDICCD,

        -- Exposures (only show values if non-null and non-zero)
        ACB_Exposure           = CASE WHEN ISNULL(I.AMORTIZED_COST_BASIS,0) <> 0 THEN I.AMORTIZED_COST_BASIS END,
        Derived_ACB_Exposure   = CASE WHEN ISNULL(I.DERIVED_AMORTIZED_COST_BASIS,0) <> 0 THEN I.DERIVED_AMORTIZED_COST_BASIS END,

        -- Manual fields
        Analyst                = @Analyst,
        RunLabel               = @RunLabel,
        Comments               = @Comments
    FROM latest_instr AS I
    WHERE
        (I.RISKCD IS NULL OR I.RISK_BAS_SEG_CD IS NULL OR I.FDICCD IS NULL)
)

/*======== Final unified output ========*/
SELECT
    SourceTable,
    IdentifierType,
    Identifier,
    AsOfEOM,
    CRR,
    RBS,
    FDIC,
    -- Credit Lines exposure columns (present for credit lines; NULL for instruments)
    SEC_Exposure,
    FRB_Exposure,
    ACB_Exposure,
    -- Instruments exposure column (present for instruments; NULL for credit lines)
    Derived_ACB_Exposure,
    Analyst,
    RunLabel,
    Comments
FROM creditline_nulls

UNION ALL

SELECT
    SourceTable,
    IdentifierType,
    Identifier,
    AsOfEOM,
    CRR,
    RBS,
    FDIC,
    -- map to unified column list
    SEC_Exposure         = CAST(NULL AS decimal(38,6)),
    FRB_Exposure         = CAST(NULL AS decimal(38,6)),
    ACB_Exposure,
    Derived_ACB_Exposure,
    Analyst,
    RunLabel,
    Comments
FROM instrument_nulls
ORDER BY SourceTable, Identifier;





WITH params AS (
  SELECT DATE '2025-09-30' AS curr_eom,
         ADD_MONTHS(DATE '2025-09-30', -1) AS prev_eom
),

/* 1) Base pull with your filters + Bank_Code mapping + CIS */
banked AS (
  SELECT
    End_of_Month_Date,
    UPPER(TRIM(Account_Identifier)) AS Account_Identifier,
    UPPER(TRIM(Facility_ID))        AS Facility_ID,
    CIS_Customer_Number,
    Contract_Source_System,
    PROD_HIER_LEVEL_5,
    RBC_Code,
    Non_Accrual_Flag,
    Source_System_Balance,
    GL_ACCOUNT_HIER_LEVEL_4,
    CASE
      WHEN Contract_Source_System IN ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN') THEN 'L-SVB'
      WHEN Contract_Source_System='ALL' AND GL_ACCOUNT_CODE IN
        ('1051872','1061833','1041344','1041211','1041345','1041364','1041210',
         '1042127','1042213','1042048','1042368','1042408','1042409','1042424',
         '1100001','1142067','1042886','1043008') THEN 'L-SVB'
      WHEN Contract_Source_System IN ('ADJ','ALL','ALS','FDR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO') THEN 'L-FCB'
      WHEN Contract_Source_System IN ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN',
                                      'INFL05','INFL05-EXCPTN','INFL10','INFL10-EXCPTN',
                                      'LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001','SBO001-EXCPTN',
                                      'STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN','STRAT1','STRAT1-EXCPTN') THEN 'L-CIT'
      ELSE 'NULL-Need to Research'
    END AS Bank_Code,
    GL_ACCOUNT_CODE
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
    AND GL_ACCOUNT_HIER_LEVEL_4 IN ('Total Loans','Lns Held for Sale')
),

/* 2) Prior EOM NA-pop (SSB>0) collapsed to 1 row / account */
prev_na AS (
  SELECT
    Account_Identifier,
    MAX(Bank_Code)              AS Prev_Bank_Code,
    MAX(Facility_ID)            AS Prev_Facility_ID,
    MAX(PROD_HIER_LEVEL_5)      AS Prev_PROD5,
    MAX(Contract_Source_System) AS Prev_CSS,
    MAX(RBC_Code)               AS Prev_RBC,
    MAX(CIS_Customer_Number)    AS Prev_CIS,
    SUM(Source_System_Balance)  AS Prev_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT prev_eom FROM params)
    AND Non_Accrual_Flag='Y'
    AND Source_System_Balance>0
  GROUP BY Account_Identifier
),

/* 3) Current EOM NA-pop (SSB>0) collapsed to 1 row / account */
curr_na AS (
  SELECT
    Account_Identifier,
    MAX(Bank_Code)              AS Curr_Bank_Code,
    MAX(Facility_ID)            AS Curr_Facility_ID,
    MAX(PROD_HIER_LEVEL_5)      AS Curr_PROD5,
    MAX(Contract_Source_System) AS Curr_CSS,
    MAX(RBC_Code)               AS Curr_RBC,
    MAX(CIS_Customer_Number)    AS Curr_CIS,
    SUM(Source_System_Balance)  AS Curr_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT curr_eom FROM params)
    AND Non_Accrual_Flag='Y'
    AND Source_System_Balance>0
  GROUP BY Account_Identifier
),

/* 4) Join months together */
joined AS (
  SELECT
    COALESCE(c.Account_Identifier, p.Account_Identifier) AS Account_Identifier,

    /* prev side */
    p.Prev_Bank_Code, p.Prev_Facility_ID, p.Prev_PROD5, p.Prev_CSS, p.Prev_RBC, p.Prev_SSB, p.Prev_CIS,

    /* curr side */
    c.Curr_Bank_Code, c.Curr_Facility_ID, c.Curr_PROD5, c.Curr_CSS, c.Curr_RBC, c.Curr_SSB, c.Curr_CIS,

    /* flags (presence & auto) */
    CASE WHEN COALESCE(p.Prev_SSB,0)>0 THEN 1 ELSE 0 END AS had_prev,
    CASE WHEN COALESCE(c.Curr_SSB,0)>0 THEN 1 ELSE 0 END AS has_curr,
    CASE WHEN UPPER(COALESCE(p.Prev_RBC,''))='R' THEN 1 ELSE 0 END AS prev_auto,
    CASE WHEN UPPER(COALESCE(c.Curr_RBC,''))='R' THEN 1 ELSE 0 END AS curr_auto
  FROM curr_na c
  FULL OUTER JOIN prev_na p
    ON c.Account_Identifier=p.Account_Identifier
),

/* 5) CIS-level SSB totals (within the NA population) for thresholding owners ONLY */
joined_with_cis AS (
  SELECT
    j.*,
    /* Curr customer total across all current NA accounts for that CIS */
    SUM(COALESCE(j.Curr_SSB,0)) OVER (PARTITION BY j.Curr_CIS) AS Curr_CIS_SSB,
    /* Prev customer total across all prior NA accounts for that CIS */
    SUM(COALESCE(j.Prev_SSB,0)) OVER (PARTITION BY j.Prev_CIS) AS Prev_CIS_SSB
  FROM joined j
)

/* 6) Final output */
SELECT
  j.Account_Identifier,

  /* prev */
  j.Prev_Bank_Code, j.Prev_Facility_ID, j.Prev_PROD5, j.Prev_CSS, j.Prev_RBC, j.Prev_SSB, j.Prev_CIS,

  /* curr */
  j.Curr_Bank_Code, j.Curr_Facility_ID, j.Curr_PROD5, j.Curr_CSS, j.Curr_RBC, j.Curr_SSB, j.Curr_CIS,

  /* flags */
  j.had_prev, j.has_curr, j.prev_auto, j.curr_auto,

  /* deltas */
  (COALESCE(j.Curr_SSB,0) - COALESCE(j.Prev_SSB,0)) AS MoM_Delta,

  /* Movement_Type (replaces Characterization) */
  CASE
    WHEN j.had_prev=0 AND j.has_curr=1 AND j.curr_auto=1 THEN 'Autochange Downgrade IN'
    WHEN j.had_prev=1 AND j.has_curr=0 AND j.prev_auto=1 THEN 'Autochange Exit'
    WHEN j.had_prev=1 AND j.has_curr=1 AND j.prev_auto=1 AND j.curr_auto=1
         AND COALESCE(j.Curr_SSB,0)<>COALESCE(j.Prev_SSB,0) THEN 'Autochange Persisting Balance Changes'
    WHEN j.had_prev=1 AND j.has_curr=1 AND j.prev_auto=1 AND j.curr_auto=1
         AND COALESCE(j.Curr_SSB,0)= COALESCE(j.Prev_SSB,0) THEN 'Autochange No Change'
    WHEN j.had_prev=0 AND j.has_curr=1 AND j.curr_auto=0 THEN 'Downgrade IN (ex-Auto)'
    WHEN j.had_prev=1 AND j.has_curr=0 AND j.prev_auto=0 THEN 'Exit (ex-Auto)'
    WHEN j.had_prev=1 AND j.has_curr=1 AND j.curr_auto=0
         AND COALESCE(j.Curr_SSB,0)<>COALESCE(j.Prev_SSB,0) THEN 'Persisting Balance Changes (ex-Auto)'
    WHEN j.had_prev=1 AND j.has_curr=1 AND j.curr_auto=0
         AND COALESCE(j.Curr_SSB,0)= COALESCE(j.Prev_SSB,0) THEN 'No Change (ex-Auto)'
    ELSE NULL
  END AS Movement_Type,

  /* Owner thresholds use CIS totals (NOT row SSB) */
  CASE
    WHEN j.Curr_PROD5='Business RE Term Loans'
         AND j.Curr_Bank_Code='L-CIT'
         AND COALESCE(j.Curr_CIS_SSB,0) > 500000 THEN 'Samya'
    WHEN j.Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Curr_Bank_Code='L-CIT'
         AND COALESCE(j.Curr_CIS_SSB,0) > 250000 THEN 'Casey'
    WHEN j.Curr_PROD5='Business RE Term Loans'
         AND j.Curr_Bank_Code='L-CIT'
         AND COALESCE(j.Curr_CIS_SSB,0) <= 500000 THEN 'Not Covered; Under $500k; Samya'
    WHEN j.Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Curr_Bank_Code='L-CIT'
         AND COALESCE(j.Curr_CIS_SSB,0) <= 250000 THEN 'Not Covered; Under $250k; Casey'
    WHEN j.Curr_CSS='INFL10' THEN 'Daniel'
    WHEN j.Curr_Bank_Code='L-SVB' THEN 'Eleanor'
    WHEN j.Curr_RBC='R' THEN 'Autochange'
    WHEN j.Curr_Bank_Code='L-FCB' THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner_Curr,

  CASE
    WHEN j.Prev_PROD5='Business RE Term Loans'
         AND j.Prev_Bank_Code='L-CIT'
         AND COALESCE(j.Prev_CIS_SSB,0) > 500000 THEN 'Samya'
    WHEN j.Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Prev_Bank_Code='L-CIT'
         AND COALESCE(j.Prev_CIS_SSB,0) > 250000 THEN 'Casey'
    WHEN j.Prev_PROD5='Business RE Term Loans'
         AND j.Prev_Bank_Code='L-CIT'
         AND COALESCE(j.Prev_CIS_SSB,0) <= 500000 THEN 'Not Covered; Under $500k; Samya'
    WHEN j.Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Prev_Bank_Code='L-CIT'
         AND COALESCE(j.Prev_CIS_SSB,0) <= 250000 THEN 'Not Covered; Under $250k; Casey'
    WHEN j.Prev_CSS='INFL10' THEN 'Daniel'
    WHEN j.Prev_Bank_Code='L-SVB' THEN 'Eleanor'
    WHEN j.Prev_RBC='R' THEN 'Autochange'
    WHEN j.Prev_Bank_Code='L-FCB' THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner_Prev,

  /* Bank_For_Event (adds → curr bank; exits → prev bank; else coalesce) */
  CASE
    WHEN j.had_prev=1 AND j.has_curr=0 THEN j.Prev_Bank_Code
    WHEN j.has_curr=1 THEN j.Curr_Bank_Code
    ELSE COALESCE(j.Curr_Bank_Code, j.Prev_Bank_Code)
  END AS Bank_For_Event,

  /* expose CIS totals used for thresholding (for audit) */
  j.Curr_CIS_SSB,
  j.Prev_CIS_SSB

FROM joined_with_cis j;





WITH params AS (
  SELECT DATE '2025-09-30' curr_eom,
         ADD_MONTHS(DATE '2025-09-30',-1) prev_eom
),
banked AS (
  SELECT
    End_of_Month_Date,
    UPPER(TRIM(Account_Identifier)) AS Account_Identifier,
    UPPER(TRIM(Facility_ID))        AS Facility_ID,
    Contract_Source_System,
    PROD_HIER_LEVEL_5,
    RBC_Code,
    Non_Accrual_Flag,
    Source_System_Balance,
    GL_ACCOUNT_HIER_LEVEL_4,
    CASE
      WHEN Contract_Source_System IN ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN') THEN 'L-SVB'
      WHEN Contract_Source_System='ALL' AND GL_ACCOUNT_CODE IN
        ('1051872','1061833','1041344','1041211','1041345','1041364','1041210','1042127','1042213','1042048','1042368','1042408','1042409','1042424','1100001','1142067','1042886','1043008') THEN 'L-SVB'
      WHEN Contract_Source_System IN ('ADJ','ALL','ALS','F/* ========= 5) Customer-level SSB (CIS totals by month) ========= */
joined_with_cis AS (
  SELECT
    j.*,
    /* Sum all NA-pop account SSBs for the same customer in that month */
    SUM(COALESCE(j.Curr_SSB,0)) OVER (PARTITION BY j.Curr_CIS_Customer_Number) AS Curr_CIS_SSB,
    SUM(COALESCE(j.Prev_SSB,0)) OVER (PARTITION BY j.Prev_CIS_Customer_Number) AS Prev_CIS_SSB
  FROM joined j
)
DR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO') THEN 'L-FCB'
      WHEN Contract_Source_System IN ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN','INFL05','INFL05-EXCPTN','INFL10','INFL10-EXCPTN','LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001','SBO001-EXCPTN','STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN','STRAT1','STRAT1-EXCPTN') THEN 'L-CIT'
      ELSE 'NULL-Need to Research'
    END AS Bank_Code,
    GL_ACCOUNT_CODE
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
    AND GL_ACCOUNT_HIER_LEVEL_4 IN ('Total Loans','Lns Held for Sale')
),
prev_na AS (
  SELECT Account_Identifier,
         MAX(Bank_Code) AS Prev_Bank_Code,
         MAX(Facility_ID) AS Prev_Facility_ID,
         MAX(PROD_HIER_LEVEL_5) AS Prev_PROD5,
         MAX(Contract_Source_System) AS Prev_CSS,
         MAX(RBC_Code) AS Prev_RBC,
         SUM(Source_System_Balance) AS Prev_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT prev_eom FROM params)
    AND Non_Accrual_Flag='Y' AND Source_System_Balance>0
  GROUP BY Account_Identifier
),
curr_na AS (
  SELECT Account_Identifier,
         MAX(Bank_Code) AS Curr_Bank_Code,
         MAX(Facility_ID) AS Curr_Facility_ID,
         MAX(PROD_HIER_LEVEL_5) AS Curr_PROD5,
         MAX(Contract_Source_System) AS Curr_CSS,
         MAX(RBC_Code) AS Curr_RBC,
         SUM(Source_System_Balance) AS Curr_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT curr_eom FROM params)
    AND Non_Accrual_Flag='Y' AND Source_System_Balance>0
  GROUP BY Account_Identifier
)
SELECT
  COALESCE(c.Account_Identifier,p.Account_Identifier) AS Account_Identifier,
  /* prev */
  p.Prev_Bank_Code, p.Prev_Facility_ID, p.Prev_PROD5, p.Prev_CSS, p.Prev_RBC, p.Prev_SSB,
  /* curr */
  c.Curr_Bank_Code, c.Curr_Facility_ID, c.Curr_PROD5, c.Curr_CSS, c.Curr_RBC, c.Curr_SSB,
  /* flags */
  CASE WHEN COALESCE(p.Prev_SSB,0)>0 THEN 1 ELSE 0 END AS had_prev,
  CASE WHEN COALESCE(c.Curr_SSB,0)>0 THEN 1 ELSE 0 END AS has_curr,
  CASE WHEN UPPER(COALESCE(p.Prev_RBC,''))='R' THEN 1 ELSE 0 END AS prev_auto,
  CASE WHEN UPPER(COALESCE(c.Curr_RBC,''))='R' THEN 1 ELSE 0 END AS curr_auto,
  /* delta */
  COALESCE(c.Curr_SSB,0) - COALESCE(p.Prev_SSB,0) AS MoM_Delta,
  /* characterization */
  CASE
    WHEN had_prev=0 AND has_curr=1 AND curr_auto=1 THEN 'Autochange Downgrade IN'
    WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN 'Autochange Exit'
    WHEN had_prev=1 AND has_curr=1 AND prev_auto=1 AND curr_auto=1 AND (COALESCE(c.Curr_SSB,0)<>COALESCE(p.Prev_SSB,0)) THEN 'Autochange Persisting ?'
    WHEN had_prev=1 AND has_curr=1 AND prev_auto=1 AND curr_auto=1 AND (COALESCE(c.Curr_SSB,0)= COALESCE(p.Prev_SSB,0)) THEN 'Autochange No Change'
    WHEN had_prev=0 AND has_curr=1 AND curr_auto=0 THEN 'Downgrade IN (ex-Auto)'
    WHEN had_prev=1 AND has_curr=0 AND prev_auto=0 THEN 'Exit (ex-Auto)'
    WHEN had_prev=1 AND has_curr=1 AND curr_auto=0 AND (COALESCE(c.Curr_SSB,0)<>COALESCE(p.Prev_SSB,0)) THEN 'Persisting ? (ex-Auto)'
    WHEN had_prev=1 AND has_curr=1 AND curr_auto=0 AND (COALESCE(c.Curr_SSB,0)= COALESCE(p.Prev_SSB,0)) THEN 'No Change (ex-Auto)'
  END AS Characterization,
  /* owner (curr/prev thresholds) */
  CASE
    WHEN c.Curr_PROD5='Business RE Term Loans' AND c.Curr_Bank_Code='L-CIT' AND COALESCE(c.Curr_SSB,0)>500000 THEN 'Samya'
    WHEN c.Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND c.Curr_Bank_Code='L-CIT' AND COALESCE(c.Curr_SSB,0)>250000 THEN 'Casey'
    WHEN c.Curr_PROD5='Business RE Term Loans' AND c.Curr_Bank_Code='L-CIT' AND COALESCE(c.Curr_SSB,0)<=500000 THEN 'Not Covered; Under $500k; Samya'
    WHEN c.Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND c.Curr_Bank_Code='L-CIT' AND COALESCE(c.Curr_SSB,0)<=250000 THEN 'Not Covered; Under $250k; Casey'
    WHEN c.Curr_CSS='INFL10' THEN 'Daniel'
    WHEN c.Curr_Bank_Code='L-SVB' THEN 'Eleanor'
    WHEN c.Curr_RBC='R' THEN 'Autochange'
    WHEN c.Curr_Bank_Code='L-FCB' THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner_Curr,
  CASE
    WHEN p.Prev_PROD5='Business RE Term Loans' AND p.Prev_Bank_Code='L-CIT' AND COALESCE(p.Prev_SSB,0)>500000 THEN 'Samya'
    WHEN p.Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND p.Prev_Bank_Code='L-CIT' AND COALESCE(p.Prev_SSB,0)>250000 THEN 'Casey'
    WHEN p.Prev_PROD5='Business RE Term Loans' AND p.Prev_Bank_Code='L-CIT' AND COALESCE(p.Prev_SSB,0)<=500000 THEN 'Not Covered; Under $500k; Samya'
    WHEN p.Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND p.Prev_Bank_Code='L-CIT' AND COALESCE(p.Prev_SSB,0)<=250000 THEN 'Not Covered; Under $250k; Casey'
    WHEN p.Prev_CSS='INFL10' THEN 'Daniel'
    WHEN p.Prev_Bank_Code='L-SVB' THEN 'Eleanor'
    WHEN p.Prev_RBC='R' THEN 'Autochange'
    WHEN p.Prev_Bank_Code='L-FCB' THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner_Prev,
  /* bank for event (aligns to bridges) */
  CASE
    WHEN had_prev=1 AND has_curr=0 THEN p.Prev_Bank_Code
    WHEN has_curr=1 THEN c.Curr_Bank_Code
    ELSE COALESCE(c.Curr_Bank_Code,p.Prev_Bank_Code)
  END AS Bank_For_Event
FROM curr_na c
FULL OUTER JOIN prev_na p ON c.Account_Identifier=p.Account_Identifier;






/* ========= 5) Customer-level SSB (CIS totals by month) ========= */
joined_with_cis AS (
  SELECT
    j.*,
    /* Sum all NA-pop account SSBs for the same customer in that month */
    SUM(COALESCE(j.Curr_SSB,0)) OVER (PARTITION BY j.Curr_CIS_Customer_Number) AS Curr_CIS_SSB,
    SUM(COALESCE(j.Prev_SSB,0)) OVER (PARTITION BY j.Prev_CIS_Customer_Number) AS Prev_CIS_SSB
  FROM joined j
)





WITH params AS (
  SELECT
    DATE '2025-09-30'                 AS curr_eom,
    ADD_MONTHS(DATE '2025-09-30', -1) AS prev_eom
),

/* ========= 1) Snapshot true NA + Auto flags for ALL accounts (no NA filter) ========= */
flag_snap AS (
  SELECT
    CASE WHEN Account_Identifier IS NULL OR TRIM(Account_Identifier)='' THEN '§NULL§'
         ELSE UPPER(TRIM(Account_Identifier)) END       AS Account_Identifier,
    End_of_Month_Date,
    /* If multiple rows per acct/mo, NA='Y' wins; Auto_Flag=1 if any NA row has RBC='R' */
    MAX(Non_Accrual_Flag)                                AS NA_Flag,
    MAX(CASE WHEN Non_Accrual_Flag='Y' AND RBC_Code='R' THEN 1 ELSE 0 END) AS Auto_Flag
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
  GROUP BY 1, End_of_Month_Date
),
flags_prev AS (
  SELECT Account_Identifier,
         MAX(NA_Flag)   AS Prev_NA_Flag,
         MAX(Auto_Flag) AS Prev_Auto_Flag
  FROM flag_snap
  WHERE End_of_Month_Date = (SELECT prev_eom FROM params)
  GROUP BY Account_Identifier
),
flags_curr AS (
  SELECT Account_Identifier,
         MAX(NA_Flag)   AS Curr_NA_Flag,
         MAX(Auto_Flag) AS Curr_Auto_Flag
  FROM flag_snap
  WHERE End_of_Month_Date = (SELECT curr_eom FROM params)
  GROUP BY Account_Identifier
),

/* ========= 2) Pull NA-filtered rows (your filters) + Bank_Code mapping ========= */
base AS (
  SELECT
      End_of_Month_Date,
      Account_Name,
      Contract_Source_System,
      CIS_Customer_Number,
      Facility_ID,
      CASE WHEN Account_Identifier IS NULL OR TRIM(Account_Identifier)='' THEN '§NULL§'
           ELSE UPPER(TRIM(Account_Identifier)) END     AS Account_Identifier,
      Account_Key,
      Status_Code_Description,
      GL_ACCOUNT_HIER_LEVEL_4,
      Source_System_Balance,
      GL_Balance,
      Available_Balance,
      Borrower_Risk_Rating,
      PD_Grade,
      Days_Past_Due,
      Non_Accrual_Flag,
      PROD_HIER_LEVEL_5,
      RBC_Code,
      GL_ACCOUNT_CODE,
      CASE
        WHEN Contract_Source_System IN ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN')
          THEN 'L-SVB'
        WHEN Contract_Source_System = 'ALL'
             AND GL_ACCOUNT_CODE IN ('1051872','1061833','1041344','1041211','1041345','1041364','1041210',
                                     '1042127','1042213','1042048','1042368','1042408','1042409','1042424',
                                     '1100001','1142067','1042886','1043008')
          THEN 'L-SVB'
        WHEN Contract_Source_System IN ('ADJ','ALL','ALS','FDR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO')
          THEN 'L-FCB'
        WHEN Contract_Source_System IN ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN','INFL05','INFL05-EXCPTN',
                                        'INFL10','INFL10-EXCPTN','LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001',
                                        'SBO001-EXCPTN','STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN',
                                        'STRAT1','STRAT1-EXCPTN')
          THEN 'L-CIT'
        ELSE 'NULL-Need to Research'
      END AS Bank_Code
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE GL_ACCOUNT_HIER_LEVEL_4 IN ('Total Loans','Lns Held for Sale')
    AND End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
    AND Non_Accrual_Flag = 'Y'
    AND Source_System_Balance > 0
),

/* ========= 3) Collapse to 1 row / account / month for NA population (SSB sums) ========= */
prev_norm AS (
  SELECT
      Account_Identifier,
      MAX(Account_Name)            AS Prev_Account_Name,
      MAX(Contract_Source_System)  AS Prev_Contract_Source_System,
      MAX(CIS_Customer_Number)     AS Prev_CIS_Customer_Number,
      MAX(Facility_ID)             AS Prev_Facility_ID,
      MAX(Account_Key)             AS Prev_Account_Key,
      MAX(Status_Code_Description) AS Prev_Status_Code_Description,
      MAX(GL_ACCOUNT_HIER_LEVEL_4) AS Prev_GL_ACCOUNT_HIER_LEVEL_4,
      SUM(Source_System_Balance)   AS Prev_SSB,
      SUM(GL_Balance)              AS Prev_GL_Balance,
      MAX(Available_Balance)       AS Prev_Available_Balance,
      MAX(Borrower_Risk_Rating)    AS Prev_Borrower_Risk_Rating,
      MAX(PD_Grade)                AS Prev_PD_Grade,
      MAX(Days_Past_Due)           AS Prev_Days_Past_Due,
      MAX(PROD_HIER_LEVEL_5)       AS Prev_PROD_HIER_LEVEL_5,
      MAX(RBC_Code)                AS Prev_RBC_Code,
      MAX(GL_ACCOUNT_CODE)         AS Prev_GL_ACCOUNT_CODE,
      MAX(Bank_Code)               AS Prev_Bank_Code
  FROM base
  WHERE End_of_Month_Date = (SELECT prev_eom FROM params)
  GROUP BY Account_Identifier
),
curr_norm AS (
  SELECT
      Account_Identifier,
      MAX(Account_Name)            AS Curr_Account_Name,
      MAX(Contract_Source_System)  AS Curr_Contract_Source_System,
      MAX(CIS_Customer_Number)     AS Curr_CIS_Customer_Number,
      MAX(Facility_ID)             AS Curr_Facility_ID,
      MAX(Account_Key)             AS Curr_Account_Key,
      MAX(Status_Code_Description) AS Curr_Status_Code_Description,
      MAX(GL_ACCOUNT_HIER_LEVEL_4) AS Curr_GL_ACCOUNT_HIER_LEVEL_4,
      SUM(Source_System_Balance)   AS Curr_SSB,
      SUM(GL_Balance)              AS Curr_GL_Balance,
      MAX(Available_Balance)       AS Curr_Available_Balance,
      MAX(Borrower_Risk_Rating)    AS Curr_Borrower_Risk_Rating,
      MAX(PD_Grade)                AS Curr_PD_Grade,
      MAX(Days_Past_Due)           AS Curr_Days_Past_Due,
      MAX(PROD_HIER_LEVEL_5)       AS Curr_PROD_HIER_LEVEL_5,
      MAX(RBC_Code)                AS Curr_RBC_Code,
      MAX(GL_ACCOUNT_CODE)         AS Curr_GL_ACCOUNT_CODE,
      MAX(Bank_Code)               AS Curr_Bank_Code
  FROM base
  WHERE End_of_Month_Date = (SELECT curr_eom FROM params)
  GROUP BY Account_Identifier
),

/* ========= 4) Join months + attach true flags ========= */
joined AS (
  SELECT
    COALESCE(c.Account_Identifier, p.Account_Identifier) AS Account_Identifier,

    /* balances */
    p.Prev_SSB, c.Curr_SSB,

    /* true flags */
    COALESCE(fp.Prev_NA_Flag,'N') AS Prev_NA_Flag,
    COALESCE(fc.Curr_NA_Flag,'N') AS Curr_NA_Flag,
    COALESCE(fp.Prev_Auto_Flag,0) AS Prev_Auto_Flag,
    COALESCE(fc.Curr_Auto_Flag,0) AS Curr_Auto_Flag,

    /* prev attributes */
    p.Prev_Account_Name, p.Prev_Contract_Source_System, p.Prev_CIS_Customer_Number,
    p.Prev_Facility_ID,  p.Prev_Account_Key,            p.Prev_Status_Code_Description,
    p.Prev_GL_ACCOUNT_HIER_LEVEL_4, p.Prev_GL_Balance, p.Prev_Available_Balance,
    p.Prev_Borrower_Risk_Rating,    p.Prev_PD_Grade,   p.Prev_Days_Past_Due,
    p.Prev_PROD_HIER_LEVEL_5,       p.Prev_RBC_Code,   p.Prev_GL_ACCOUNT_CODE,
    p.Prev_Bank_Code,

    /* curr attributes */
    c.Curr_Account_Name, c.Curr_Contract_Source_System, c.Curr_CIS_Customer_Number,
    c.Curr_Facility_ID,  c.Curr_Account_Key,            c.Curr_Status_Code_Description,
    c.Curr_GL_ACCOUNT_HIER_LEVEL_4, c.Curr_GL_Balance, c.Curr_Available_Balance,
    c.Curr_Borrower_Risk_Rating,    c.Curr_PD_Grade,   c.Curr_Days_Past_Due,
    c.Curr_PROD_HIER_LEVEL_5,       c.Curr_RBC_Code,   c.Curr_GL_ACCOUNT_CODE,
    c.Curr_Bank_Code
  FROM curr_norm c
  FULL OUTER JOIN prev_norm p
    ON c.Account_Identifier = p.Account_Identifier
  LEFT JOIN flags_prev fp
    ON fp.Account_Identifier = COALESCE(c.Account_Identifier, p.Account_Identifier)
  LEFT JOIN flags_curr fc
    ON fc.Account_Identifier = COALESCE(c.Account_Identifier, p.Account_Identifier)
),

/* ========= 5) Customer-level SSB (CIS totals by month) ========= */
joined_with_cis AS (
  SELECT
    j.*,
    /* Sum all NA-pop account SSBs for the same customer in that month */
    SUM(COALESCE(j.Curr_SSB,0)) OVER (PARTITION BY j.Curr_CIS_Customer_Number) AS Curr_CIS_SSB,
    SUM(COALESCE(j.Prev_SSB,0)) OVER (PARTITION BY j.Prev_CIS_Customer_Number) AS Prev_CIS_SSB
  FROM (
    SELECT
      j.*,
      /* expose CIS per month explicitly for the window partitions */
      j.Prev_CIS_Customer_Number AS Prev_CIS_Customer_Number,
      j.Curr_CIS_Customer_Number AS Curr_CIS_Customer_Number
    FROM joined j
  ) j
)

/* ========= 6) Final output (Curr rows for adds/persisting; Prev rows for exits) ========= */
SELECT
  /* ---- CURRENT MONTH ROWS ---- */
  (SELECT curr_eom FROM params)               AS End_of_Month_Date,
  j.Curr_Account_Name                         AS Account_Name,
  j.Curr_Contract_Source_System               AS Contract_Source_System,
  j.Curr_CIS_Customer_Number                  AS CIS_Customer_Number,
  j.Curr_Facility_ID                          AS Facility_ID,
  j.Account_Identifier                        AS Account_Identifier,
  j.Curr_Account_Key                          AS Account_Key,
  j.Curr_Status_Code_Description              AS Status_Code_Description,
  j.Curr_GL_ACCOUNT_HIER_LEVEL_4              AS GL_ACCOUNT_HIER_LEVEL_4,
  j.Curr_SSB                                  AS Source_System_Balance,
  j.Curr_GL_Balance                           AS GL_Balance,
  j.Curr_Available_Balance                    AS Available_Balance,
  j.Curr_Borrower_Risk_Rating                 AS Borrower_Risk_Rating,
  j.Curr_PD_Grade                             AS PD_Grade,
  j.Curr_Days_Past_Due                        AS Days_Past_Due,
  'Y'                                         AS Non_Accrual_Flag,
  j.Curr_PROD_HIER_LEVEL_5                    AS PROD_HIER_LEVEL_5,
  j.Curr_RBC_Code                             AS RBC_Code,
  j.Curr_GL_ACCOUNT_CODE                      AS GL_ACCOUNT_CODE,
  j.Curr_Bank_Code                            AS Bank_Code,

  /* ---- Owner using CIS-level CURRENT thresholds ---- */
  CASE
    WHEN j.Curr_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_CIS_SSB > 500000                                   THEN 'Samya'
    WHEN j.Curr_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_CIS_SSB > 250000                                   THEN 'Casey'
    WHEN j.Curr_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_CIS_SSB <= 500000                                  THEN 'Not Covered; Under $500k; Samya'
    WHEN j.Curr_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_CIS_SSB <= 250000                                  THEN 'Not Covered; Under $250k; Casey'
    WHEN j.Curr_Contract_Source_System = 'INFL10'                       THEN 'Daniel'
    WHEN j.Curr_Bank_Code = 'L-SVB'                                     THEN 'Eleanor'
    WHEN j.Curr_RBC_Code = 'R'                                          THEN 'Autochange'
    WHEN j.Curr_Bank_Code = 'L-FCB'                                     THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner,

  /* ---- Movement_Type on CURRENT rows (Autochange subtypes first) ---- */
  CASE
    WHEN j.Curr_Auto_Flag = 1 AND (j.Prev_NA_Flag <> 'Y' AND j.Curr_NA_Flag = 'Y')
      THEN 'Autochange Downgrade IN'
    WHEN j.Curr_Auto_Flag = 1 AND j.Prev_Auto_Flag = 1
         AND j.Prev_NA_Flag = 'Y' AND j.Curr_NA_Flag = 'Y'
         AND COALESCE(j.Curr_SSB,0) <> COALESCE(j.Prev_SSB,0)
      THEN 'Autochange Persisting Balance Changes'
    WHEN j.Curr_Auto_Flag = 1 AND j.Prev_Auto_Flag = 1
         AND j.Prev_NA_Flag = 'Y' AND j.Curr_NA_Flag = 'Y'
         AND COALESCE(j.Curr_SSB,0)  = COALESCE(j.Prev_SSB,0)
      THEN 'Autochange No Change'

    WHEN j.Prev_NA_Flag <> 'Y' AND j.Curr_NA_Flag = 'Y'
      THEN 'Downgrade IN'
    WHEN j.Prev_NA_Flag = 'Y'  AND j.Curr_NA_Flag = 'Y'
         AND COALESCE(j.Curr_SSB,0) <> COALESCE(j.Prev_SSB,0)
      THEN 'Persisting Balance Changes'
    WHEN j.Prev_NA_Flag = 'Y'  AND j.Curr_NA_Flag = 'Y'
         AND COALESCE(j.Curr_SSB,0)  = COALESCE(j.Prev_SSB,0)
      THEN 'No Change'
    ELSE NULL
  END AS Movement_Type,

  j.Prev_SSB,
  j.Curr_SSB,
  (COALESCE(j.Curr_SSB,0) - COALESCE(j.Prev_SSB,0)) AS MoM_Delta,

  /* CIS totals for transparency */
  j.Curr_CIS_SSB,
  NULL::NUMERIC(38,2) AS Prev_CIS_SSB_for_row  -- (filled on prev rows below)

FROM joined_with_cis j
WHERE COALESCE(j.Curr_SSB,0) > 0

UNION ALL

SELECT
  /* ---- PREVIOUS MONTH ROWS (to surface Exits) ---- */
  (SELECT prev_eom FROM params)               AS End_of_Month_Date,
  j.Prev_Account_Name                         AS Account_Name,
  j.Prev_Contract_Source_System               AS Contract_Source_System,
  j.Prev_CIS_Customer_Number                  AS CIS_Customer_Number,
  j.Prev_Facility_ID                          AS Facility_ID,
  j.Account_Identifier                        AS Account_Identifier,
  j.Prev_Account_Key                          AS Account_Key,
  j.Prev_Status_Code_Description              AS Status_Code_Description,
  j.Prev_GL_ACCOUNT_HIER_LEVEL_4              AS GL_ACCOUNT_HIER_LEVEL_4,
  j.Prev_SSB                                  AS Source_System_Balance,
  j.Prev_GL_Balance                           AS GL_Balance,
  j.Prev_Available_Balance                    AS Available_Balance,
  j.Prev_Borrower_Risk_Rating                 AS Borrower_Risk_Rating,
  j.Prev_PD_Grade                             AS PD_Grade,
  j.Prev_Days_Past_Due                        AS Days_Past_Due,
  'Y'                                         AS Non_Accrual_Flag,
  j.Prev_PROD_HIER_LEVEL_5                    AS PROD_HIER_LEVEL_5,
  j.Prev_RBC_Code                             AS RBC_Code,
  j.Prev_GL_ACCOUNT_CODE                      AS GL_ACCOUNT_CODE,
  j.Prev_Bank_Code                            AS Bank_Code,

  /* Owner using CIS-level PRIOR thresholds (prev-side) */
  CASE
    WHEN j.Prev_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_CIS_SSB > 500000                                   THEN 'Samya'
    WHEN j.Prev_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_CIS_SSB > 250000                                   THEN 'Casey'
    WHEN j.Prev_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_CIS_SSB <= 500000                                  THEN 'Not Covered; Under $500k; Samya'
    WHEN j.Prev_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_CIS_SSB <= 250000                                  THEN 'Not Covered; Under $250k; Casey'
    WHEN j.Prev_Contract_Source_System = 'INFL10'                       THEN 'Daniel'
    WHEN j.Prev_Bank_Code = 'L-SVB'                                     THEN 'Eleanor'
    WHEN j.Prev_RBC_Code = 'R'                                          THEN 'Autochange'
    WHEN j.Prev_Bank_Code = 'L-FCB'                                     THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner,

  /* Movement_Type on PREVIOUS rows: Autochange Exit first, then Exit */
  CASE
    WHEN j.Prev_Auto_Flag = 1
         AND (j.Curr_NA_Flag <> 'Y' OR COALESCE(j.Curr_SSB,0) = 0)
      THEN 'Autochange Exit'
    WHEN j.Prev_NA_Flag = 'Y'
         AND (j.Curr_NA_Flag <> 'Y' OR COALESCE(j.Curr_SSB,0) = 0)
      THEN 'Exit'
    ELSE NULL
  END AS Movement_Type,

  j.Prev_SSB,
  j.Curr_SSB,
  (COALESCE(j.Curr_SSB,0) - COALESCE(j.Prev_SSB,0)) AS MoM_Delta,

  /* CIS totals for transparency */
  NULL::NUMERIC(38,2) AS Curr_CIS_SSB_for_row,
  j.Prev_CIS_SSB

FROM joined_with_cis j
WHERE COALESCE(j.Prev_SSB,0) > 0

ORDER BY
  End_of_Month_Date,
  Bank_Code,
  Account_Identifier;





WITH params AS (
  SELECT
    DATE '2025-09-30'                 AS curr_eom,
    ADD_MONTHS(DATE '2025-09-30', -1) AS prev_eom
),

/* ----- Snapshot true NA flag and Auto flag by account+month (no NA filter here) ----- */
flag_snap AS (
  SELECT
    /* normalize ID once to avoid trim/case mismatches */
    CASE WHEN Account_Identifier IS NULL OR TRIM(Account_Identifier)='' THEN '§NULL§' ELSE UPPER(TRIM(Account_Identifier)) END AS Account_Identifier,
    End_of_Month_Date,
    /* If multiple rows per acct/month, Y wins for NA; Auto_Flag=1 if any NA row has RBC='R' */
    MAX(Non_Accrual_Flag)                                                        AS NA_Flag,
    MAX(CASE WHEN Non_Accrual_Flag='Y' AND RBC_Code='R' THEN 1 ELSE 0 END)       AS Auto_Flag
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
  GROUP BY 1, End_of_Month_Date
),
flags_prev AS (
  SELECT Account_Identifier,
         MAX(NA_Flag)   AS Prev_NA_Flag,
         MAX(Auto_Flag) AS Prev_Auto_Flag
  FROM flag_snap
  WHERE End_of_Month_Date = (SELECT prev_eom FROM params)
  GROUP BY Account_Identifier
),
flags_curr AS (
  SELECT Account_Identifier,
         MAX(NA_Flag)   AS Curr_NA_Flag,
         MAX(Auto_Flag) AS Curr_Auto_Flag
  FROM flag_snap
  WHERE End_of_Month_Date = (SELECT curr_eom FROM params)
  GROUP BY Account_Identifier
),

/* ----- Base pull with filters + Bank_Code; normalize Account_Identifier ----- */
base AS (
  SELECT
      End_of_Month_Date,
      Account_Name,
      Contract_Source_System,
      CIS_Customer_Number,
      Facility_ID,
      CASE WHEN Account_Identifier IS NULL OR TRIM(Account_Identifier)='' THEN '§NULL§' ELSE UPPER(TRIM(Account_Identifier)) END AS Account_Identifier,
      Account_Key,
      Status_Code_Description,
      GL_ACCOUNT_HIER_LEVEL_4,
      Source_System_Balance,
      GL_Balance,
      Available_Balance,
      Borrower_Risk_Rating,
      PD_Grade,
      Days_Past_Due,
      Non_Accrual_Flag,
      PROD_HIER_LEVEL_5,
      RBC_Code,
      GL_ACCOUNT_CODE,
      CASE
        WHEN Contract_Source_System IN ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN')
          THEN 'L-SVB'
        WHEN Contract_Source_System = 'ALL'
             AND GL_ACCOUNT_CODE IN ('1051872','1061833','1041344','1041211','1041345','1041364','1041210',
                                     '1042127','1042213','1042048','1042368','1042408','1042409','1042424',
                                     '1100001','1142067','1042886','1043008')
          THEN 'L-SVB'
        WHEN Contract_Source_System IN ('ADJ','ALL','ALS','FDR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO')
          THEN 'L-FCB'
        WHEN Contract_Source_System IN ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN','INFL05','INFL05-EXCPTN',
                                        'INFL10','INFL10-EXCPTN','LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001',
                                        'SBO001-EXCPTN','STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN',
                                        'STRAT1','STRAT1-EXCPTN')
          THEN 'L-CIT'
        ELSE 'NULL-Need to Research'
      END AS Bank_Code
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE GL_ACCOUNT_HIER_LEVEL_4 IN ('Total Loans','Lns Held for Sale')
    AND End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
    AND Non_Accrual_Flag = 'Y'
    AND Source_System_Balance > 0
),

/* ----- Collapse to 1 row / acct / month for NA population (keeps your filters) ----- */
prev_norm AS (
  SELECT
      Account_Identifier,
      MAX(Account_Name)            AS Account_Name,
      MAX(Contract_Source_System)  AS Contract_Source_System,
      MAX(CIS_Customer_Number)     AS CIS_Customer_Number,
      MAX(Facility_ID)             AS Facility_ID,
      MAX(Account_Key)             AS Account_Key,
      MAX(Status_Code_Description) AS Status_Code_Description,
      MAX(GL_ACCOUNT_HIER_LEVEL_4) AS GL_ACCOUNT_HIER_LEVEL_4,
      SUM(Source_System_Balance)   AS Source_System_Balance,
      SUM(GL_Balance)              AS GL_Balance,
      MAX(Available_Balance)       AS Available_Balance,
      MAX(Borrower_Risk_Rating)    AS Borrower_Risk_Rating,
      MAX(PD_Grade)                AS PD_Grade,
      MAX(Days_Past_Due)           AS Days_Past_Due,
      'Y'                          AS Non_Accrual_Flag,
      MAX(PROD_HIER_LEVEL_5)       AS PROD_HIER_LEVEL_5,
      MAX(RBC_Code)                AS RBC_Code,
      MAX(GL_ACCOUNT_CODE)         AS GL_ACCOUNT_CODE,
      MAX(Bank_Code)               AS Bank_Code
  FROM base
  WHERE End_of_Month_Date = (SELECT prev_eom FROM params)
  GROUP BY Account_Identifier
),
curr_norm AS (
  SELECT
      Account_Identifier,
      MAX(Account_Name)            AS Account_Name,
      MAX(Contract_Source_System)  AS Contract_Source_System,
      MAX(CIS_Customer_Number)     AS CIS_Customer_Number,
      MAX(Facility_ID)             AS Facility_ID,
      MAX(Account_Key)             AS Account_Key,
      MAX(Status_Code_Description) AS Status_Code_Description,
      MAX(GL_ACCOUNT_HIER_LEVEL_4) AS GL_ACCOUNT_HIER_LEVEL_4,
      SUM(Source_System_Balance)   AS Source_System_Balance,
      SUM(GL_Balance)              AS GL_Balance,
      MAX(Available_Balance)       AS Available_Balance,
      MAX(Borrower_Risk_Rating)    AS Borrower_Risk_Rating,
      MAX(PD_Grade)                AS PD_Grade,
      MAX(Days_Past_Due)           AS Days_Past_Due,
      'Y'                          AS Non_Accrual_Flag,
      MAX(PROD_HIER_LEVEL_5)       AS PROD_HIER_LEVEL_5,
      MAX(RBC_Code)                AS RBC_Code,
      MAX(GL_ACCOUNT_CODE)         AS GL_ACCOUNT_CODE,
      MAX(Bank_Code)               AS Bank_Code
  FROM base
  WHERE End_of_Month_Date = (SELECT curr_eom FROM params)
  GROUP BY Account_Identifier
),

/* ----- Join months + attach true flags ----- */
joined AS (
  SELECT
    COALESCE(c.Account_Identifier, p.Account_Identifier) AS Account_Identifier,

    /* NA-pop balances (with your filters) */
    p.Source_System_Balance AS Prev_SSB,
    c.Source_System_Balance AS Curr_SSB,

    /* True NA / Auto flags per month (from flag snapshots) */
    COALESCE(fp.Prev_NA_Flag,'N')   AS Prev_NA_Flag,
    COALESCE(fc.Curr_NA_Flag,'N')   AS Curr_NA_Flag,
    COALESCE(fp.Prev_Auto_Flag,0)   AS Prev_Auto_Flag,
    COALESCE(fc.Curr_Auto_Flag,0)   AS Curr_Auto_Flag,

    /* carry prev fields */
    p.Account_Name              AS Prev_Account_Name,
    p.Contract_Source_System    AS Prev_Contract_Source_System,
    p.CIS_Customer_Number       AS Prev_CIS_Customer_Number,
    p.Facility_ID               AS Prev_Facility_ID,
    p.Account_Key               AS Prev_Account_Key,
    p.Status_Code_Description   AS Prev_Status_Code_Description,
    p.GL_ACCOUNT_HIER_LEVEL_4   AS Prev_GL_ACCOUNT_HIER_LEVEL_4,
    p.GL_Balance                AS Prev_GL_Balance,
    p.Available_Balance         AS Prev_Available_Balance,
    p.Borrower_Risk_Rating      AS Prev_Borrower_Risk_Rating,
    p.PD_Grade                  AS Prev_PD_Grade,
    p.Days_Past_Due             AS Prev_Days_Past_Due,
    p.PROD_HIER_LEVEL_5         AS Prev_PROD_HIER_LEVEL_5,
    p.RBC_Code                  AS Prev_RBC_Code,
    p.GL_ACCOUNT_CODE           AS Prev_GL_ACCOUNT_CODE,
    p.Bank_Code                 AS Prev_Bank_Code,

    /* carry curr fields */
    c.Account_Name              AS Curr_Account_Name,
    c.Contract_Source_System    AS Curr_Contract_Source_System,
    c.CIS_Customer_Number       AS Curr_CIS_Customer_Number,
    c.Facility_ID               AS Curr_Facility_ID,
    c.Account_Key               AS Curr_Account_Key,
    c.Status_Code_Description   AS Curr_Status_Code_Description,
    c.GL_ACCOUNT_HIER_LEVEL_4   AS Curr_GL_ACCOUNT_HIER_LEVEL_4,
    c.GL_Balance                AS Curr_GL_Balance,
    c.Available_Balance         AS Curr_Available_Balance,
    c.Borrower_Risk_Rating      AS Curr_Borrower_Risk_Rating,
    c.PD_Grade                  AS Curr_PD_Grade,
    c.Days_Past_Due             AS Curr_Days_Past_Due,
    c.PROD_HIER_LEVEL_5         AS Curr_PROD_HIER_LEVEL_5,
    c.RBC_Code                  AS Curr_RBC_Code,
    c.GL_ACCOUNT_CODE           AS Curr_GL_ACCOUNT_CODE,
    c.Bank_Code                 AS Curr_Bank_Code
  FROM curr_norm c
  FULL OUTER JOIN prev_norm p
    ON c.Account_Identifier = p.Account_Identifier
  LEFT JOIN flags_prev fp
    ON fp.Account_Identifier = COALESCE(c.Account_Identifier, p.Account_Identifier)
  LEFT JOIN flags_curr fc
    ON fc.Account_Identifier = COALESCE(c.Account_Identifier, p.Account_Identifier)
)

/* ===== FINAL OUTPUT ===== */
SELECT
  /* ---------- CURRENT MONTH ROWS ---------- */
  (SELECT curr_eom FROM params)               AS End_of_Month_Date,
  j.Curr_Account_Name                         AS Account_Name,
  j.Curr_Contract_Source_System               AS Contract_Source_System,
  j.Curr_CIS_Customer_Number                  AS CIS_Customer_Number,
  j.Curr_Facility_ID                          AS Facility_ID,
  j.Account_Identifier                        AS Account_Identifier,
  j.Curr_Account_Key                          AS Account_Key,
  j.Curr_Status_Code_Description              AS Status_Code_Description,
  j.Curr_GL_ACCOUNT_HIER_LEVEL_4              AS GL_ACCOUNT_HIER_LEVEL_4,
  j.Curr_SSB                                  AS Source_System_Balance,
  j.Curr_GL_Balance                           AS GL_Balance,
  j.Curr_Available_Balance                    AS Available_Balance,
  j.Curr_Borrower_Risk_Rating                 AS Borrower_Risk_Rating,
  j.Curr_PD_Grade                             AS PD_Grade,
  j.Curr_Days_Past_Due                        AS Days_Past_Due,
  'Y'                                         AS Non_Accrual_Flag,
  j.Curr_PROD_HIER_LEVEL_5                    AS PROD_HIER_LEVEL_5,
  j.Curr_RBC_Code                             AS RBC_Code,
  j.Curr_GL_ACCOUNT_CODE                      AS GL_ACCOUNT_CODE,
  j.Curr_Bank_Code                            AS Bank_Code,

  /* ----- Owner (current month) ----- */
  CASE
    WHEN j.Curr_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_SSB > 500000                                  THEN 'Samya'
    WHEN j.Curr_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_SSB > 250000                                  THEN 'Casey'
    WHEN j.Curr_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_SSB <= 500000                                 THEN 'Not Covered; Under $500k; Samya'
    WHEN j.Curr_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_SSB <= 250000                                 THEN 'Not Covered; Under $250k; Casey'
    WHEN j.Curr_Contract_Source_System = 'INFL10'                  THEN 'Daniel'
    WHEN j.Curr_Bank_Code = 'L-SVB'                                THEN 'Eleanor'
    WHEN j.Curr_RBC_Code = 'R'                                     THEN 'Autochange'
    WHEN j.Curr_Bank_Code = 'L-FCB'                                THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner,

  /* ----- Characterization (current month rows only; Auto subtypes first) ----- */
  CASE
    WHEN j.Curr_Auto_Flag = 1 AND (j.Prev_NA_Flag <> 'Y' AND j.Curr_NA_Flag = 'Y')
      THEN 'Autochange Downgrade IN'
    WHEN j.Curr_Auto_Flag = 1 AND j.Prev_Auto_Flag = 1
         AND j.Prev_NA_Flag = 'Y' AND j.Curr_NA_Flag = 'Y'
         AND COALESCE(j.Curr_SSB,0) <> COALESCE(j.Prev_SSB,0)
      THEN 'Autochange Persisting Balance Changes'
    WHEN j.Curr_Auto_Flag = 1 AND j.Prev_Auto_Flag = 1
         AND j.Prev_NA_Flag = 'Y' AND j.Curr_NA_Flag = 'Y'
         AND COALESCE(j.Curr_SSB,0)  = COALESCE(j.Prev_SSB,0)
      THEN 'Autochange No Change'

    WHEN j.Prev_NA_Flag <> 'Y' AND j.Curr_NA_Flag = 'Y'
      THEN 'Downgrade IN'
    WHEN j.Prev_NA_Flag = 'Y'  AND j.Curr_NA_Flag = 'Y'
         AND COALESCE(j.Curr_SSB,0) <> COALESCE(j.Prev_SSB,0)
      THEN 'Persisting Balance Changes'
    WHEN j.Prev_NA_Flag = 'Y'  AND j.Curr_NA_Flag = 'Y'
         AND COALESCE(j.Curr_SSB,0)  = COALESCE(j.Prev_SSB,0)
      THEN 'No Change'
    ELSE NULL
  END AS Characterization,
  j.Prev_SSB,
  j.Curr_SSB,
  (COALESCE(j.Curr_SSB,0) - COALESCE(j.Prev_SSB,0)) AS MoM_Delta

FROM joined j
WHERE COALESCE(j.Curr_SSB,0) > 0

UNION ALL

SELECT
  /* ---------- PREVIOUS MONTH ROWS (to surface Exits) ---------- */
  (SELECT prev_eom FROM params)               AS End_of_Month_Date,
  j.Prev_Account_Name                         AS Account_Name,
  j.Prev_Contract_Source_System               AS Contract_Source_System,
  j.Prev_CIS_Customer_Number                  AS CIS_Customer_Number,
  j.Prev_Facility_ID                          AS Facility_ID,
  j.Account_Identifier                        AS Account_Identifier,
  j.Prev_Account_Key                          AS Account_Key,
  j.Prev_Status_Code_Description              AS Status_Code_Description,
  j.Prev_GL_ACCOUNT_HIER_LEVEL_4              AS GL_ACCOUNT_HIER_LEVEL_4,
  j.Prev_SSB                                  AS Source_System_Balance,
  j.Prev_GL_Balance                           AS GL_Balance,
  j.Prev_Available_Balance                    AS Available_Balance,
  j.Prev_Borrower_Risk_Rating                 AS Borrower_Risk_Rating,
  j.Prev_PD_Grade                             AS PD_Grade,
  j.Prev_Days_Past_Due                        AS Prev_Days_Past_Due,
  'Y'                                         AS Non_Accrual_Flag,
  j.Prev_PROD_HIER_LEVEL_5                    AS PROD_HIER_LEVEL_5,
  j.Prev_RBC_Code                             AS RBC_Code,
  j.Prev_GL_ACCOUNT_CODE                      AS GL_ACCOUNT_CODE,
  j.Prev_Bank_Code                            AS Bank_Code,

  /* Owner (prev month attributes on prev rows) */
  CASE
    WHEN j.Prev_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_SSB > 500000                                  THEN 'Samya'
    WHEN j.Prev_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_SSB > 250000                                  THEN 'Casey'
    WHEN j.Prev_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_SSB <= 500000                                 THEN 'Not Covered; Under $500k; Samya'
    WHEN j.Prev_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_SSB <= 250000                                 THEN 'Not Covered; Under $250k; Casey'
    WHEN j.Prev_Contract_Source_System = 'INFL10'                  THEN 'Daniel'
    WHEN j.Prev_Bank_Code = 'L-SVB'                                THEN 'Eleanor'
    WHEN j.Prev_RBC_Code = 'R'                                     THEN 'Autochange'
    WHEN j.Prev_Bank_Code = 'L-FCB'                                THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner,

  /* Characterization on prev rows: Autochange Exit first, then Exit */
  CASE
    WHEN j.Prev_Auto_Flag = 1
         AND (j.Curr_NA_Flag <> 'Y' OR COALESCE(j.Curr_SSB,0) = 0)
      THEN 'Autochange Exit'
    WHEN j.Prev_NA_Flag = 'Y'
         AND (j.Curr_NA_Flag <> 'Y' OR COALESCE(j.Curr_SSB,0) = 0)
      THEN 'Exit'
    ELSE NULL
  END AS Characterization,
  j.Prev_SSB,
  j.Curr_SSB,
  (COALESCE(j.Curr_SSB,0) - COALESCE(j.Prev_SSB,0)) AS MoM_Delta

FROM joined j
WHERE COALESCE(j.Prev_SSB,0) > 0

ORDER BY
  End_of_Month_Date,
  Bank_Code,
  Account_Identifier;WITH params AS (
  SELECT DATE '2025-09-30' AS curr_eom,
         ADD_MONTHS(DATE '2025-09-30', -1) AS prev_eom
),
/* TRUE flags per account+month (no NA filter) */
flag_snap AS (
  SELECT
    CASE WHEN Account_Identifier IS NULL OR TRIM(Account_Identifier)='' THEN '§NULL§' ELSE UPPER(TRIM(Account_Identifier)) END AS Account_Identifier,
    End_of_Month_Date,
    MAX(Non_Accrual_Flag) AS NA_Flag,
    MAX(CASE WHEN Non_Accrual_Flag='Y' AND RBC_Code='R' THEN 1 ELSE 0 END) AS Auto_Flag
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
  GROUP BY 1, End_of_Month_Date
),
flags_prev AS (
  SELECT Account_Identifier, MAX(NA_Flag) AS Prev_NA_Flag, MAX(Auto_Flag) AS Prev_Auto_Flag
  FROM flag_snap WHERE End_of_Month_Date=(SELECT prev_eom FROM params) GROUP BY Account_Identifier
),
flags_curr AS (
  SELECT Account_Identifier, MAX(NA_Flag) AS Curr_NA_Flag, MAX(Auto_Flag) AS Curr_Auto_Flag
  FROM flag_snap WHERE End_of_Month_Date=(SELECT curr_eom FROM params) GROUP BY Account_Identifier
),

/* NA-filtered bases collapsed to 1 row/account/month using SSB */
base AS (
  SELECT
    End_of_Month_Date,
    CASE WHEN Account_Identifier IS NULL OR TRIM(Account_Identifier)='' THEN '§NULL§' ELSE UPPER(TRIM(Account_Identifier)) END AS Account_Identifier,
    SUM(Source_System_Balance) AS SSB,
    MAX(RBC_Code) AS RBC_Code
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE GL_ACCOUNT_HIER_LEVEL_4 IN ('Total Loans','Lns Held for Sale')
    AND End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
    AND Non_Accrual_Flag='Y'
    AND Source_System_Balance>0
  GROUP BY End_of_Month_Date,
           CASE WHEN Account_Identifier IS NULL OR TRIM(Account_Identifier)='' THEN '§NULL§' ELSE UPPER(TRIM(Account_Identifier)) END
),
prev_norm AS (
  SELECT Account_Identifier, SSB AS Prev_SSB
  FROM base WHERE End_of_Month_Date=(SELECT prev_eom FROM params)
),
curr_norm AS (
  SELECT Account_Identifier, SSB AS Curr_SSB, RBC_Code
  FROM base WHERE End_of_Month_Date=(SELECT curr_eom FROM params)
),
joined AS (
  SELECT
    COALESCE(c.Account_Identifier,p.Account_Identifier) AS Account_Identifier,
    p.Prev_SSB,
    c.Curr_SSB,
    COALESCE(fp.Prev_NA_Flag,'N') AS Prev_NA_Flag,
    COALESCE(fc.Curr_NA_Flag,'N') AS Curr_NA_Flag,
    COALESCE(fp.Prev_Auto_Flag,0) AS Prev_Auto_Flag,
    COALESCE(fc.Curr_Auto_Flag,0) AS Curr_Auto_Flag
  FROM curr_norm c
  FULL OUTER JOIN prev_norm p
    ON c.Account_Identifier=p.Account_Identifier
  LEFT JOIN flags_prev fp
    ON fp.Account_Identifier=COALESCE(c.Account_Identifier,p.Account_Identifier)
  LEFT JOIN flags_curr fc
    ON fc.Account_Identifier=COALESCE(c.Account_Identifier,p.Account_Identifier)
),
bridge AS (
  SELECT 'Prev Month Non-Accrual Bal' AS line,
         SUM(COALESCE(Prev_SSB,0))::NUMERIC(38,2) AS amount
  FROM joined
  UNION ALL
  SELECT 'Downgrade IN (ex-Auto)',
         SUM(CASE WHEN Curr_NA_Flag='Y' AND Prev_NA_Flag<>'Y' AND Curr_Auto_Flag=0
                  THEN COALESCE(Curr_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM joined
  UNION ALL
  SELECT 'Exits (ex-Auto)',
         -SUM(CASE WHEN Prev_NA_Flag='Y' AND (Curr_NA_Flag<>'Y' OR COALESCE(Curr_SSB,0)=0) AND Prev_Auto_Flag=0
                   THEN COALESCE(Prev_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM joined
  UNION ALL
  SELECT 'Autochange (net)',
         (SUM(CASE WHEN Curr_Auto_Flag=1 THEN COALESCE(Curr_SSB,0) ELSE 0 END)
         -SUM(CASE WHEN Prev_Auto_Flag=1 THEN COALESCE(Prev_SSB,0) ELSE 0 END))::NUMERIC(38,2)
  FROM joined
  UNION ALL
  SELECT 'Persisting Bal Changes (ex-Auto)',
         SUM(CASE WHEN Prev_NA_Flag='Y' AND Curr_NA_Flag='Y' AND Curr_Auto_Flag=0
                  THEN (COALESCE(Curr_SSB,0)-COALESCE(Prev_SSB,0)) ELSE 0 END)::NUMERIC(38,2)
  FROM joined
  UNION ALL
  SELECT 'Persisting No Change', CAST(0 AS NUMERIC(38,2))
  UNION ALL
  SELECT 'Current Month Bal',
         SUM(COALESCE(Curr_SSB,0))::NUMERIC(38,2)
  FROM joined
)
SELECT line, amount
FROM bridge;









=LET(
  bank, B$1,
  mask, (Account_Detail[Is_Add]=TRUE)*
        (Account_Detail[Bank_For_Event]=bank)*
        (Account_Detail[Owner_For_Event]<>"Autochange")*
        (Account_Detail[Owner_For_Event]<>"Not Covered; Under $250k; Casey")*
        (Account_Detail[Owner_For_Event]<>"Not Covered; Under $500k; Samya"),
  fac, FILTER(Account_Detail[Facility_For_Event], mask),
  amt, FILTER(Account_Detail[Balance_For_Event],  mask),
  fac_u, UNIQUE(fac),
  fac_sum, MAP(fac_u, LAMBDA(f, SUM(IF(fac=f, amt)))),
  SUM(IFERROR(LARGE(fac_sum, SEQUENCE(30)), 0))
)






=ROWS(UNIQUE(FILTER(
  Account_Detail[Facility_For_Event],
  (Account_Detail[Is_Add]=TRUE)*
  (Account_Detail[curr_auto]=0)*
  (Account_Detail[Bank_For_Event]=B$1)
)))

=-ROWS(UNIQUE(FILTER(
  Account_Detail[Facility_For_Event],
  (Account_Detail[Is_Exit]=TRUE)*
  (Account_Detail[prev_auto]=0)*
  (Account_Detail[Bank_For_Event]=B$1)
)))

=ROWS(UNIQUE(FILTER(
  Account_Detail[Curr_Facility_ID],
  (Account_Detail[has_curr]=TRUE)*
  (Account_Detail[Curr_Bank_Code]=B$1)
)))




=ROWS(UNIQUE(FILTER(
    Account_Detail[Facility_For_Event],
    (Account_Detail[Is_Add]=TRUE)*
    (Account_Detail[curr_auto]=1)*
    (Account_Detail[Bank_For_Event]=B$1)
)))
-
ROWS(UNIQUE(FILTER(
    Account_Detail[Facility_For_Event],
    (Account_Detail[Is_Exit]=TRUE)*
    (Account_Detail[prev_auto]=1)*
    (Account_Detail[Bank_For_Event]=B$1)
)))





•	Is_Casey_Add_UT
=AND([@Is_Add],[@curr_auto]=0,[@Curr_Bank_Code]="L-CIT",OR([@Curr_PROD5]="Business Non-RE Term Loans",[@Curr_PROD5]="Business Commitment Draw"),[@Curr_SSB]<=250000)
	•	Is_Samya_Add_UT
=AND([@Is_Add],[@curr_auto]=0,[@Curr_Bank_Code]="L-CIT",[@Curr_PROD5]="Business RE Term Loans",[@Curr_SSB]<=500000)
	•	Is_Casey_Exit_UT
=AND([@Is_Exit],[@prev_auto]=0,[@Prev_Bank_Code]="L-CIT",OR([@Prev_PROD5]="Business Non-RE Term Loans",[@Prev_PROD5]="Business Commitment Draw"),[@Prev_SSB]<=250000)
	•	Is_Samya_Exit_UT
=AND([@Is_Exit],[@prev_auto]=0,[@Prev_Bank_Code]="L-CIT",[@Prev_PROD5]="Business RE Term Loans",[@Prev_SSB]<=500000)

C. One facility & balance “for event”
	•	Facility_For_Event
=IF([@Is_Exit],[@Prev_Facility_ID],[@Curr_Facility_ID])
	•	Balance_For_Event
=IF([@Is_Exit],[@Prev_SSB],[@Curr_SSB])





WITH params AS (
  SELECT DATE '2025-09-30' curr_eom,
         ADD_MONTHS(DATE '2025-09-30',-1) prev_eom
),
banked AS (
  SELECT
    End_of_Month_Date,
    UPPER(TRIM(Account_Identifier)) AS Account_Identifier,
    UPPER(TRIM(Facility_ID))        AS Facility_ID,
    Contract_Source_System,
    RBC_Code,
    Source_System_Balance,
    GL_ACCOUNT_HIER_LEVEL_4,
    CASE
      WHEN Contract_Source_System IN ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN') THEN 'L-SVB'
      WHEN Contract_Source_System='ALL' AND GL_ACCOUNT_CODE IN
        ('1051872','1061833','1041344','1041211','1041345','1041364','1041210','1042127','1042213','1042048','1042368','1042408','1042409','1042424','1100001','1142067','1042886','1043008') THEN 'L-SVB'
      WHEN Contract_Source_System IN ('ADJ','ALL','ALS','FDR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO') THEN 'L-FCB'
      WHEN Contract_Source_System IN ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN','INFL05','INFL05-EXCPTN','INFL10','INFL10-EXCPTN','LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001','SBO001-EXCPTN','STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN','STRAT1','STRAT1-EXCPTN') THEN 'L-CIT'
      ELSE 'NULL-Need to Research'
    END AS Bank_Code
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
    AND GL_ACCOUNT_HIER_LEVEL_4 IN ('Total Loans','Lns Held for Sale')
),
prev_fac AS (
  SELECT Bank_Code AS Bank_Code, Facility_ID,
         MAX(CASE WHEN RBC_Code='R' THEN 1 ELSE 0 END) AS Prev_Auto_Flag
  FROM banked
  WHERE End_of_Month_Date=(SELECT prev_eom FROM params) AND Non_Accrual_Flag='Y' AND Source_System_Balance>0
    AND Facility_ID IS NOT NULL
  GROUP BY Bank_Code, Facility_ID
),
curr_fac AS (
  SELECT Bank_Code AS Bank_Code, Facility_ID,
         MAX(CASE WHEN RBC_Code='R' THEN 1 ELSE 0 END) AS Curr_Auto_Flag
  FROM banked
  WHERE End_of_Month_Date=(SELECT curr_eom FROM params) AND Non_Accrual_Flag='Y' AND Source_System_Balance>0
    AND Facility_ID IS NOT NULL
  GROUP BY Bank_Code, Facility_ID
)
SELECT
  COALESCE(c.Bank_Code,p.Bank_Code) AS Bank_Code,
  COALESCE(c.Facility_ID,p.Facility_ID) AS Facility_ID,
  CASE WHEN p.Facility_ID IS NOT NULL THEN 1 ELSE 0 END AS Prev_Present,
  CASE WHEN c.Facility_ID IS NOT NULL THEN 1 ELSE 0 END AS Curr_Present,
  COALESCE(p.Prev_Auto_Flag,0) AS Prev_Auto_Flag,
  COALESCE(c.Curr_Auto_Flag,0) AS Curr_Auto_Flag
FROM curr_fac c
FULL OUTER JOIN prev_fac p
  ON c.Bank_Code=p.Bank_Code AND c.Facility_ID=p.Facility_ID;




WITH params AS (
  SELECT DATE '2025-09-30' curr_eom,
         ADD_MONTHS(DATE '2025-09-30',-1) prev_eom
),
banked AS (
  SELECT
    End_of_Month_Date,
    UPPER(TRIM(Account_Identifier)) AS Account_Identifier,
    UPPER(TRIM(Facility_ID))        AS Facility_ID,
    Contract_Source_System,
    PROD_HIER_LEVEL_5,
    RBC_Code,
    Source_System_Balance,
    GL_ACCOUNT_HIER_LEVEL_4,
    CASE
      WHEN Contract_Source_System IN ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN') THEN 'L-SVB'
      WHEN Contract_Source_System='ALL' AND GL_ACCOUNT_CODE IN
        ('1051872','1061833','1041344','1041211','1041345','1041364','1041210','1042127','1042213','1042048','1042368','1042408','1042409','1042424','1100001','1142067','1042886','1043008') THEN 'L-SVB'
      WHEN Contract_Source_System IN ('ADJ','ALL','ALS','FDR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO') THEN 'L-FCB'
      WHEN Contract_Source_System IN ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN','INFL05','INFL05-EXCPTN','INFL10','INFL10-EXCPTN','LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001','SBO001-EXCPTN','STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN','STRAT1','STRAT1-EXCPTN') THEN 'L-CIT'
      ELSE 'NULL-Need to Research'
    END AS Bank_Code,
    GL_ACCOUNT_CODE
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
    AND GL_ACCOUNT_HIER_LEVEL_4 IN ('Total Loans','Lns Held for Sale')
),
prev_na AS (
  SELECT Account_Identifier,
         MAX(Bank_Code) AS Prev_Bank_Code,
         MAX(Facility_ID) AS Prev_Facility_ID,
         MAX(PROD_HIER_LEVEL_5) AS Prev_PROD5,
         MAX(Contract_Source_System) AS Prev_CSS,
         MAX(RBC_Code) AS Prev_RBC,
         SUM(Source_System_Balance) AS Prev_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT prev_eom FROM params)
    AND Non_Accrual_Flag='Y' AND Source_System_Balance>0
  GROUP BY Account_Identifier
),
curr_na AS (
  SELECT Account_Identifier,
         MAX(Bank_Code) AS Curr_Bank_Code,
         MAX(Facility_ID) AS Curr_Facility_ID,
         MAX(PROD_HIER_LEVEL_5) AS Curr_PROD5,
         MAX(Contract_Source_System) AS Curr_CSS,
         MAX(RBC_Code) AS Curr_RBC,
         SUM(Source_System_Balance) AS Curr_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT curr_eom FROM params)
    AND Non_Accrual_Flag='Y' AND Source_System_Balance>0
  GROUP BY Account_Identifier
)
SELECT
  COALESCE(c.Account_Identifier,p.Account_Identifier) AS Account_Identifier,
  /* prev */
  p.Prev_Bank_Code, p.Prev_Facility_ID, p.Prev_PROD5, p.Prev_CSS, p.Prev_RBC, p.Prev_SSB,
  /* curr */
  c.Curr_Bank_Code, c.Curr_Facility_ID, c.Curr_PROD5, c.Curr_CSS, c.Curr_RBC, c.Curr_SSB,
  /* flags */
  CASE WHEN COALESCE(p.Prev_SSB,0)>0 THEN 1 ELSE 0 END AS had_prev,
  CASE WHEN COALESCE(c.Curr_SSB,0)>0 THEN 1 ELSE 0 END AS has_curr,
  CASE WHEN UPPER(COALESCE(p.Prev_RBC,''))='R' THEN 1 ELSE 0 END AS prev_auto,
  CASE WHEN UPPER(COALESCE(c.Curr_RBC,''))='R' THEN 1 ELSE 0 END AS curr_auto,
  /* delta */
  COALESCE(c.Curr_SSB,0) - COALESCE(p.Prev_SSB,0) AS MoM_Delta,
  /* characterization */
  CASE
    WHEN had_prev=0 AND has_curr=1 AND curr_auto=1 THEN 'Autochange Downgrade IN'
    WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN 'Autochange Exit'
    WHEN had_prev=1 AND has_curr=1 AND prev_auto=1 AND curr_auto=1 AND (COALESCE(c.Curr_SSB,0)<>COALESCE(p.Prev_SSB,0)) THEN 'Autochange Persisting Δ'
    WHEN had_prev=1 AND has_curr=1 AND prev_auto=1 AND curr_auto=1 AND (COALESCE(c.Curr_SSB,0)= COALESCE(p.Prev_SSB,0)) THEN 'Autochange No Change'
    WHEN had_prev=0 AND has_curr=1 AND curr_auto=0 THEN 'Downgrade IN (ex-Auto)'
    WHEN had_prev=1 AND has_curr=0 AND prev_auto=0 THEN 'Exit (ex-Auto)'
    WHEN had_prev=1 AND has_curr=1 AND curr_auto=0 AND (COALESCE(c.Curr_SSB,0)<>COALESCE(p.Prev_SSB,0)) THEN 'Persisting Δ (ex-Auto)'
    WHEN had_prev=1 AND has_curr=1 AND curr_auto=0 AND (COALESCE(c.Curr_SSB,0)= COALESCE(p.Prev_SSB,0)) THEN 'No Change (ex-Auto)'
  END AS Characterization,
  /* owner (curr/prev thresholds) */
  CASE
    WHEN c.Curr_PROD5='Business RE Term Loans' AND c.Curr_Bank_Code='L-CIT' AND COALESCE(c.Curr_SSB,0)>500000 THEN 'Samya'
    WHEN c.Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND c.Curr_Bank_Code='L-CIT' AND COALESCE(c.Curr_SSB,0)>250000 THEN 'Casey'
    WHEN c.Curr_PROD5='Business RE Term Loans' AND c.Curr_Bank_Code='L-CIT' AND COALESCE(c.Curr_SSB,0)<=500000 THEN 'Not Covered; Under $500k; Samya'
    WHEN c.Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND c.Curr_Bank_Code='L-CIT' AND COALESCE(c.Curr_SSB,0)<=250000 THEN 'Not Covered; Under $250k; Casey'
    WHEN c.Curr_CSS='INFL10' THEN 'Daniel'
    WHEN c.Curr_Bank_Code='L-SVB' THEN 'Eleanor'
    WHEN c.Curr_RBC='R' THEN 'Autochange'
    WHEN c.Curr_Bank_Code='L-FCB' THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner_Curr,
  CASE
    WHEN p.Prev_PROD5='Business RE Term Loans' AND p.Prev_Bank_Code='L-CIT' AND COALESCE(p.Prev_SSB,0)>500000 THEN 'Samya'
    WHEN p.Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND p.Prev_Bank_Code='L-CIT' AND COALESCE(p.Prev_SSB,0)>250000 THEN 'Casey'
    WHEN p.Prev_PROD5='Business RE Term Loans' AND p.Prev_Bank_Code='L-CIT' AND COALESCE(p.Prev_SSB,0)<=500000 THEN 'Not Covered; Under $500k; Samya'
    WHEN p.Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND p.Prev_Bank_Code='L-CIT' AND COALESCE(p.Prev_SSB,0)<=250000 THEN 'Not Covered; Under $250k; Casey'
    WHEN p.Prev_CSS='INFL10' THEN 'Daniel'
    WHEN p.Prev_Bank_Code='L-SVB' THEN 'Eleanor'
    WHEN p.Prev_RBC='R' THEN 'Autochange'
    WHEN p.Prev_Bank_Code='L-FCB' THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner_Prev,
  /* bank for event (aligns to bridges) */
  CASE
    WHEN had_prev=1 AND has_curr=0 THEN p.Prev_Bank_Code
    WHEN has_curr=1 THEN c.Curr_Bank_Code
    ELSE COALESCE(c.Curr_Bank_Code,p.Prev_Bank_Code)
  END AS Bank_For_Event
FROM curr_na c
FULL OUTER JOIN prev_na p ON c.Account_Identifier=p.Account_Identifier;





WITH params AS (
  SELECT DATE '2025-09-30' curr_eom,
         ADD_MONTHS(DATE '2025-09-30',-1) prev_eom
),
banked AS (
  SELECT
    End_of_Month_Date,
    UPPER(TRIM(Account_Identifier)) AS Account_Identifier,
    UPPER(TRIM(Facility_ID))        AS Facility_ID,
    Contract_Source_System,
    PROD_HIER_LEVEL_5,
    RBC_Code,
    Source_System_Balance,
    GL_ACCOUNT_HIER_LEVEL_4,
    CASE
      WHEN Contract_Source_System IN ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN') THEN 'L-SVB'
      WHEN Contract_Source_System='ALL' AND GL_ACCOUNT_CODE IN
        ('1051872','1061833','1041344','1041211','1041345','1041364','1041210','1042127','1042213','1042048','1042368','1042408','1042409','1042424','1100001','1142067','1042886','1043008') THEN 'L-SVB'
      WHEN Contract_Source_System IN ('ADJ','ALL','ALS','FDR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO') THEN 'L-FCB'
      WHEN Contract_Source_System IN ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN','INFL05','INFL05-EXCPTN','INFL10','INFL10-EXCPTN','LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001','SBO001-EXCPTN','STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN','STRAT1','STRAT1-EXCPTN') THEN 'L-CIT'
      ELSE 'NULL-Need to Research'
    END AS Bank_Code,
    GL_ACCOUNT_CODE
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
    AND GL_ACCOUNT_HIER_LEVEL_4 IN ('Total Loans','Lns Held for Sale')
),
prev_na AS (
  SELECT Account_Identifier,
         MAX(Bank_Code) AS Prev_Bank_Code,
         MAX(Facility_ID) AS Prev_Facility_ID,
         MAX(PROD_HIER_LEVEL_5) AS Prev_PROD5,
         MAX(Contract_Source_System) AS Prev_CSS,
         MAX(RBC_Code) AS Prev_RBC,
         SUM(Source_System_Balance) AS Prev_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT prev_eom FROM params)
    AND Non_Accrual_Flag='Y' AND Source_System_Balance>0
  GROUP BY Account_Identifier
),
curr_na AS (
  SELECT Account_Identifier,
         MAX(Bank_Code) AS Curr_Bank_Code,
         MAX(Facility_ID) AS Curr_Facility_ID,
         MAX(PROD_HIER_LEVEL_5) AS Curr_PROD5,
         MAX(Contract_Source_System) AS Curr_CSS,
         MAX(RBC_Code) AS Curr_RBC,
         SUM(Source_System_Balance) AS Curr_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT curr_eom FROM params)
    AND Non_Accrual_Flag='Y' AND Source_System_Balance>0
  GROUP BY Account_Identifier
)
SELECT
  COALESCE(c.Account_Identifier,p.Account_Identifier) AS Account_Identifier,
  /* prev */
  p.Prev_Bank_Code, p.Prev_Facility_ID, p.Prev_PROD5, p.Prev_CSS, p.Prev_RBC, p.Prev_SSB,
  /* curr */
  c.Curr_Bank_Code, c.Curr_Facility_ID, c.Curr_PROD5, c.Curr_CSS, c.Curr_RBC, c.Curr_SSB,
  /* flags */
  CASE WHEN COALESCE(p.Prev_SSB,0)>0 THEN 1 ELSE 0 END AS had_prev,
  CASE WHEN COALESCE(c.Curr_SSB,0)>0 THEN 1 ELSE 0 END AS has_curr,
  CASE WHEN UPPER(COALESCE(p.Prev_RBC,''))='R' THEN 1 ELSE 0 END AS prev_auto,
  CASE WHEN UPPER(COALESCE(c.Curr_RBC,''))='R' THEN 1 ELSE 0 END AS curr_auto,
  /* delta */
  COALESCE(c.Curr_SSB,0) - COALESCE(p.Prev_SSB,0) AS MoM_Delta,
  /* characterization */
  CASE
    WHEN had_prev=0 AND has_curr=1 AND curr_auto=1 THEN 'Autochange Downgrade IN'
    WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN 'Autochange Exit'
    WHEN had_prev=1 AND has_curr=1 AND prev_auto=1 AND curr_auto=1 AND (COALESCE(c.Curr_SSB,0)<>COALESCE(p.Prev_SSB,0)) THEN 'Autochange Persisting Δ'
    WHEN had_prev=1 AND has_curr=1 AND prev_auto=1 AND curr_auto=1 AND (COALESCE(c.Curr_SSB,0)= COALESCE(p.Prev_SSB,0)) THEN 'Autochange No Change'
    WHEN had_prev=0 AND has_curr=1 AND curr_auto=0 THEN 'Downgrade IN (ex-Auto)'
    WHEN had_prev=1 AND has_curr=0 AND prev_auto=0 THEN 'Exit (ex-Auto)'
    WHEN had_prev=1 AND has_curr=1 AND curr_auto=0 AND (COALESCE(c.Curr_SSB,0)<>COALESCE(p.Prev_SSB,0)) THEN 'Persisting Δ (ex-Auto)'
    WHEN had_prev=1 AND has_curr=1 AND curr_auto=0 AND (COALESCE(c.Curr_SSB,0)= COALESCE(p.Prev_SSB,0)) THEN 'No Change (ex-Auto)'
  END AS Characterization,
  /* owner (curr/prev thresholds) */
  CASE
    WHEN c.Curr_PROD5='Business RE Term Loans' AND c.Curr_Bank_Code='L-CIT' AND COALESCE(c.Curr_SSB,0)>500000 THEN 'Samya'
    WHEN c.Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND c.Curr_Bank_Code='L-CIT' AND COALESCE(c.Curr_SSB,0)>250000 THEN 'Casey'
    WHEN c.Curr_PROD5='Business RE Term Loans' AND c.Curr_Bank_Code='L-CIT' AND COALESCE(c.Curr_SSB,0)<=500000 THEN 'Not Covered; Under $500k; Samya'
    WHEN c.Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND c.Curr_Bank_Code='L-CIT' AND COALESCE(c.Curr_SSB,0)<=250000 THEN 'Not Covered; Under $250k; Casey'
    WHEN c.Curr_CSS='INFL10' THEN 'Daniel'
    WHEN c.Curr_Bank_Code='L-SVB' THEN 'Eleanor'
    WHEN c.Curr_RBC='R' THEN 'Autochange'
    WHEN c.Curr_Bank_Code='L-FCB' THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner_Curr,
  CASE
    WHEN p.Prev_PROD5='Business RE Term Loans' AND p.Prev_Bank_Code='L-CIT' AND COALESCE(p.Prev_SSB,0)>500000 THEN 'Samya'
    WHEN p.Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND p.Prev_Bank_Code='L-CIT' AND COALESCE(p.Prev_SSB,0)>250000 THEN 'Casey'
    WHEN p.Prev_PROD5='Business RE Term Loans' AND p.Prev_Bank_Code='L-CIT' AND COALESCE(p.Prev_SSB,0)<=500000 THEN 'Not Covered; Under $500k; Samya'
    WHEN p.Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND p.Prev_Bank_Code='L-CIT' AND COALESCE(p.Prev_SSB,0)<=250000 THEN 'Not Covered; Under $250k; Casey'
    WHEN p.Prev_CSS='INFL10' THEN 'Daniel'
    WHEN p.Prev_Bank_Code='L-SVB' THEN 'Eleanor'
    WHEN p.Prev_RBC='R' THEN 'Autochange'
    WHEN p.Prev_Bank_Code='L-FCB' THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner_Prev,
  /* bank for event (aligns to bridges) */
  CASE
    WHEN had_prev=1 AND has_curr=0 THEN p.Prev_Bank_Code
    WHEN has_curr=1 THEN c.Curr_Bank_Code
    ELSE COALESCE(c.Curr_Bank_Code,p.Prev_Bank_Code)
  END AS Bank_For_Event
FROM curr_na c
FULL OUTER JOIN prev_na p ON c.Account_Identifier=p.Account_Identifier;





/* ===========================
   MoM Non-Accrual Canonical Set
   =========================== */
WITH params AS (
  SELECT DATE '2025-09-30' AS curr_eom,
         ADD_MONTHS(DATE '2025-09-30', -1) AS prev_eom
),

/* Filter early + normalize IDs + map bank once */
banked AS (
  SELECT
    End_of_Month_Date,
    /* normalize to kill case/whitespace dupes */
    UPPER(TRIM(Account_Identifier)) AS Account_Identifier,
    UPPER(TRIM(Facility_ID))        AS Facility_ID,
    Account_Name,
    Contract_Source_System,
    CIS_Customer_Number,
    Account_Key,
    Status_Code_Description,
    GL_ACCOUNT_HIER_LEVEL_4,
    Source_System_Balance,
    GL_Balance,
    Available_Balance,
    Borrower_Risk_Rating,
    PD_Grade,
    Days_Past_Due,
    Non_Accrual_Flag,
    PROD_HIER_LEVEL_5,
    RBC_Code,
    GL_ACCOUNT_CODE,
    CASE
      WHEN Contract_Source_System IN ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN') THEN 'L-SVB'
      WHEN Contract_Source_System = 'ALL'
       AND GL_ACCOUNT_CODE IN ('1051872','1061833','1041344','1041211','1041345','1041364','1041210',
                               '1042127','1042213','1042048','1042368','1042408','1042409','1042424',
                               '1100001','1142067','1042886','1043008')                                            THEN 'L-SVB'
      WHEN Contract_Source_System IN ('ADJ','ALL','ALS','FDR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO')        THEN 'L-FCB'
      WHEN Contract_Source_System IN ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN','INFL05','INFL05-EXCPTN',
                                      'INFL10','INFL10-EXCPTN','LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001',
                                      'SBO001-EXCPTN','STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN',
                                      'STRAT1','STRAT1-EXCPTN')                                                     THEN 'L-CIT'
      ELSE 'NULL-Need to Research'
    END AS Bank_Code
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
    AND GL_ACCOUNT_HIER_LEVEL_4 IN ('Total Loans','Lns Held for Sale')
),

/* Collapse each month to 1 row per Account_Identifier (NA + SSB>0) */
prev_na AS (
  SELECT
    Account_Identifier,
    MAX(Bank_Code)             AS Prev_Bank_Code,
    MAX(Facility_ID)           AS Prev_Facility_ID,
    MAX(PROD_HIER_LEVEL_5)     AS Prev_PROD5,
    MAX(Contract_Source_System)AS Prev_CSS,
    MAX(RBC_Code)              AS Prev_RBC,
    SUM(Source_System_Balance) AS Prev_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT prev_eom FROM params)
    AND Non_Accrual_Flag='Y' AND Source_System_Balance>0
  GROUP BY Account_Identifier
),
curr_na AS (
  SELECT
    Account_Identifier,
    MAX(Bank_Code)             AS Curr_Bank_Code,
    MAX(Facility_ID)           AS Curr_Facility_ID,
    MAX(PROD_HIER_LEVEL_5)     AS Curr_PROD5,
    MAX(Contract_Source_System)AS Curr_CSS,
    MAX(RBC_Code)              AS Curr_RBC,
    SUM(Source_System_Balance) AS Curr_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT curr_eom FROM params)
    AND Non_Accrual_Flag='Y' AND Source_System_Balance>0
  GROUP BY Account_Identifier
),

/* Canonical detail: join months once; compute flags + delta */
lab AS (
  SELECT
    COALESCE(c.Account_Identifier,p.Account_Identifier) AS Account_Identifier,

    /* prev */
    p.Prev_SSB, p.Prev_Bank_Code, p.Prev_Facility_ID, p.Prev_PROD5, p.Prev_CSS, p.Prev_RBC,

    /* curr */
    c.Curr_SSB, c.Curr_Bank_Code, c.Curr_Facility_ID, c.Curr_PROD5, c.Curr_CSS, c.Curr_RBC,

    /* presence & auto flags by side */
    CASE WHEN COALESCE(p.Prev_SSB,0)>0 THEN 1 ELSE 0 END AS had_prev,
    CASE WHEN COALESCE(c.Curr_SSB,0)>0 THEN 1 ELSE 0 END AS has_curr,
    CASE WHEN UPPER(COALESCE(p.Prev_RBC,''))='R' THEN 1 ELSE 0 END AS prev_auto,
    CASE WHEN UPPER(COALESCE(c.Curr_RBC,''))='R' THEN 1 ELSE 0 END AS curr_auto,

    /* delta */
    COALESCE(c.Curr_SSB,0) - COALESCE(p.Prev_SSB,0)     AS MoM_Delta
  FROM curr_na c
  FULL OUTER JOIN prev_na p
    ON c.Account_Identifier=p.Account_Identifier
)

/* ===================== 1) DETAIL EXTRACT (drill-down) ===================== */
SELECT
  Account_Identifier,
  Prev_Bank_Code, Prev_Facility_ID, Prev_SSB, prev_auto,
  Curr_Bank_Code, Curr_Facility_ID, Curr_SSB, curr_auto,
  had_prev, has_curr, MoM_Delta,
  /* characterization for drill-down */
  CASE
    WHEN had_prev=0 AND has_curr=1 AND curr_auto=1 THEN 'Autochange Downgrade IN'
    WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN 'Autochange Exit'
    WHEN had_prev=1 AND has_curr=1 AND prev_auto=1 AND curr_auto=1 AND MoM_Delta<>0 THEN 'Autochange Persisting Δ'
    WHEN had_prev=1 AND has_curr=1 AND prev_auto=1 AND curr_auto=1 AND MoM_Delta=0  THEN 'Autochange No Change'
    WHEN had_prev=0 AND has_curr=1 AND curr_auto=0 THEN 'Downgrade IN (ex-Auto)'
    WHEN had_prev=1 AND has_curr=0 AND prev_auto=0 THEN 'Exit (ex-Auto)'
    WHEN had_prev=1 AND has_curr=1 AND curr_auto=0 AND MoM_Delta<>0 THEN 'Persisting Δ (ex-Auto)'
    WHEN had_prev=1 AND has_curr=1 AND curr_auto=0 AND MoM_Delta=0  THEN 'No Change (ex-Auto)'
    ELSE NULL
  END AS Characterization,
  /* bank attribution used by bridges */
  CASE
    WHEN (had_prev=1 AND has_curr=0) THEN Prev_Bank_Code
    WHEN (has_curr=1 AND (had_prev=0 OR had_prev=1)) THEN Curr_Bank_Code
    ELSE COALESCE(Curr_Bank_Code, Prev_Bank_Code)
  END AS Bank_For_Event
FROM lab
ORDER BY COALESCE(Curr_Bank_Code, Prev_Bank_Code), Account_Identifier;

/* ===================== 2) WATERFALL – BALANCES (by bank) ===================== */
SELECT
  COALESCE(Curr_Bank_Code, Prev_Bank_Code) AS bank_code,
  /* Starting (prev side) */
  SUM(CASE WHEN had_prev=1 THEN COALESCE(Prev_SSB,0) ELSE 0 END)                                      AS starting_balance,
  /* Auto In / Out / Persisting Δ / Persisting ex-Auto / Adds ex-Auto / Exits ex-Auto */
  SUM(CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=1 THEN COALESCE(Curr_SSB,0) END)              AS auto_in,
  -SUM(CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN COALESCE(Prev_SSB,0) END)             AS auto_out,
  SUM(CASE WHEN had_prev=1 AND has_curr=1 AND prev_auto=1 AND curr_auto=1 THEN MoM_Delta END)         AS auto_persisting_delta,
  SUM(CASE WHEN had_prev=1 AND has_curr=1 AND curr_auto=0 THEN MoM_Delta END)                         AS pers_delta_ex_auto,
  SUM(CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0 THEN COALESCE(Curr_SSB,0) END)              AS downgrade_in_ex_auto,
  -SUM(CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0 THEN COALESCE(Prev_SSB,0) END)             AS exit_ex_auto,
  /* Ending (curr side) */
  SUM(CASE WHEN has_curr=1 THEN COALESCE(Curr_SSB,0) ELSE 0 END)                                      AS ending_balance
FROM lab
GROUP BY COALESCE(Curr_Bank_Code, Prev_Bank_Code)
ORDER BY bank_code;

/* ===== 3) WATERFALL – FACILITY COUNTS (facility–bank presence; ties) ===== */
SELECT
  b.bank_code,

  /* Starting = distinct prev facilities in this bank */
  COUNT(DISTINCT CASE WHEN fp.facility_id IS NOT NULL THEN fp.facility_id END)                                                AS starting_facilities,

  /* Auto In = curr-only facilities that are auto in curr (curr side) */
  COUNT(DISTINCT CASE WHEN fp.facility_id IS NULL AND fc.facility_id IS NOT NULL AND fc.curr_auto=1 THEN fc.facility_id END)  AS auto_in_facilities,

  /* Auto Out = prev-only facilities that are auto in prev (prev side, negative) */
  -COUNT(DISTINCT CASE WHEN fp.facility_id IS NOT NULL AND fc.facility_id IS NULL AND fp.prev_auto=1 THEN fp.facility_id END) AS auto_out_facilities,

  /* Downgrade IN (ex-Auto) = curr-only facilities not auto in curr (curr side) */
  COUNT(DISTINCT CASE WHEN fp.facility_id IS NULL AND fc.facility_id IS NOT NULL AND COALESCE(fc.curr_auto,0)=0
                      THEN fc.facility_id END)                                                                                AS downgrade_in_ex_auto_facilities,

  /* Exit (ex-Auto) = prev-only facilities not auto in prev (prev side, negative) */
  -COUNT(DISTINCT CASE WHEN fp.facility_id IS NOT NULL AND fc.facility_id IS NULL AND COALESCE(fp.prev_auto,0)=0
                       THEN fp.facility_id END)                                                                               AS exit_ex_auto_facilities,

  /* Ending = distinct curr facilities in this bank */
  COUNT(DISTINCT CASE WHEN fc.facility_id IS NOT NULL THEN fc.facility_id END)                                                AS ending_facilities

FROM
  /* Bank list from either side */
  ( SELECT DISTINCT Prev_Bank_Code AS bank_code FROM lab WHERE Prev_Bank_Code IS NOT NULL
    UNION
    SELECT DISTINCT Curr_Bank_Code FROM lab WHERE Curr_Bank_Code IS NOT NULL ) b

  /* facility–bank PREV */
  LEFT JOIN (
    SELECT Prev_Bank_Code AS bank_code, Prev_Facility_ID AS facility_id, MAX(prev_auto) AS prev_auto
    FROM lab
    WHERE had_prev=1 AND Prev_Bank_Code IS NOT NULL AND Prev_Facility_ID IS NOT NULL
    GROUP BY Prev_Bank_Code, Prev_Facility_ID
  ) fp ON fp.bank_code=b.bank_code

  /* facility–bank CURR */
  LEFT JOIN (
    SELECT Curr_Bank_Code AS bank_code, Curr_Facility_ID AS facility_id, MAX(curr_auto) AS curr_auto
    FROM lab
    WHERE has_curr=1 AND Curr_Bank_Code IS NOT NULL AND Curr_Facility_ID IS NOT NULL
    GROUP BY Curr_Bank_Code, Curr_Facility_ID
  ) fc ON fc.bank_code=b.bank_code AND fc.facility_id=fp.facility_id

GROUP BY b.bank_code
ORDER BY b.bank_code;

/* ========== 4) DOWNGRADE IN (Adds) – counts & balances (ex-Auto buckets) ========== */
SELECT
  Curr_Bank_Code AS bank_code,
  /* counts */
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 THEN Curr_Facility_ID END) AS total_add_facilities,
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=1 THEN Curr_Facility_ID END) AS autochange_facilities,
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0
        AND Curr_Bank_Code='L-CIT'
        AND Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
        AND COALESCE(Curr_SSB,0) <= 250000 THEN Curr_Facility_ID END) AS casey_under_250k_facilities,
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0
        AND Curr_Bank_Code='L-CIT'
        AND Curr_PROD5 = 'Business RE Term Loans'
        AND COALESCE(Curr_SSB,0) <= 500000 THEN Curr_Facility_ID END) AS samya_under_500k_facilities,
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0
        AND NOT ( Curr_Bank_Code='L-CIT' AND (
              (Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Curr_SSB,0) <= 250000) OR
              (Curr_PROD5 = 'Business RE Term Loans' AND COALESCE(Curr_SSB,0) <= 500000)
            ) )
        THEN Curr_Facility_ID END) AS reviewable_facilities,
  /* balances */
  SUM(CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=1 THEN COALESCE(Curr_SSB,0) END)::NUMERIC(38,2) AS autochange_balances,
  SUM(CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0
        AND Curr_Bank_Code='L-CIT'
        AND Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
        AND COALESCE(Curr_SSB,0) <= 250000 THEN COALESCE(Curr_SSB,0) END)::NUMERIC(38,2) AS casey_under_250k_balances,
  SUM(CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0
        AND Curr_Bank_Code='L-CIT'
        AND Curr_PROD5 = 'Business RE Term Loans'
        AND COALESCE(Curr_SSB,0) <= 500000 THEN COALESCE(Curr_SSB,0) END)::NUMERIC(38,2) AS samya_under_500k_balances,
  SUM(CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0
        AND NOT ( Curr_Bank_Code='L-CIT' AND (
              (Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Curr_SSB,0) <= 250000) OR
              (Curr_PROD5 = 'Business RE Term Loans' AND COALESCE(Curr_SSB,0) <= 500000)
            ) )
        THEN COALESCE(Curr_SSB,0) END)::NUMERIC(38,2) AS reviewable_balances
FROM lab
WHERE has_curr=1 AND had_prev=0
GROUP BY Curr_Bank_Code
ORDER BY bank_code;

/* ========== 5) EXITs – counts & balances (ex-Auto buckets) ========== */
SELECT
  Prev_Bank_Code AS bank_code,
  /* counts */
  COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 THEN Prev_Facility_ID END) AS total_exit_facilities,
  COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN Prev_Facility_ID END) AS autochange_facilities,
  COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0
        AND Prev_Bank_Code='L-CIT'
        AND Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
        AND COALESCE(Prev_SSB,0) <= 250000 THEN Prev_Facility_ID END) AS casey_under_250k_facilities,
  COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0
        AND Prev_Bank_Code='L-CIT'
        AND Prev_PROD5 = 'Business RE Term Loans'
        AND COALESCE(Prev_SSB,0) <= 500000 THEN Prev_Facility_ID END) AS samya_under_500k_facilities,
  COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0
        AND NOT ( Prev_Bank_Code='L-CIT' AND (
              (Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Prev_SSB,0) <= 250000) OR
              (Prev_PROD5 = 'Business RE Term Loans' AND COALESCE(Prev_SSB,0) <= 500000)
            ) )
        THEN Prev_Facility_ID END) AS reviewable_facilities,
  /* balances */
  SUM(CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN COALESCE(Prev_SSB,0) END)::NUMERIC(38,2) AS autochange_balances,
  SUM(CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0
        AND Prev_Bank_Code='L-CIT'
        AND Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
        AND COALESCE(Prev_SSB,0) <= 250000 THEN COALESCE(Prev_SSB,0) END)::NUMERIC(38,2) AS casey_under_250k_balances,
  SUM(CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0
        AND Prev_Bank_Code='L-CIT'
        AND Prev_PROD5 = 'Business RE Term Loans'
        AND COALESCE(Prev_SSB,0) <= 500000 THEN COALESCE(Prev_SSB,0) END)::NUMERIC(38,2) AS samya_under_500k_balances,
  SUM(CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0
        AND NOT ( Prev_Bank_Code='L-CIT' AND (
              (Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Prev_SSB,0) <= 250000) OR
              (Prev_PROD5 = 'Business RE Term Loans' AND COALESCE(Prev_SSB,0) <= 500000)
            ) )
        THEN COALESCE(Prev_SSB,0) END)::NUMERIC(38,2) AS reviewable_balances
FROM lab
WHERE had_prev=1 AND has_curr=0
GROUP BY Prev_Bank_Code
ORDER BY bank_code;





/* ===================== 1) DETAIL EXTRACT (drill-down) with Owner ===================== */
SELECT
  Account_Identifier,

  /* prev side */
  Prev_Bank_Code, Prev_Facility_ID, Prev_SSB, prev_auto,
  Prev_PROD5, Prev_CSS, Prev_RBC,

  /* curr side */
  Curr_Bank_Code, Curr_Facility_ID, Curr_SSB, curr_auto,
  Curr_PROD5, Curr_CSS, Curr_RBC,

  had_prev, has_curr, MoM_Delta,

  /* ----- Owner per side ----- */
  /* Current-month owner */
  CASE
    WHEN Curr_PROD5 = 'Business RE Term Loans'
         AND Curr_Bank_Code = 'L-CIT'
         AND COALESCE(Curr_SSB,0) > 500000                         THEN 'Samya'
    WHEN Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND Curr_Bank_Code = 'L-CIT'
         AND COALESCE(Curr_SSB,0) > 250000                         THEN 'Casey'
    WHEN Curr_PROD5 = 'Business RE Term Loans'
         AND Curr_Bank_Code = 'L-CIT'
         AND COALESCE(Curr_SSB,0) <= 500000                        THEN 'Not Covered; Under $500k; Samya'
    WHEN Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND Curr_Bank_Code = 'L-CIT'
         AND COALESCE(Curr_SSB,0) <= 250000                        THEN 'Not Covered; Under $250k; Casey'
    WHEN Curr_CSS = 'INFL10'                                       THEN 'Daniel'
    WHEN Curr_Bank_Code = 'L-SVB'                                  THEN 'Eleanor'
    WHEN Curr_RBC = 'R'                                            THEN 'Autochange'
    WHEN Curr_Bank_Code = 'L-FCB'                                  THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner_Curr,

  /* Previous-month owner */
  CASE
    WHEN Prev_PROD5 = 'Business RE Term Loans'
         AND Prev_Bank_Code = 'L-CIT'
         AND COALESCE(Prev_SSB,0) > 500000                         THEN 'Samya'
    WHEN Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND Prev_Bank_Code = 'L-CIT'
         AND COALESCE(Prev_SSB,0) > 250000                         THEN 'Casey'
    WHEN Prev_PROD5 = 'Business RE Term Loans'
         AND Prev_Bank_Code = 'L-CIT'
         AND COALESCE(Prev_SSB,0) <= 500000                        THEN 'Not Covered; Under $500k; Samya'
    WHEN Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND Prev_Bank_Code = 'L-CIT'
         AND COALESCE(Prev_SSB,0) <= 250000                        THEN 'Not Covered; Under $250k; Casey'
    WHEN Prev_CSS = 'INFL10'                                       THEN 'Daniel'
    WHEN Prev_Bank_Code = 'L-SVB'                                  THEN 'Eleanor'
    WHEN Prev_RBC = 'R'                                            THEN 'Autochange'
    WHEN Prev_Bank_Code = 'L-FCB'                                  THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner_Prev,

  /* Owner used for the event (aligns with bridges/bank attribution) */
  CASE
    WHEN had_prev = 1 AND has_curr = 0 THEN
      CASE
        WHEN Prev_PROD5 = 'Business RE Term Loans'
             AND Prev_Bank_Code = 'L-CIT'
             AND COALESCE(Prev_SSB,0) > 500000                     THEN 'Samya'
        WHEN Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
             AND Prev_Bank_Code = 'L-CIT'
             AND COALESCE(Prev_SSB,0) > 250000                     THEN 'Casey'
        WHEN Prev_PROD5 = 'Business RE Term Loans'
             AND Prev_Bank_Code = 'L-CIT'
             AND COALESCE(Prev_SSB,0) <= 500000                    THEN 'Not Covered; Under $500k; Samya'
        WHEN Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
             AND Prev_Bank_Code = 'L-CIT'
             AND COALESCE(Prev_SSB,0) <= 250000                    THEN 'Not Covered; Under $250k; Casey'
        WHEN Prev_CSS = 'INFL10'                                    THEN 'Daniel'
        WHEN Prev_Bank_Code = 'L-SVB'                               THEN 'Eleanor'
        WHEN Prev_RBC = 'R'                                         THEN 'Autochange'
        WHEN Prev_Bank_Code = 'L-FCB'                               THEN 'Connor'
        ELSE 'NOT COVERED'
      END
    WHEN has_curr = 1 THEN
      CASE
        WHEN Curr_PROD5 = 'Business RE Term Loans'
             AND Curr_Bank_Code = 'L-CIT'
             AND COALESCE(Curr_SSB,0) > 500000                     THEN 'Samya'
        WHEN Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
             AND Curr_Bank_Code = 'L-CIT'
             AND COALESCE(Curr_SSB,0) > 250000                     THEN 'Casey'
        WHEN Curr_PROD5 = 'Business RE Term Loans'
             AND Curr_Bank_Code = 'L-CIT'
             AND COALESCE(Curr_SSB,0) <= 500000                    THEN 'Not Covered; Under $500k; Samya'
        WHEN Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
             AND Curr_Bank_Code = 'L-CIT'
             AND COALESCE(Curr_SSB,0) <= 250000                    THEN 'Not Covered; Under $250k; Casey'
        WHEN Curr_CSS = 'INFL10'                                    THEN 'Daniel'
        WHEN Curr_Bank_Code = 'L-SVB'                               THEN 'Eleanor'
        WHEN Curr_RBC = 'R'                                         THEN 'Autochange'
        WHEN Curr_Bank_Code = 'L-FCB'                               THEN 'Connor'
        ELSE 'NOT COVERED'
      END
    ELSE COALESCE(
      /* fallback if neither side present (shouldn't happen with our filters) */
      CASE
        WHEN Curr_PROD5 = 'Business RE Term Loans' AND Curr_Bank_Code = 'L-CIT' AND COALESCE(Curr_SSB,0) > 500000 THEN 'Samya'
        WHEN Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND Curr_Bank_Code = 'L-CIT' AND COALESCE(Curr_SSB,0) > 250000 THEN 'Casey'
        WHEN Curr_PROD5 = 'Business RE Term Loans' AND Curr_Bank_Code = 'L-CIT' AND COALESCE(Curr_SSB,0) <= 500000 THEN 'Not Covered; Under $500k; Samya'
        WHEN Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND Curr_Bank_Code = 'L-CIT' AND COALESCE(Curr_SSB,0) <= 250000 THEN 'Not Covered; Under $250k; Casey'
        WHEN Curr_CSS = 'INFL10' THEN 'Daniel'
        WHEN Curr_Bank_Code = 'L-SVB' THEN 'Eleanor'
        WHEN Curr_RBC = 'R' THEN 'Autochange'
        WHEN Curr_Bank_Code = 'L-FCB' THEN 'Connor'
        ELSE NULL
      END,
      CASE
        WHEN Prev_PROD5 = 'Business RE Term Loans' AND Prev_Bank_Code = 'L-CIT' AND COALESCE(Prev_SSB,0) > 500000 THEN 'Samya'
        WHEN Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND Prev_Bank_Code = 'L-CIT' AND COALESCE(Prev_SSB,0) > 250000 THEN 'Casey'
        WHEN Prev_PROD5 = 'Business RE Term Loans' AND Prev_Bank_Code = 'L-CIT' AND COALESCE(Prev_SSB,0) <= 500000 THEN 'Not Covered; Under $500k; Samya'
        WHEN Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND Prev_Bank_Code = 'L-CIT' AND COALESCE(Prev_SSB,0) <= 250000 THEN 'Not Covered; Under $250k; Casey'
        WHEN Prev_CSS = 'INFL10' THEN 'Daniel'
        WHEN Prev_Bank_Code = 'L-SVB' THEN 'Eleanor'
        WHEN Prev_RBC = 'R' THEN 'Autochange'
        WHEN Prev_Bank_Code = 'L-FCB' THEN 'Connor'
        ELSE 'NOT COVERED'
      END
    )
  END AS Owner_For_Event,

  /* characterization for drill-down (unchanged) */
  CASE
    WHEN had_prev=0 AND has_curr=1 AND curr_auto=1 THEN 'Autochange Downgrade IN'
    WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN 'Autochange Exit'
    WHEN had_prev=1 AND has_curr=1 AND prev_auto=1 AND curr_auto=1 AND MoM_Delta<>0 THEN 'Autochange Persisting Δ'
    WHEN had_prev=1 AND has_curr=1 AND prev_auto=1 AND curr_auto=1 AND MoM_Delta=0  THEN 'Autochange No Change'
    WHEN had_prev=0 AND has_curr=1 AND curr_auto=0 THEN 'Downgrade IN (ex-Auto)'
    WHEN had_prev=1 AND has_curr=0 AND prev_auto=0 THEN 'Exit (ex-Auto)'
    WHEN had_prev=1 AND has_curr=1 AND curr_auto=0 AND MoM_Delta<>0 THEN 'Persisting Δ (ex-Auto)'
    WHEN had_prev=1 AND has_curr=1 AND curr_auto=0 AND MoM_Delta=0  THEN 'No Change (ex-Auto)'
    ELSE NULL
  END AS Characterization,

  /* bank attribution used by bridges */
  CASE
    WHEN (had_prev=1 AND has_curr=0) THEN Prev_Bank_Code
    WHEN (has_curr=1 AND (had_prev=0 OR had_prev=1)) THEN Curr_Bank_Code
    ELSE COALESCE(Curr_Bank_Code, Prev_Bank_Code)
  END AS Bank_For_Event

FROM lab
ORDER BY COALESCE(Curr_Bank_Code, Prev_Bank_Code), Account_Identifier;






/* =================================
   2) WATERFALL – FACILITY COUNTS
   ================================= */

SELECT
  b.bank_code,

  /* Starting = distinct prev facilities for this bank (prev side) */
  COUNT(DISTINCT CASE WHEN had_prev=1 AND Prev_Bank_Code = b.bank_code THEN Prev_Facility_ID END)
    AS starting_facilities,

  /* Auto In = distinct curr facilities that are adds+auto for this bank (curr side) */
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=1
                       AND Curr_Bank_Code = b.bank_code THEN Curr_Facility_ID END)
    AS auto_in_facilities,

  /* Auto Out = negative distinct prev facilities that are exits+auto for this bank (prev side) */
  -COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=1
                        AND Prev_Bank_Code = b.bank_code THEN Prev_Facility_ID END)
    AS auto_out_facilities,

  /* Downgrade IN (ex-Auto) = distinct curr facilities that are adds non-auto (curr side) */
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0
                       AND Curr_Bank_Code = b.bank_code THEN Curr_Facility_ID END)
    AS downgrade_in_ex_auto_facilities,

  /* Exit (ex-Auto) = negative distinct prev facilities that are exits non-auto (prev side) */
  -COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0
                        AND Prev_Bank_Code = b.bank_code THEN Prev_Facility_ID END)
    AS exit_ex_auto_facilities,

  /* Ending = distinct curr facilities for this bank (curr side) */
  COUNT(DISTINCT CASE WHEN has_curr=1 AND Curr_Bank_Code = b.bank_code THEN Curr_Facility_ID END)
    AS ending_facilities

FROM (
  SELECT DISTINCT Prev_Bank_Code AS bank_code FROM lab WHERE Prev_Bank_Code IS NOT NULL
  UNION
  SELECT DISTINCT Curr_Bank_Code FROM lab WHERE Curr_Bank_Code IS NOT NULL
) b
LEFT JOIN lab ON (b.bank_code = COALESCE(lab.Curr_Bank_Code, lab.Prev_Bank_Code))
GROUP BY b.bank_code
ORDER BY b.bank_code;






/* =================================
   2) WATERFALL – FACILITY COUNTS
   ================================= */

/* bank list from either side */
WITH banks AS (
  SELECT DISTINCT Prev_Bank_Code AS bank_code FROM lab WHERE Prev_Bank_Code IS NOT NULL
  UNION
  SELECT DISTINCT Curr_Bank_Code AS bank_code FROM lab WHERE Curr_Bank_Code IS NOT NULL
)
SELECT
  b.bank_code,

  /* Starting = distinct prev facilities for this bank (prev side) */
  (SELECT COUNT(DISTINCT Prev_Facility_ID)
     FROM lab
    WHERE had_prev=1
      AND Prev_Facility_ID IS NOT NULL
      AND Prev_Bank_Code = b.bank_code)                                           AS starting_facilities,

  /* Auto In = distinct curr facilities that are adds+auto for this bank (curr side) */
  (SELECT COUNT(DISTINCT Curr_Facility_ID)
     FROM lab
    WHERE has_curr=1 AND had_prev=0 AND curr_auto=1
      AND Curr_Facility_ID IS NOT NULL
      AND Curr_Bank_Code = b.bank_code)                                           AS auto_in_facilities,

  /* Auto Out = negative distinct prev facilities that are exits+auto for this bank (prev side) */
  -(SELECT COUNT(DISTINCT Prev_Facility_ID)
      FROM lab
     WHERE had_prev=1 AND has_curr=0 AND prev_auto=1
       AND Prev_Facility_ID IS NOT NULL
       AND Prev_Bank_Code = b.bank_code)                                          AS auto_out_facilities,

  /* Downgrade IN (ex-Auto) = distinct curr facilities that are adds non-auto (curr side) */
  (SELECT COUNT(DISTINCT Curr_Facility_ID)
     FROM lab
    WHERE has_curr=1 AND had_prev=0 AND curr_auto=0
      AND Curr_Facility_ID IS NOT NULL
      AND Curr_Bank_Code = b.bank_code)                                           AS downgrade_in_ex_auto_facilities,

  /* Exit (ex-Auto) = negative distinct prev facilities that are exits non-auto (prev side) */
  -(SELECT COUNT(DISTINCT Prev_Facility_ID)
      FROM lab
     WHERE had_prev=1 AND has_curr=0 AND prev_auto=0
       AND Prev_Facility_ID IS NOT NULL
       AND Prev_Bank_Code = b.bank_code)                                          AS exit_ex_auto_facilities,

  /* Ending = distinct curr facilities for this bank (curr side) */
  (SELECT COUNT(DISTINCT Curr_Facility_ID)
     FROM lab
    WHERE has_curr=1
      AND Curr_Facility_ID IS NOT NULL
      AND Curr_Bank_Code = b.bank_code)                                           AS ending_facilities,

  /* Tie check: should be 0 for each bank */
  (
    (SELECT COUNT(DISTINCT Prev_Facility_ID)
       FROM lab
      WHERE had_prev=1 AND Prev_Facility_ID IS NOT NULL AND Prev_Bank_Code = b.bank_code)
    +
    (SELECT COUNT(DISTINCT Curr_Facility_ID)
       FROM lab
      WHERE has_curr=1 AND had_prev=0 AND curr_auto=1 AND Curr_Facility_ID IS NOT NULL AND Curr_Bank_Code = b.bank_code)
    -
    (SELECT COUNT(DISTINCT Prev_Facility_ID)
       FROM lab
      WHERE had_prev=1 AND has_curr=0 AND prev_auto=1 AND Prev_Facility_ID IS NOT NULL AND Prev_Bank_Code = b.bank_code)
    +
    (SELECT COUNT(DISTINCT Curr_Facility_ID)
       FROM lab
      WHERE has_curr=1 AND had_prev=0 AND curr_auto=0 AND Curr_Facility_ID IS NOT NULL AND Curr_Bank_Code = b.bank_code)
    -
    (SELECT COUNT(DISTINCT Prev_Facility_ID)
       FROM lab
      WHERE had_prev=1 AND has_curr=0 AND prev_auto=0 AND Prev_Facility_ID IS NOT NULL AND Prev_Bank_Code = b.bank_code)
    -
    (SELECT COUNT(DISTINCT Curr_Facility_ID)
       FROM lab
      WHERE has_curr=1 AND Curr_Facility_ID IS NOT NULL AND Curr_Bank_Code = b.bank_code)
  ) AS bridge_check

FROM banks b
ORDER BY b.bank_code;





/* =================================
   2) WATERFALL – FACILITY COUNTS
   ================================= */
SELECT
  COALESCE(Curr_Bank_Code, Prev_Bank_Code) AS bank_code,
  COUNT(DISTINCT CASE WHEN had_prev=1 THEN Prev_Facility_ID END)                          AS starting_facilities,
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=1 THEN Curr_Facility_ID END)  AS auto_in_facilities,
  -COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN Prev_Facility_ID END) AS auto_out_facilities,
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0 THEN Curr_Facility_ID END)  AS downgrade_in_ex_auto_facilities,
  -COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0 THEN Prev_Facility_ID END) AS exit_ex_auto_facilities,
  COUNT(DISTINCT CASE WHEN has_curr=1 THEN Curr_Facility_ID END) AS ending_facilities
FROM lab
GROUP BY COALESCE(Curr_Bank_Code, Prev_Bank_Code)
ORDER BY bank_code;



/* =================================
   2) WATERFALL – FACILITY COUNTS
   ================================= */
SELECT
  COALESCE(Curr_Bank_Code, Prev_Bank_Code) AS bank_code,
  COUNT(DISTINCT CASE WHEN had_prev=1 THEN Prev_Facility_ID END)                          AS starting_facilities,
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=1 THEN Curr_Facility_ID END)  AS auto_in_facilities,
  -COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN Prev_Facility_ID END) AS auto_out_facilities,
  COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=1 AND curr_auto=0 AND delta<>0 THEN Curr_Facility_ID END) AS pers_delta_ex_auto_facilities,
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0 THEN Curr_Facility_ID END) AS downgrade_in_ex_auto_facilities,
  -COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0 THEN Prev_Facility_ID END) AS exit_ex_auto_facilities,
  COUNT(DISTINCT CASE WHEN has_curr=1 THEN Curr_Facility_ID END) AS ending_facilities
FROM lab
GROUP BY COALESCE(Curr_Bank_Code, Prev_Bank_Code)
ORDER BY bank_code;




banked AS (
  SELECT
    End_of_Month_Date,
    UPPER(TRIM(Account_Identifier)) AS Account_Identifier,
    TRIM(Account_Name)              AS Account_Name,
    Contract_Source_System,
    CIS_Customer_Number,
    TRIM(Facility_ID)               AS Facility_ID,
    Account_Key,
    Status_Code_Description,
    GL_ACCOUNT_HIER_LEVEL_4,
    Source_System_Balance,
    GL_Balance,
    Available_Balance,
    Borrower_Risk_Rating,
    PD_Grade,
    Days_Past_Due,
    Non_Accrual_Flag,
    PROD_HIER_LEVEL_5,
    RBC_Code,
    GL_ACCOUNT_CODE,
    CASE
      WHEN Contract_Source_System IN ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN')
        THEN 'L-SVB'
      WHEN Contract_Source_System = 'ALL'
       AND GL_ACCOUNT_CODE IN ('1051872','1061833','1041344','1041211','1041345','1041364','1041210',
                               '1042127','1042213','1042048','1042368','1042408','1042409','1042424',
                               '1100001','1142067','1042886','1043008')
        THEN 'L-SVB'
      WHEN Contract_Source_System IN ('ADJ','ALL','ALS','FDR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO')
        THEN 'L-FCB'
      WHEN Contract_Source_System IN ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN','INFL05','INFL05-EXCPTN',
                                      'INFL10','INFL10-EXCPTN','LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001',
                                      'SBO001-EXCPTN','STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN',
                                      'STRAT1','STRAT1-EXCPTN')
        THEN 'L-CIT'
      ELSE 'NULL-Need to Research'
    END AS Bank_Code
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
    AND GL_ACCOUNT_HIER_LEVEL_4 IN ('Total Loans','Lns Held for Sale')  -- << added filter
)




WITH params AS (
  SELECT DATE '2025-09-30' AS curr_eom,
         ADD_MONTHS(DATE '2025-09-30', -1) AS prev_eom
),

/* Map banks once; keep only the two months we need */
banked AS (
  SELECT
    End_of_Month_Date,
    UPPER(TRIM(Account_Identifier)) AS Account_Identifier,
    TRIM(Account_Name)              AS Account_Name,
    Contract_Source_System,
    CIS_Customer_Number,
    TRIM(Facility_ID)               AS Facility_ID,
    Account_Key,
    Status_Code_Description,
    GL_ACCOUNT_HIER_LEVEL_4,
    Source_System_Balance,
    GL_Balance,
    Available_Balance,
    Borrower_Risk_Rating,
    PD_Grade,
    Days_Past_Due,
    Non_Accrual_Flag,
    PROD_HIER_LEVEL_5,
    RBC_Code,
    GL_ACCOUNT_CODE,
    CASE
      WHEN Contract_Source_System IN ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN')
        THEN 'L-SVB'
      WHEN Contract_Source_System = 'ALL'
       AND GL_ACCOUNT_CODE IN ('1051872','1061833','1041344','1041211','1041345','1041364','1041210',
                               '1042127','1042213','1042048','1042368','1042408','1042409','1042424',
                               '1100001','1142067','1042886','1043008')
        THEN 'L-SVB'
      WHEN Contract_Source_System IN ('ADJ','ALL','ALS','FDR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO')
        THEN 'L-FCB'
      WHEN Contract_Source_System IN ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN','INFL05','INFL05-EXCPTN',
                                      'INFL10','INFL10-EXCPTN','LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001',
                                      'SBO001-EXCPTN','STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN',
                                      'STRAT1','STRAT1-EXCPTN')
        THEN 'L-CIT'
      ELSE 'NULL-Need to Research'
    END AS Bank_Code
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
),

/* NA populations per month (SSB>0), collapsed to one row per ACCOUNT_IDENTIFIER */
prev_na AS (
  SELECT
    Account_Identifier,
    MAX(Bank_Code)             AS Prev_Bank_Code,
    MAX(Facility_ID)           AS Prev_Facility_ID,
    MAX(PROD_HIER_LEVEL_5)     AS Prev_PROD5,
    MAX(Contract_Source_System)AS Prev_CSS,
    MAX(RBC_Code)              AS Prev_RBC,
    SUM(Source_System_Balance) AS Prev_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT prev_eom FROM params)
    AND Non_Accrual_Flag='Y' AND Source_System_Balance>0
  GROUP BY Account_Identifier
),
curr_na AS (
  SELECT
    Account_Identifier,
    MAX(Bank_Code)             AS Curr_Bank_Code,
    MAX(Facility_ID)           AS Curr_Facility_ID,
    MAX(PROD_HIER_LEVEL_5)     AS Curr_PROD5,
    MAX(Contract_Source_System)AS Curr_CSS,
    MAX(RBC_Code)              AS Curr_RBC,
    SUM(Source_System_Balance) AS Curr_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT curr_eom FROM params)
    AND Non_Accrual_Flag='Y' AND Source_System_Balance>0
  GROUP BY Account_Identifier
),

/* Join months; derive movement flags and deltas */
lab AS (
  SELECT
    COALESCE(c.Account_Identifier,p.Account_Identifier) AS Account_Identifier,
    /* prev */
    p.Prev_SSB, p.Prev_Bank_Code, p.Prev_Facility_ID, p.Prev_PROD5, p.Prev_CSS, p.Prev_RBC,
    /* curr */
    c.Curr_SSB, c.Curr_Bank_Code, c.Curr_Facility_ID, c.Curr_PROD5, c.Curr_CSS, c.Curr_RBC,
    /* flags */
    CASE WHEN COALESCE(p.Prev_SSB,0)>0 THEN 1 ELSE 0 END AS had_prev,
    CASE WHEN COALESCE(c.Curr_SSB,0)>0 THEN 1 ELSE 0 END AS has_curr,
    CASE WHEN UPPER(COALESCE(p.Prev_RBC,''))='R' THEN 1 ELSE 0 END AS prev_auto,
    CASE WHEN UPPER(COALESCE(c.Curr_RBC,''))='R' THEN 1 ELSE 0 END AS curr_auto,
    /* delta */
    COALESCE(c.Curr_SSB,0) - COALESCE(p.Prev_SSB,0)     AS delta
  FROM curr_na c
  FULL OUTER JOIN prev_na p
    ON c.Account_Identifier=p.Account_Identifier
)

/* =========================
   1) WATERFALL – BALANCES
   ========================= */
SELECT
  COALESCE(Curr_Bank_Code, Prev_Bank_Code) AS bank_code,
  SUM(CASE WHEN had_prev=1 THEN COALESCE(Prev_SSB,0) ELSE 0 END)                          AS starting_balance,
  SUM(CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=1 THEN COALESCE(Curr_SSB,0) END)  AS auto_in,
  -SUM(CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN COALESCE(Prev_SSB,0) END) AS auto_out,
  SUM(CASE WHEN had_prev=1 AND has_curr=1 AND prev_auto=1 AND curr_auto=1 THEN delta END) AS auto_persisting_delta,
  /* auto net = curr auto total − prev auto total */
  ( SUM(CASE WHEN curr_auto=1 THEN COALESCE(Curr_SSB,0) END)
  - SUM(CASE WHEN prev_auto=1 THEN COALESCE(Prev_SSB,0) END) )                            AS auto_net_change,
  SUM(CASE WHEN had_prev=1 AND has_curr=1 AND curr_auto=0 THEN delta END)                 AS pers_delta_ex_auto,
  SUM(CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0 THEN COALESCE(Curr_SSB,0) END)  AS downgrade_in_ex_auto,
  -SUM(CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0 THEN COALESCE(Prev_SSB,0) END) AS exit_ex_auto,
  SUM(CASE WHEN has_curr=1 THEN COALESCE(Curr_SSB,0) ELSE 0 END)                          AS ending_balance
FROM lab
GROUP BY COALESCE(Curr_Bank_Code, Prev_Bank_Code)
ORDER BY bank_code;

/* =================================
   2) WATERFALL – FACILITY COUNTS
   ================================= */
SELECT
  COALESCE(Curr_Bank_Code, Prev_Bank_Code) AS bank_code,
  COUNT(DISTINCT CASE WHEN had_prev=1 THEN Prev_Facility_ID END)                          AS starting_facilities,
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=1 THEN Curr_Facility_ID END)  AS auto_in_facilities,
  -COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN Prev_Facility_ID END) AS auto_out_facilities,
  COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=1 AND prev_auto=1 AND curr_auto=1 AND delta<>0 THEN Curr_Facility_ID END) AS auto_persisting_delta_facilities,
  /* auto net = ins − outs (facility ids) */
  ( COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=1 THEN Curr_Facility_ID END)
  - COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN Prev_Facility_ID END) ) AS auto_net_change_facilities,
  COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=1 AND curr_auto=0 AND delta<>0 THEN Curr_Facility_ID END) AS pers_delta_ex_auto_facilities,
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0 THEN Curr_Facility_ID END) AS downgrade_in_ex_auto_facilities,
  -COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0 THEN Prev_Facility_ID END) AS exit_ex_auto_facilities,
  COUNT(DISTINCT CASE WHEN has_curr=1 THEN Curr_Facility_ID END) AS ending_facilities
FROM lab
GROUP BY COALESCE(Curr_Bank_Code, Prev_Bank_Code)
ORDER BY bank_code;

/* ==========================================
   3) DOWNGRADE IN – FACILITY COUNTS (by bank)
   ========================================== */
SELECT
  Curr_Bank_Code AS bank_code,
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 THEN Curr_Facility_ID END) AS num_unique_facility_ids,
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=1 THEN Curr_Facility_ID END) AS autochange_facility_ids,
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0
          AND Curr_Bank_Code='L-CIT'
          AND Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
          AND COALESCE(Curr_SSB,0) <= 250000 THEN Curr_Facility_ID END) AS casey_under_250k_facility_ids,
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0
          AND Curr_Bank_Code='L-CIT'
          AND Curr_PROD5 = 'Business RE Term Loans'
          AND COALESCE(Curr_SSB,0) <= 500000 THEN Curr_Facility_ID END) AS samya_under_500k_facility_ids,
  /* reviewable = all adds ex-auto minus under-thresholds */
  COUNT(DISTINCT CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0
          AND NOT (
            Curr_Bank_Code='L-CIT' AND (
              (Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Curr_SSB,0) <= 250000) OR
              (Curr_PROD5 = 'Business RE Term Loans' AND COALESCE(Curr_SSB,0) <= 500000)
            )
          )
        THEN Curr_Facility_ID END) AS reviewable_unique_facility_ids
FROM lab
WHERE has_curr=1 AND had_prev=0
GROUP BY Curr_Bank_Code
ORDER BY bank_code;

/* ===================================
   4) DOWNGRADE IN – BALANCES (by bank)
   =================================== */
SELECT
  Curr_Bank_Code AS bank_code,
  SUM(CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=1 THEN COALESCE(Curr_SSB,0) END)::NUMERIC(38,2) AS autochange_balances,
  SUM(CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0
            AND Curr_Bank_Code='L-CIT'
            AND Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
            AND COALESCE(Curr_SSB,0) <= 250000 THEN COALESCE(Curr_SSB,0) END)::NUMERIC(38,2) AS casey_under_250k_balances,
  SUM(CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0
            AND Curr_Bank_Code='L-CIT'
            AND Curr_PROD5 = 'Business RE Term Loans'
            AND COALESCE(Curr_SSB,0) <= 500000 THEN COALESCE(Curr_SSB,0) END)::NUMERIC(38,2) AS samya_under_500k_balances,
  SUM(CASE WHEN has_curr=1 AND had_prev=0 AND curr_auto=0
            AND NOT (
              Curr_Bank_Code='L-CIT' AND (
                (Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Curr_SSB,0) <= 250000) OR
                (Curr_PROD5 = 'Business RE Term Loans' AND COALESCE(Curr_SSB,0) <= 500000)
              )
            )
        THEN COALESCE(Curr_SSB,0) END)::NUMERIC(38,2) AS reviewable_balances
FROM lab
WHERE has_curr=1 AND had_prev=0
GROUP BY Curr_Bank_Code
ORDER BY bank_code;

/* ============================
   5) EXITS – COUNTS & BALANCES
   ============================ */
-- Counts
SELECT
  Prev_Bank_Code AS bank_code,
  COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 THEN Prev_Facility_ID END) AS num_unique_facility_ids,
  COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN Prev_Facility_ID END) AS autochange_facility_ids,
  COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0
          AND Prev_Bank_Code='L-CIT'
          AND Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
          AND COALESCE(Prev_SSB,0) <= 250000 THEN Prev_Facility_ID END) AS casey_under_250k_facility_ids,
  COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0
          AND Prev_Bank_Code='L-CIT'
          AND Prev_PROD5 = 'Business RE Term Loans'
          AND COALESCE(Prev_SSB,0) <= 500000 THEN Prev_Facility_ID END) AS samya_under_500k_facility_ids,
  COUNT(DISTINCT CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0
          AND NOT (
            Prev_Bank_Code='L-CIT' AND (
              (Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Prev_SSB,0) <= 250000) OR
              (Prev_PROD5 = 'Business RE Term Loans' AND COALESCE(Prev_SSB,0) <= 500000)
            )
          )
        THEN Prev_Facility_ID END) AS reviewable_unique_facility_ids
FROM lab
WHERE had_prev=1 AND has_curr=0
GROUP BY Prev_Bank_Code
ORDER BY bank_code;

-- Balances
SELECT
  Prev_Bank_Code AS bank_code,
  SUM(CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=1 THEN COALESCE(Prev_SSB,0) END)::NUMERIC(38,2) AS autochange_balances,
  SUM(CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0
            AND Prev_Bank_Code='L-CIT'
            AND Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
            AND COALESCE(Prev_SSB,0) <= 250000 THEN COALESCE(Prev_SSB,0) END)::NUMERIC(38,2) AS casey_under_250k_balances,
  SUM(CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0
            AND Prev_Bank_Code='L-CIT'
            AND Prev_PROD5 = 'Business RE Term Loans'
            AND COALESCE(Prev_SSB,0) <= 500000 THEN COALESCE(Prev_SSB,0) END)::NUMERIC(38,2) AS samya_under_500k_balances,
  SUM(CASE WHEN had_prev=1 AND has_curr=0 AND prev_auto=0
            AND NOT (
              Prev_Bank_Code='L-CIT' AND (
                (Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Prev_SSB,0) <= 250000) OR
                (Prev_PROD5 = 'Business RE Term Loans' AND COALESCE(Prev_SSB,0) <= 500000)
              )
            )
        THEN COALESCE(Prev_SSB,0) END)::NUMERIC(38,2) AS reviewable_balances
FROM lab
WHERE had_prev=1 AND has_curr=0
GROUP BY Prev_Bank_Code
ORDER BY bank_code;





WITH params AS (
  SELECT DATE '2025-09-30' AS curr_eom,
         ADD_MONTHS(DATE '2025-09-30', -1) AS prev_eom
),

/* ---- Bank mapping once ---- */
banked AS (
  SELECT
    End_of_Month_Date,
    UPPER(TRIM(Account_Identifier))                               AS Account_Identifier,
    TRIM(Account_Name)                                            AS Account_Name,
    Contract_Source_System,
    CIS_Customer_Number,
    TRIM(Facility_ID)                                             AS Facility_ID,
    Account_Key,
    Status_Code_Description,
    GL_ACCOUNT_HIER_LEVEL_4,
    Source_System_Balance,
    GL_Balance,
    Available_Balance,
    Borrower_Risk_Rating,
    PD_Grade,
    Days_Past_Due,
    Non_Accrual_Flag,
    PROD_HIER_LEVEL_5,
    RBC_Code,
    GL_ACCOUNT_CODE,
    CASE
      WHEN Contract_Source_System IN ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN')
        THEN 'L-SVB'
      WHEN Contract_Source_System = 'ALL'
       AND GL_ACCOUNT_CODE IN ('1051872','1061833','1041344','1041211','1041345','1041364','1041210',
                               '1042127','1042213','1042048','1042368','1042408','1042409','1042424',
                               '1100001','1142067','1042886','1043008')
        THEN 'L-SVB'
      WHEN Contract_Source_System IN ('ADJ','ALL','ALS','FDR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO')
        THEN 'L-FCB'
      WHEN Contract_Source_System IN ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN','INFL05','INFL05-EXCPTN',
                                      'INFL10','INFL10-EXCPTN','LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001',
                                      'SBO001-EXCPTN','STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN',
                                      'STRAT1','STRAT1-EXCPTN')
        THEN 'L-CIT'
      ELSE 'NULL-Need to Research'
    END AS Bank_Code
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
),

/* ---- NA populations per month (SSB>0) collapsed to 1 row per acct ---- */
prev_na AS (
  SELECT
    Account_Identifier,
    MAX(Bank_Code)             AS Prev_Bank_Code,
    MAX(Facility_ID)           AS Prev_Facility_ID,
    MAX(PROD_HIER_LEVEL_5)     AS Prev_PROD5,
    MAX(Contract_Source_System)AS Prev_CSS,
    MAX(RBC_Code)              AS Prev_RBC,
    SUM(Source_System_Balance) AS Prev_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT prev_eom FROM params)
    AND Non_Accrual_Flag='Y'
    AND Source_System_Balance>0
  GROUP BY Account_Identifier
),
curr_na AS (
  SELECT
    Account_Identifier,
    MAX(Bank_Code)             AS Curr_Bank_Code,
    MAX(Facility_ID)           AS Curr_Facility_ID,
    MAX(PROD_HIER_LEVEL_5)     AS Curr_PROD5,
    MAX(Contract_Source_System)AS Curr_CSS,
    MAX(RBC_Code)              AS Curr_RBC,
    SUM(Source_System_Balance) AS Curr_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT curr_eom FROM params)
    AND Non_Accrual_Flag='Y'
    AND Source_System_Balance>0
  GROUP BY Account_Identifier
),

/* ---- Join months ---- */
j AS (
  SELECT
    COALESCE(c.Account_Identifier,p.Account_Identifier) AS Account_Identifier,
    /* prev */
    p.Prev_SSB,
    p.Prev_Bank_Code,
    p.Prev_Facility_ID,
    p.Prev_PROD5,
    p.Prev_CSS,
    p.Prev_RBC,
    /* curr */
    c.Curr_SSB,
    c.Curr_Bank_Code,
    c.Curr_Facility_ID,
    c.Curr_PROD5,
    c.Curr_CSS,
    c.Curr_RBC,
    /* flags */
    CASE WHEN COALESCE(p.Prev_SSB,0)>0 THEN 1 ELSE 0 END AS had_prev,
    CASE WHEN COALESCE(c.Curr_SSB,0)>0 THEN 1 ELSE 0 END AS has_curr,
    CASE WHEN UPPER(COALESCE(p.Prev_RBC,''))='R' THEN 1 ELSE 0 END AS prev_auto,
    CASE WHEN UPPER(COALESCE(c.Curr_RBC,''))='R' THEN 1 ELSE 0 END AS curr_auto
  FROM curr_na c
  FULL OUTER JOIN prev_na p
    ON c.Account_Identifier=p.Account_Identifier
),

/* ---- Convenience flags ---- */
lab AS (
  SELECT
    *,
    CASE WHEN has_curr=1 AND had_prev=0 THEN 1 ELSE 0 END AS is_add,
    CASE WHEN had_prev=1 AND has_curr=0 THEN 1 ELSE 0 END AS is_exit,
    CASE WHEN had_prev=1 AND has_curr=1 THEN 1 ELSE 0 END AS is_persist,
    COALESCE(Curr_SSB,0) - COALESCE(Prev_SSB,0)          AS delta
  FROM j
),

/* =========================
   1) WATERFALL - BALANCES
   ========================= */
wf_bal AS (
  /* Starting Balance (prev) */
  SELECT 'Waterfall - Balances'::VARCHAR(64) AS section,
         Prev_Bank_Code                      AS bank_code,
         'Starting Balance'::VARCHAR(64)     AS line,
         SUM(COALESCE(Prev_SSB,0))::NUMERIC(38,2) AS amount
  FROM lab
  WHERE had_prev=1
  GROUP BY Prev_Bank_Code

  UNION ALL
  /* Autochange In */
  SELECT 'Waterfall - Balances', Curr_Bank_Code, 'Autochange In',
         SUM(CASE WHEN is_add=1 AND curr_auto=1 THEN COALESCE(Curr_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab
  WHERE is_add=1
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Autochange Out (negative) */
  SELECT 'Waterfall - Balances', Prev_Bank_Code, 'Autochange Out',
         -SUM(CASE WHEN is_exit=1 AND prev_auto=1 THEN COALESCE(Prev_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab
  WHERE is_exit=1
  GROUP BY Prev_Bank_Code

  UNION ALL
  /* Autochange Persisting Δ (auto both months) */
  SELECT 'Waterfall - Balances', Curr_Bank_Code, 'Autochange Persisting Δ',
         SUM(CASE WHEN is_persist=1 AND prev_auto=1 AND curr_auto=1 THEN delta ELSE 0 END)::NUMERIC(38,2)
  FROM lab
  WHERE is_persist=1
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Autochange Net Change = CurrAuto − PrevAuto (banked by side; then net per code) */
  SELECT 'Waterfall - Balances', bc.bank_code, 'Autochange Net Change',
         (SUM(bc.curr_auto_ssb) - SUM(bc.prev_auto_ssb))::NUMERIC(38,2) AS amount
  FROM (
    SELECT Curr_Bank_Code AS bank_code,
           SUM(CASE WHEN curr_auto=1 THEN COALESCE(Curr_SSB,0) ELSE 0 END) AS curr_auto_ssb,
           CAST(0 AS NUMERIC(38,2)) AS prev_auto_ssb
    FROM lab
    GROUP BY Curr_Bank_Code

    UNION ALL

    SELECT Prev_Bank_Code AS bank_code,
           CAST(0 AS NUMERIC(38,2)) AS curr_auto_ssb,
           SUM(CASE WHEN prev_auto=1 THEN COALESCE(Prev_SSB,0) ELSE 0 END) AS prev_auto_ssb
    FROM lab
    GROUP BY Prev_Bank_Code
  ) bc
  GROUP BY bc.bank_code

  UNION ALL
  /* Persisting Δ (ex-Auto) */
  SELECT 'Waterfall - Balances', Curr_Bank_Code, 'Persisting Δ (ex-Auto)',
         SUM(CASE WHEN is_persist=1 AND curr_auto=0 THEN delta ELSE 0 END)::NUMERIC(38,2)
  FROM lab
  WHERE is_persist=1
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Downgrade IN (ex-Auto) */
  SELECT 'Waterfall - Balances', Curr_Bank_Code, 'Downgrade IN (ex-Auto)',
         SUM(CASE WHEN is_add=1 AND curr_auto=0 THEN COALESCE(Curr_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab
  WHERE is_add=1
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Exit (ex-Auto) negative */
  SELECT 'Waterfall - Balances', Prev_Bank_Code, 'Exit (ex-Auto)',
         -SUM(CASE WHEN is_exit=1 AND prev_auto=0 THEN COALESCE(Prev_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab
  WHERE is_exit=1
  GROUP BY Prev_Bank_Code

  UNION ALL
  /* Ending Balance (curr) */
  SELECT 'Waterfall - Balances', Curr_Bank_Code, 'Ending Balance',
         SUM(COALESCE(Curr_SSB,0))::NUMERIC(38,2)
  FROM lab
  WHERE has_curr=1
  GROUP BY Curr_Bank_Code
),

/* ==============================
   2) WATERFALL - FACILITY COUNTS
   ============================== */
wf_cnt AS (
  /* Starting: distinct previous facilities */
  SELECT 'Waterfall - Facility Counts'::VARCHAR(64) AS section,
         Prev_Bank_Code                             AS bank_code,
         'Starting Balance'::VARCHAR(64)            AS line,
         COUNT(DISTINCT Prev_Facility_ID)           AS amount
  FROM lab
  WHERE had_prev=1 AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code

  UNION ALL
  /* Autochange In */
  SELECT 'Waterfall - Facility Counts', Curr_Bank_Code, 'Autochange In',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_add=1 AND curr_auto=1 AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Autochange Out (negative) */
  SELECT 'Waterfall - Facility Counts', Prev_Bank_Code, 'Autochange Out',
         -COUNT(DISTINCT Prev_Facility_ID)
  FROM lab
  WHERE is_exit=1 AND prev_auto=1 AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code

  UNION ALL
  /* Autochange Persisting Δ (counts = facilities with Δ≠0 in auto both months) */
  SELECT 'Waterfall - Facility Counts', Curr_Bank_Code, 'Autochange Persisting Δ',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_persist=1 AND prev_auto=1 AND curr_auto=1 AND delta<>0 AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Autochange Net Change (Ins − Outs) */
  SELECT 'Waterfall - Facility Counts', COALESCE(io.bank_code,'(unknown)') AS bank_code, 'Autochange Net Change',
         (COALESCE(io.ins_cnt,0) - COALESCE(oo.out_cnt,0)) AS amount
  FROM (
    SELECT Curr_Bank_Code AS bank_code, COUNT(DISTINCT Curr_Facility_ID) AS ins_cnt
    FROM lab WHERE is_add=1 AND curr_auto=1 AND Curr_Facility_ID IS NOT NULL GROUP BY Curr_Bank_Code
  ) io
  FULL OUTER JOIN (
    SELECT Prev_Bank_Code AS bank_code, COUNT(DISTINCT Prev_Facility_ID) AS out_cnt
    FROM lab WHERE is_exit=1 AND prev_auto=1 AND Prev_Facility_ID IS NOT NULL GROUP BY Prev_Bank_Code
  ) oo
  ON io.bank_code=oo.bank_code

  UNION ALL
  /* Persisting Δ (ex-Auto) */
  SELECT 'Waterfall - Facility Counts', Curr_Bank_Code, 'Persisting Δ (ex-Auto)',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_persist=1 AND curr_auto=0 AND delta<>0 AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Downgrade IN (ex-Auto) */
  SELECT 'Waterfall - Facility Counts', Curr_Bank_Code, 'Downgrade IN (ex-Auto)',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_add=1 AND curr_auto=0 AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Exit (ex-Auto) negative */
  SELECT 'Waterfall - Facility Counts', Prev_Bank_Code, 'Exit (ex-Auto)',
         -COUNT(DISTINCT Prev_Facility_ID)
  FROM lab
  WHERE is_exit=1 AND prev_auto=0 AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code

  UNION ALL
  /* Ending: distinct current facilities */
  SELECT 'Waterfall - Facility Counts', Curr_Bank_Code, 'Ending Balance',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE has_curr=1 AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code
),

/* ==============================
   3) DOWNGRADE IN BREAKDOWN
   ============================== */
dg_in_cnt AS (
  SELECT 'Downgrade IN Breakdown - Facility Counts'::VARCHAR(64) AS section,
         Curr_Bank_Code                                         AS bank_code,
         'Number of unique FACILITY_IDs'::VARCHAR(64)           AS line,
         COUNT(DISTINCT Curr_Facility_ID)                        AS amount
  FROM lab
  WHERE is_add=1 AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  SELECT 'Downgrade IN Breakdown - Facility Counts', Curr_Bank_Code, 'Autochange FACILITY_IDs',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_add=1 AND curr_auto=1 AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  SELECT 'Downgrade IN Breakdown - Facility Counts', Curr_Bank_Code, 'Not Covered; Under $250k; Casey (ex-Auto)',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_add=1 AND curr_auto=0
    AND Curr_Bank_Code='L-CIT'
    AND Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
    AND COALESCE(Curr_SSB,0) <= 250000
    AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  SELECT 'Downgrade IN Breakdown - Facility Counts', Curr_Bank_Code, 'Not Covered; Under $500k; Samya (ex-Auto)',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_add=1 AND curr_auto=0
    AND Curr_Bank_Code='L-CIT'
    AND Curr_PROD5 = 'Business RE Term Loans'
    AND COALESCE(Curr_SSB,0) <= 500000
    AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Reviewable = adds ex-Auto excluding under-thresholds */
  SELECT 'Downgrade IN Breakdown - Facility Counts', Curr_Bank_Code, 'Number of Reviewable unique Facility_IDs',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_add=1 AND curr_auto=0
    AND NOT (
      Curr_Bank_Code='L-CIT' AND (
        (Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Curr_SSB,0) <= 250000) OR
        (Curr_PROD5 = 'Business RE Term Loans' AND COALESCE(Curr_SSB,0) <= 500000)
      )
    )
    AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code
),
dg_in_bal AS (
  SELECT 'Downgrade IN Breakdown - Balances'::VARCHAR(64) AS section,
         Curr_Bank_Code                                    AS bank_code,
         'Autochange Balances'::VARCHAR(64)                AS line,
         SUM(CASE WHEN is_add=1 AND curr_auto=1 THEN COALESCE(Curr_SSB,0) ELSE 0 END)::NUMERIC(38,2) AS amount
  FROM lab GROUP BY Curr_Bank_Code

  UNION ALL
  SELECT 'Downgrade IN Breakdown - Balances', Curr_Bank_Code, 'Not Covered; Under $250k; Casey (ex-Auto) Balances',
         SUM(CASE WHEN is_add=1 AND curr_auto=0
                   AND Curr_Bank_Code='L-CIT'
                   AND Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
                   AND COALESCE(Curr_SSB,0) <= 250000
              THEN COALESCE(Curr_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab GROUP BY Curr_Bank_Code

  UNION ALL
  SELECT 'Downgrade IN Breakdown - Balances', Curr_Bank_Code, 'Not Covered; Under $500k; Samya (ex-Auto) Balances',
         SUM(CASE WHEN is_add=1 AND curr_auto=0
                   AND Curr_Bank_Code='L-CIT'
                   AND Curr_PROD5 = 'Business RE Term Loans'
                   AND COALESCE(Curr_SSB,0) <= 500000
              THEN COALESCE(Curr_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab GROUP BY Curr_Bank_Code

  UNION ALL
  SELECT 'Downgrade IN Breakdown - Balances', Curr_Bank_Code, 'Reviewable Balances',
         SUM(CASE WHEN is_add=1 AND curr_auto=0
                   AND NOT (
                     Curr_Bank_Code='L-CIT' AND (
                       (Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Curr_SSB,0) <= 250000) OR
                       (Curr_PROD5 = 'Business RE Term Loans' AND COALESCE(Curr_SSB,0) <= 500000)
                     )
                   )
              THEN COALESCE(Curr_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab GROUP BY Curr_Bank_Code
),

/* ==============================
   4) EXIT BREAKDOWN
   ============================== */
ex_cnt AS (
  SELECT 'Exit Breakdown - Facility Counts'::VARCHAR(64) AS section,
         Prev_Bank_Code                                   AS bank_code,
         'Number of unique FACILITY_IDs'::VARCHAR(64)     AS line,
         COUNT(DISTINCT Prev_Facility_ID)                 AS amount
  FROM lab
  WHERE is_exit=1 AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code

  UNION ALL
  SELECT 'Exit Breakdown - Facility Counts', Prev_Bank_Code, 'Autochange FACILITY_IDs',
         COUNT(DISTINCT Prev_Facility_ID)
  FROM lab
  WHERE is_exit=1 AND prev_auto=1 AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code

  UNION ALL
  SELECT 'Exit Breakdown - Facility Counts', Prev_Bank_Code, 'Not Covered; Under $250k; Casey (ex-Auto)',
         COUNT(DISTINCT Prev_Facility_ID)
  FROM lab
  WHERE is_exit=1 AND prev_auto=0
    AND Prev_Bank_Code='L-CIT'
    AND Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
    AND COALESCE(Prev_SSB,0) <= 250000
    AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code

  UNION ALL
  SELECT 'Exit Breakdown - Facility Counts', Prev_Bank_Code, 'Not Covered; Under $500k; Samya (ex-Auto)',
         COUNT(DISTINCT Prev_Facility_ID)
  FROM lab
  WHERE is_exit=1 AND prev_auto=0
    AND Prev_Bank_Code='L-CIT'
    AND Prev_PROD5 = 'Business RE Term Loans'
    AND COALESCE(Prev_SSB,0) <= 500000
    AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code

  UNION ALL
  SELECT 'Exit Breakdown - Facility Counts', Prev_Bank_Code, 'Number of Reviewable unique Facility_IDs',
         COUNT(DISTINCT Prev_Facility_ID)
  FROM lab
  WHERE is_exit=1 AND prev_auto=0
    AND NOT (
      Prev_Bank_Code='L-CIT' AND (
        (Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Prev_SSB,0) <= 250000) OR
        (Prev_PROD5 = 'Business RE Term Loans' AND COALESCE(Prev_SSB,0) <= 500000)
      )
    )
    AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code
),
ex_bal AS (
  SELECT 'Exit Breakdown - Balances'::VARCHAR(64) AS section,
         Prev_Bank_Code                               AS bank_code,
         'Autochange Balances'::VARCHAR(64)          AS line,
         SUM(CASE WHEN is_exit=1 AND prev_auto=1 THEN COALESCE(Prev_SSB,0) ELSE 0 END)::NUMERIC(38,2) AS amount
  FROM lab GROUP BY Prev_Bank_Code

  UNION ALL
  SELECT 'Exit Breakdown - Balances', Prev_Bank_Code, 'Not Covered; Under $250k; Casey (ex-Auto) Balances',
         SUM(CASE WHEN is_exit=1 AND prev_auto=0
                   AND Prev_Bank_Code='L-CIT'
                   AND Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
                   AND COALESCE(Prev_SSB,0) <= 250000
              THEN COALESCE(Prev_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab GROUP BY Prev_Bank_Code

  UNION ALL
  SELECT 'Exit Breakdown - Balances', Prev_Bank_Code, 'Not Covered; Under $500k; Samya (ex-Auto) Balances',
         SUM(CASE WHEN is_exit=1 AND prev_auto=0
                   AND Prev_Bank_Code='L-CIT'
                   AND Prev_PROD5 = 'Business RE Term Loans'
                   AND COALESCE(Prev_SSB,0) <= 500000
              THEN COALESCE(Prev_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab GROUP BY Prev_Bank_Code

  UNION ALL
  SELECT 'Exit Breakdown - Balances', Prev_Bank_Code, 'Reviewable Balances',
         SUM(CASE WHEN is_exit=1 AND prev_auto=0
                   AND NOT (
                     Prev_Bank_Code='L-CIT' AND (
                       (Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Prev_SSB,0) <= 250000) OR
                       (Prev_PROD5 = 'Business RE Term Loans' AND COALESCE(Prev_SSB,0) <= 500000)
                     )
                   )
              THEN COALESCE(Prev_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab GROUP BY Prev_Bank_Code
),

/* --------- Wrap all unions so ORDER BY is unambiguous --------- */
out_all AS (
  SELECT section, bank_code, line, amount FROM wf_bal
  UNION ALL
  SELECT section, bank_code, line, amount FROM wf_cnt
  UNION ALL
  SELECT section, bank_code, line, amount FROM dg_in_cnt
  UNION ALL
  SELECT section, bank_code, line, amount FROM dg_in_bal
  UNION ALL
  SELECT section, bank_code, line, amount FROM ex_cnt
  UNION ALL
  SELECT section, bank_code, line, amount FROM ex_bal
)

SELECT section, bank_code, line, amount
FROM out_all
ORDER BY section, bank_code,
  CASE line
    WHEN 'Starting Balance' THEN 1
    WHEN 'Autochange In' THEN 2
    WHEN 'Autochange Out' THEN 3
    WHEN 'Autochange Persisting Δ' THEN 4
    WHEN 'Autochange Net Change' THEN 5
    WHEN 'Persisting Δ (ex-Auto)' THEN 6
    WHEN 'Downgrade IN (ex-Auto)' THEN 7
    WHEN 'Exit (ex-Auto)' THEN 8
    WHEN 'Ending Balance' THEN 9
    WHEN 'Number of unique FACILITY_IDs' THEN 1
    WHEN 'Autochange FACILITY_IDs' THEN 2
    WHEN 'Not Covered; Under $250k; Casey (ex-Auto)' THEN 3
    WHEN 'Not Covered; Under $500k; Samya (ex-Auto)' THEN 4
    WHEN 'Number of Reviewable unique Facility_IDs' THEN 5
    WHEN 'Autochange Balances' THEN 2
    WHEN 'Not Covered; Under $250k; Casey (ex-Auto) Balances' THEN 3
    WHEN 'Not Covered; Under $500k; Samya (ex-Auto) Balances' THEN 4
    WHEN 'Reviewable Balances' THEN 5
    ELSE 99
  END;






WITH params AS (
  SELECT DATE '2025-09-30' AS curr_eom,
         ADD_MONTHS(DATE '2025-09-30', -1) AS prev_eom
),

/* ---- Bank mapping once ---- */
banked AS (
  SELECT
    End_of_Month_Date,
    UPPER(TRIM(Account_Identifier))                               AS Account_Identifier,
    TRIM(Account_Name)                                            AS Account_Name,
    Contract_Source_System,
    CIS_Customer_Number,
    TRIM(Facility_ID)                                             AS Facility_ID,
    Account_Key,
    Status_Code_Description,
    GL_ACCOUNT_HIER_LEVEL_4,
    Source_System_Balance,
    GL_Balance,
    Available_Balance,
    Borrower_Risk_Rating,
    PD_Grade,
    Days_Past_Due,
    Non_Accrual_Flag,
    PROD_HIER_LEVEL_5,
    RBC_Code,
    GL_ACCOUNT_CODE,
    CASE
      WHEN Contract_Source_System IN ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN')
        THEN 'L-SVB'
      WHEN Contract_Source_System = 'ALL'
       AND GL_ACCOUNT_CODE IN ('1051872','1061833','1041344','1041211','1041345','1041364','1041210',
                               '1042127','1042213','1042048','1042368','1042408','1042409','1042424',
                               '1100001','1142067','1042886','1043008')
        THEN 'L-SVB'
      WHEN Contract_Source_System IN ('ADJ','ALL','ALS','FDR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO')
        THEN 'L-FCB'
      WHEN Contract_Source_System IN ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN','INFL05','INFL05-EXCPTN',
                                      'INFL10','INFL10-EXCPTN','LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001',
                                      'SBO001-EXCPTN','STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN',
                                      'STRAT1','STRAT1-EXCPTN')
        THEN 'L-CIT'
      ELSE 'NULL-Need to Research'
    END AS Bank_Code
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
),

/* ---- NA populations per month (SSB>0) collapsed to 1 row per acct ---- */
prev_na AS (
  SELECT
    Account_Identifier,
    MAX(Bank_Code)             AS Prev_Bank_Code,
    MAX(Facility_ID)           AS Prev_Facility_ID,
    MAX(PROD_HIER_LEVEL_5)     AS Prev_PROD5,
    MAX(Contract_Source_System)AS Prev_CSS,
    MAX(RBC_Code)              AS Prev_RBC,
    SUM(Source_System_Balance) AS Prev_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT prev_eom FROM params)
    AND Non_Accrual_Flag='Y'
    AND Source_System_Balance>0
  GROUP BY Account_Identifier
),
curr_na AS (
  SELECT
    Account_Identifier,
    MAX(Bank_Code)             AS Curr_Bank_Code,
    MAX(Facility_ID)           AS Curr_Facility_ID,
    MAX(PROD_HIER_LEVEL_5)     AS Curr_PROD5,
    MAX(Contract_Source_System)AS Curr_CSS,
    MAX(RBC_Code)              AS Curr_RBC,
    SUM(Source_System_Balance) AS Curr_SSB
  FROM banked
  WHERE End_of_Month_Date=(SELECT curr_eom FROM params)
    AND Non_Accrual_Flag='Y'
    AND Source_System_Balance>0
  GROUP BY Account_Identifier
),

/* ---- Join months ---- */
j AS (
  SELECT
    COALESCE(c.Account_Identifier,p.Account_Identifier) AS Account_Identifier,
    /* prev */
    p.Prev_SSB,
    p.Prev_Bank_Code,
    p.Prev_Facility_ID,
    p.Prev_PROD5,
    p.Prev_CSS,
    p.Prev_RBC,
    /* curr */
    c.Curr_SSB,
    c.Curr_Bank_Code,
    c.Curr_Facility_ID,
    c.Curr_PROD5,
    c.Curr_CSS,
    c.Curr_RBC,
    /* flags */
    CASE WHEN COALESCE(p.Prev_SSB,0)>0 THEN 1 ELSE 0 END AS had_prev,
    CASE WHEN COALESCE(c.Curr_SSB,0)>0 THEN 1 ELSE 0 END AS has_curr,
    CASE WHEN UPPER(COALESCE(p.Prev_RBC,''))='R' THEN 1 ELSE 0 END AS prev_auto,
    CASE WHEN UPPER(COALESCE(c.Curr_RBC,''))='R' THEN 1 ELSE 0 END AS curr_auto
  FROM curr_na c
  FULL OUTER JOIN prev_na p
    ON c.Account_Identifier=p.Account_Identifier
),

/* ---- Convenience flags ---- */
lab AS (
  SELECT
    *,
    /* movement types */
    CASE WHEN has_curr=1 AND had_prev=0 THEN 1 ELSE 0 END AS is_add,
    CASE WHEN had_prev=1 AND has_curr=0 THEN 1 ELSE 0 END AS is_exit,
    CASE WHEN had_prev=1 AND has_curr=1 THEN 1 ELSE 0 END AS is_persist,
    COALESCE(Curr_SSB,0) - COALESCE(Prev_SSB,0)          AS delta
  FROM j
),

/* =========================
   1) WATERFALL - BALANCES
   ========================= */
wf_bal AS (
  /* Starting Balance (prev) */
  SELECT 'Waterfall - Balances' AS section,
         Prev_Bank_Code        AS Bank_Code,
         'Starting Balance'    AS line,
         SUM(COALESCE(Prev_SSB,0))::NUMERIC(38,2) AS amount
  FROM lab
  WHERE had_prev=1
  GROUP BY Prev_Bank_Code

  UNION ALL
  /* Autochange In */
  SELECT 'Waterfall - Balances', Curr_Bank_Code, 'Autochange In',
         SUM(CASE WHEN is_add=1 AND curr_auto=1 THEN COALESCE(Curr_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab
  WHERE is_add=1
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Autochange Out (negative) */
  SELECT 'Waterfall - Balances', Prev_Bank_Code, 'Autochange Out',
         -SUM(CASE WHEN is_exit=1 AND prev_auto=1 THEN COALESCE(Prev_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab
  WHERE is_exit=1
  GROUP BY Prev_Bank_Code

  UNION ALL
  /* Autochange Persisting Δ (auto both months) */
  SELECT 'Waterfall - Balances', Curr_Bank_Code, 'Autochange Persisting Δ',
         SUM(CASE WHEN is_persist=1 AND prev_auto=1 AND curr_auto=1 THEN delta ELSE 0 END)::NUMERIC(38,2)
  FROM lab
  WHERE is_persist=1
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Autochange Net Change = CurrAuto − PrevAuto */
  SELECT 'Waterfall - Balances', COALESCE(Bank_Code,'(mixed)') AS Bank_Code, 'Autochange Net Change',
         (SUM(Curr_Auto_SSB) - SUM(Prev_Auto_SSB))::NUMERIC(38,2) AS amount
  FROM (
    SELECT Curr_Bank_Code AS Bank_Code,
           SUM(CASE WHEN curr_auto=1 THEN COALESCE(Curr_SSB,0) ELSE 0 END) AS Curr_Auto_SSB,
           0 AS Prev_Auto_SSB
    FROM lab
    GROUP BY Curr_Bank_Code
    UNION ALL
    SELECT Prev_Bank_Code AS Bank_Code,
           0 AS Curr_Auto_SSB,
           SUM(CASE WHEN prev_auto=1 THEN COALESCE(Prev_SSB,0) ELSE 0 END) AS Prev_Auto_SSB
    FROM lab
    GROUP BY Prev_Bank_Code
  ) x
  GROUP BY COALESCE(Bank_Code,'(mixed)')

  UNION ALL
  /* Persisting Δ (ex-Auto) */
  SELECT 'Waterfall - Balances', Curr_Bank_Code, 'Persisting Δ (ex-Auto)',
         SUM(CASE WHEN is_persist=1 AND curr_auto=0 THEN delta ELSE 0 END)::NUMERIC(38,2)
  FROM lab
  WHERE is_persist=1
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Downgrade IN (ex-Auto) */
  SELECT 'Waterfall - Balances', Curr_Bank_Code, 'Downgrade IN (ex-Auto)',
         SUM(CASE WHEN is_add=1 AND curr_auto=0 THEN COALESCE(Curr_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab
  WHERE is_add=1
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Exit (ex-Auto) negative */
  SELECT 'Waterfall - Balances', Prev_Bank_Code, 'Exit (ex-Auto)',
         -SUM(CASE WHEN is_exit=1 AND prev_auto=0 THEN COALESCE(Prev_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab
  WHERE is_exit=1
  GROUP BY Prev_Bank_Code

  UNION ALL
  /* Ending Balance (curr) */
  SELECT 'Waterfall - Balances', Curr_Bank_Code, 'Ending Balance',
         SUM(COALESCE(Curr_SSB,0))::NUMERIC(38,2)
  FROM lab
  WHERE has_curr=1
  GROUP BY Curr_Bank_Code
),

/* ==============================
   2) WATERFALL - FACILITY COUNTS
   ============================== */
wf_cnt AS (
  /* Starting: distinct previous facilities */
  SELECT 'Waterfall - Facility Counts' AS section,
         Prev_Bank_Code               AS Bank_Code,
         'Starting Balance'           AS line,
         COUNT(DISTINCT Prev_Facility_ID) AS amount
  FROM lab
  WHERE had_prev=1 AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code

  UNION ALL
  /* Autochange In */
  SELECT 'Waterfall - Facility Counts', Curr_Bank_Code, 'Autochange In',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_add=1 AND curr_auto=1 AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Autochange Out (negative) */
  SELECT 'Waterfall - Facility Counts', Prev_Bank_Code, 'Autochange Out',
         -COUNT(DISTINCT Prev_Facility_ID)
  FROM lab
  WHERE is_exit=1 AND prev_auto=1 AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code

  UNION ALL
  /* Autochange Persisting Δ (counts = facilities with Δ≠0 in auto both months) */
  SELECT 'Waterfall - Facility Counts', Curr_Bank_Code, 'Autochange Persisting Δ',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_persist=1 AND prev_auto=1 AND curr_auto=1 AND delta<>0 AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Autochange Net Change (Ins − Outs) */
  SELECT 'Waterfall - Facility Counts', Bank_Code, 'Autochange Net Change',
         (COALESCE(InsCnt,0) - COALESCE(OutCnt,0)) AS amount
  FROM (
    SELECT Curr_Bank_Code AS Bank_Code, COUNT(DISTINCT Curr_Facility_ID) AS InsCnt
    FROM lab WHERE is_add=1 AND curr_auto=1 AND Curr_Facility_ID IS NOT NULL GROUP BY Curr_Bank_Code
  ) i
  FULL OUTER JOIN (
    SELECT Prev_Bank_Code AS Bank_Code, COUNT(DISTINCT Prev_Facility_ID) AS OutCnt
    FROM lab WHERE is_exit=1 AND prev_auto=1 AND Prev_Facility_ID IS NOT NULL GROUP BY Prev_Bank_Code
  ) o
  ON i.Bank_Code=o.Bank_Code

  UNION ALL
  /* Persisting Δ (ex-Auto): count persisting with Δ≠0, non-auto in curr */
  SELECT 'Waterfall - Facility Counts', Curr_Bank_Code, 'Persisting Δ (ex-Auto)',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_persist=1 AND curr_auto=0 AND delta<>0 AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Downgrade IN (ex-Auto) */
  SELECT 'Waterfall - Facility Counts', Curr_Bank_Code, 'Downgrade IN (ex-Auto)',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_add=1 AND curr_auto=0 AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Exit (ex-Auto) negative */
  SELECT 'Waterfall - Facility Counts', Prev_Bank_Code, 'Exit (ex-Auto)',
         -COUNT(DISTINCT Prev_Facility_ID)
  FROM lab
  WHERE is_exit=1 AND prev_auto=0 AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code

  UNION ALL
  /* Ending: distinct current facilities */
  SELECT 'Waterfall - Facility Counts', Curr_Bank_Code, 'Ending Balance',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE has_curr=1 AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code
),

/* ==============================
   3) DOWNGRADE IN BREAKDOWN
   ============================== */
dg_in_cnt AS (
  SELECT 'Downgrade IN Breakdown - Facility Counts' AS section,
         Curr_Bank_Code AS Bank_Code,
         'Number of unique FACILITY_IDs' AS line,
         COUNT(DISTINCT Curr_Facility_ID) AS amount
  FROM lab
  WHERE is_add=1 AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  SELECT 'Downgrade IN Breakdown - Facility Counts', Curr_Bank_Code, 'Autochange FACILITY_IDs',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_add=1 AND curr_auto=1 AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  SELECT 'Downgrade IN Breakdown - Facility Counts', Curr_Bank_Code, 'Not Covered; Under $250k; Casey (ex-Auto)',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_add=1 AND curr_auto=0
    AND Curr_Bank_Code='L-CIT'
    AND Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
    AND COALESCE(Curr_SSB,0) <= 250000
    AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  SELECT 'Downgrade IN Breakdown - Facility Counts', Curr_Bank_Code, 'Not Covered; Under $500k; Samya (ex-Auto)',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_add=1 AND curr_auto=0
    AND Curr_Bank_Code='L-CIT'
    AND Curr_PROD5 = 'Business RE Term Loans'
    AND COALESCE(Curr_SSB,0) <= 500000
    AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code

  UNION ALL
  /* Reviewable = adds ex-Auto excluding under-thresholds */
  SELECT 'Downgrade IN Breakdown - Facility Counts', Curr_Bank_Code, 'Number of Reviewable unique Facility_IDs',
         COUNT(DISTINCT Curr_Facility_ID)
  FROM lab
  WHERE is_add=1 AND curr_auto=0
    AND NOT (
      Curr_Bank_Code='L-CIT' AND (
        (Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Curr_SSB,0) <= 250000) OR
        (Curr_PROD5 = 'Business RE Term Loans' AND COALESCE(Curr_SSB,0) <= 500000)
      )
    )
    AND Curr_Facility_ID IS NOT NULL
  GROUP BY Curr_Bank_Code
),
dg_in_bal AS (
  SELECT 'Downgrade IN Breakdown - Balances' AS section,
         Curr_Bank_Code AS Bank_Code,
         'Number of unique FACILITY_IDs' AS line,
         SUM(0)::NUMERIC(38,2) AS amount  -- placeholder to align schema if needed
  FROM lab WHERE 1=0
  UNION ALL
  SELECT 'Downgrade IN Breakdown - Balances', Curr_Bank_Code, 'Autochange Balances',
         SUM(CASE WHEN is_add=1 AND curr_auto=1 THEN COALESCE(Curr_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab GROUP BY Curr_Bank_Code
  UNION ALL
  SELECT 'Downgrade IN Breakdown - Balances', Curr_Bank_Code, 'Not Covered; Under $250k; Casey (ex-Auto) Balances',
         SUM(CASE WHEN is_add=1 AND curr_auto=0
                   AND Curr_Bank_Code='L-CIT'
                   AND Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
                   AND COALESCE(Curr_SSB,0) <= 250000
              THEN COALESCE(Curr_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab GROUP BY Curr_Bank_Code
  UNION ALL
  SELECT 'Downgrade IN Breakdown - Balances', Curr_Bank_Code, 'Not Covered; Under $500k; Samya (ex-Auto) Balances',
         SUM(CASE WHEN is_add=1 AND curr_auto=0
                   AND Curr_Bank_Code='L-CIT'
                   AND Curr_PROD5 = 'Business RE Term Loans'
                   AND COALESCE(Curr_SSB,0) <= 500000
              THEN COALESCE(Curr_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab GROUP BY Curr_Bank_Code
  UNION ALL
  SELECT 'Downgrade IN Breakdown - Balances', Curr_Bank_Code, 'Reviewable Balances',
         SUM(CASE WHEN is_add=1 AND curr_auto=0
                   AND NOT (
                     Curr_Bank_Code='L-CIT' AND (
                       (Curr_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Curr_SSB,0) <= 250000) OR
                       (Curr_PROD5 = 'Business RE Term Loans' AND COALESCE(Curr_SSB,0) <= 500000)
                     )
                   )
              THEN COALESCE(Curr_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab GROUP BY Curr_Bank_Code
),

/* ==============================
   4) EXIT BREAKDOWN
   ============================== */
ex_cnt AS (
  SELECT 'Exit Breakdown - Facility Counts' AS section,
         Prev_Bank_Code AS Bank_Code,
         'Number of unique FACILITY_IDs' AS line,
         COUNT(DISTINCT Prev_Facility_ID) AS amount
  FROM lab
  WHERE is_exit=1 AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code

  UNION ALL
  SELECT 'Exit Breakdown - Facility Counts', Prev_Bank_Code, 'Autochange FACILITY_IDs',
         COUNT(DISTINCT Prev_Facility_ID)
  FROM lab
  WHERE is_exit=1 AND prev_auto=1 AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code

  UNION ALL
  SELECT 'Exit Breakdown - Facility Counts', Prev_Bank_Code, 'Not Covered; Under $250k; Casey (ex-Auto)',
         COUNT(DISTINCT Prev_Facility_ID)
  FROM lab
  WHERE is_exit=1 AND prev_auto=0
    AND Prev_Bank_Code='L-CIT'
    AND Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
    AND COALESCE(Prev_SSB,0) <= 250000
    AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code

  UNION ALL
  SELECT 'Exit Breakdown - Facility Counts', Prev_Bank_Code, 'Not Covered; Under $500k; Samya (ex-Auto)',
         COUNT(DISTINCT Prev_Facility_ID)
  FROM lab
  WHERE is_exit=1 AND prev_auto=0
    AND Prev_Bank_Code='L-CIT'
    AND Prev_PROD5 = 'Business RE Term Loans'
    AND COALESCE(Prev_SSB,0) <= 500000
    AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code

  UNION ALL
  SELECT 'Exit Breakdown - Facility Counts', Prev_Bank_Code, 'Number of Reviewable unique Facility_IDs',
         COUNT(DISTINCT Prev_Facility_ID)
  FROM lab
  WHERE is_exit=1 AND prev_auto=0
    AND NOT (
      Prev_Bank_Code='L-CIT' AND (
        (Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Prev_SSB,0) <= 250000) OR
        (Prev_PROD5 = 'Business RE Term Loans' AND COALESCE(Prev_SSB,0) <= 500000)
      )
    )
    AND Prev_Facility_ID IS NOT NULL
  GROUP BY Prev_Bank_Code
),
ex_bal AS (
  SELECT 'Exit Breakdown - Balances' AS section,
         Prev_Bank_Code AS Bank_Code,
         'Autochange Balances' AS line,
         SUM(CASE WHEN is_exit=1 AND prev_auto=1 THEN COALESCE(Prev_SSB,0) ELSE 0 END)::NUMERIC(38,2) AS amount
  FROM lab GROUP BY Prev_Bank_Code

  UNION ALL
  SELECT 'Exit Breakdown - Balances', Prev_Bank_Code, 'Not Covered; Under $250k; Casey (ex-Auto) Balances',
         SUM(CASE WHEN is_exit=1 AND prev_auto=0
                   AND Prev_Bank_Code='L-CIT'
                   AND Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
                   AND COALESCE(Prev_SSB,0) <= 250000
              THEN COALESCE(Prev_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab GROUP BY Prev_Bank_Code

  UNION ALL
  SELECT 'Exit Breakdown - Balances', Prev_Bank_Code, 'Not Covered; Under $500k; Samya (ex-Auto) Balances',
         SUM(CASE WHEN is_exit=1 AND prev_auto=0
                   AND Prev_Bank_Code='L-CIT'
                   AND Prev_PROD5 = 'Business RE Term Loans'
                   AND COALESCE(Prev_SSB,0) <= 500000
              THEN COALESCE(Prev_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab GROUP BY Prev_Bank_Code

  UNION ALL
  SELECT 'Exit Breakdown - Balances', Prev_Bank_Code, 'Reviewable Balances',
         SUM(CASE WHEN is_exit=1 AND prev_auto=0
                   AND NOT (
                     Prev_Bank_Code='L-CIT' AND (
                       (Prev_PROD5 IN ('Business Non-RE Term Loans','Business Commitment Draw') AND COALESCE(Prev_SSB,0) <= 250000) OR
                       (Prev_PROD5 = 'Business RE Term Loans' AND COALESCE(Prev_SSB,0) <= 500000)
                     )
                   )
              THEN COALESCE(Prev_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM lab GROUP BY Prev_Bank_Code
)

/* ===== FINAL OUTPUT ===== */
SELECT section, Bank_Code, line, amount
FROM wf_bal
UNION ALL
SELECT section, Bank_Code, line, amount FROM wf_cnt
UNION ALL
SELECT section, Bank_Code, line, amount FROM dg_in_cnt
UNION ALL
SELECT section, Bank_Code, line, amount FROM dg_in_bal
UNION ALL
SELECT section, Bank_Code, line, amount FROM ex_cnt
UNION ALL
SELECT section, Bank_Code, line, amount FROM ex_bal
ORDER BY section, Bank_Code, 
  CASE line
    WHEN 'Starting Balance' THEN 1
    WHEN 'Autochange In' THEN 2
    WHEN 'Autochange Out' THEN 3
    WHEN 'Autochange Persisting Δ' THEN 4
    WHEN 'Autochange Net Change' THEN 5
    WHEN 'Persisting Δ (ex-Auto)' THEN 6
    WHEN 'Downgrade IN (ex-Auto)' THEN 7
    WHEN 'Exit (ex-Auto)' THEN 8
    WHEN 'Ending Balance' THEN 9
    WHEN 'Number of unique FACILITY_IDs' THEN 1
    WHEN 'Autochange FACILITY_IDs' THEN 2
    WHEN 'Not Covered; Under $250k; Casey (ex-Auto)' THEN 3
    WHEN 'Not Covered; Under $500k; Samya (ex-Auto)' THEN 4
    WHEN 'Number of Reviewable unique Facility_IDs' THEN 5
    WHEN 'Autochange Balances' THEN 2
    WHEN 'Not Covered; Under $250k; Casey (ex-Auto) Balances' THEN 3
    WHEN 'Not Covered; Under $500k; Samya (ex-Auto) Balances' THEN 4
    WHEN 'Reviewable Balances' THEN 5
    ELSE 99
  END;





Exposure (Month) :=
CALCULATE( SUM ( RC_Code_Model_Base[Actual] ) )

R2_Safe :=
VAR r = [R2_By_Model]              -- your existing R² per RC×Month
VAR r_scaled = IF ( r > 1.5, r / 100.0, r )   -- if it comes as % (e.g., 77), scale to 0–1
RETURN
VAR r_clamped = MAX ( -1.0, MIN ( 1.0, r_scaled ) ) -- keep within [-1,1]
RETURN r_clamped

Avg R2 (EW, Monitorable, Month) :=
VAR mon      = MAX ( Dim_Date[MonthEnd] )
VAR rc_set   = FILTER ( VALUES ( Dim_RC[RC_DESCRIPTION] ), [Monitorable Flag (Measure)] = 1 )
VAR t =
    ADDCOLUMNS (
        rc_set,
        "@w",  CALCULATE ( [Exposure (Month)], TREATAS ( { mon }, RC_Code_Model_Base[MONTH_END] ) ),
        "@r2", CALCULATE ( [R2_Safe],          TREATAS ( { mon }, RC_Code_Model_Base[MONTH_END] ) )
    )
VAR wtot = SUMX ( t, [@w] )
RETURN IF ( wtot > 0, DIVIDE ( SUMX ( t, [@w] * [@r2] ), wtot ) )

Avg R2 (EW, Mon, Latest) :=
CALCULATE (
    [Avg R2 (EW, Monitorable, Month)],
    TREATAS ( { [Latest Month (Common)] }, Dim_Date[MonthEnd] )
)






Avg_R2_Weighted_Trend :=
VAR r2_table =
    ADDCOLUMNS (
        SUMMARIZE (
            FILTER ( RC_Code_Model_Base, [Monitorable Flag (Measure)] = 1 ),
            RC_Code_Model_Base[RC_DESCRIPTION],
            RC_Code_Model_Base[Month_End]
        ),
        "@Exposure", [Monitorable Exposure],      -- or [Total Exposure]
        "@R2", [R2_By_Model]
    )
RETURN
DIVIDE (
    SUMX ( r2_table, [@Exposure] * [@R2] ),
    SUMX ( r2_table, [@Exposure] )
)


Avg_R2_Weighted_Trend :=
VAR base =
    FILTER (
        RC_Code_Model_Base,
        [Monitorable Flag (Measure)] = 1
    )
VAR r2_table =
    ADDCOLUMNS (
        SUMMARIZE ( base, RC_Code_Model_Base[RC_DESCRIPTION], RC_Code_Model_Base[Month_End] ),
        "Exposure", CALCULATE ( SUM ( RC_Code_Model_Base[Exposure] ), base ),
        "R2_Value", CALCULATE ( AVERAGE ( RC_Code_Model_Base[R2_By_Model] ), base )
    )
RETURN
DIVIDE (
    SUMX ( r2_table, [Exposure] * [R2_Value] ),
    SUMX ( r2_table, [Exposure] )
)





Avg_R2_Weighted_Trend :=
VAR r2_by_rc =
    ADDCOLUMNS (
        SUMMARIZE (
            FILTER ( RC_Code_Model_Base, [Monitorable Flag (Measure)] = 1 ),
            RC_Code_Model_Base[RC_DESCRIPTION],
            RC_Code_Model_Base[Month_End]
        ),
        "@Exposure", CALCULATE ( SUM ( RC_Code_Model_Base[Exposure] ) ),
        "@R2", CALCULATE ( AVERAGE ( RC_Code_Model_Base[R2_By_Model] ) )
    )
RETURN
DIVIDE (
    SUMX ( r2_by_rc, [@Exposure] * [@R2] ),
    SUMX ( r2_by_rc, [@Exposure] )
)






Level Before – New    := [Prev Balance]
Level Before – Closed := [Prev Balance] + [Δ New]
Level Before – BalChg := [Prev Balance] + [Δ New] + [Δ Closed]

WF Base :=
VAR s = SELECTEDVALUE( Waterfall_Steps[Step] )
VAR lbN = [Level Before – New]
VAR lbC = [Level Before – Closed]
VAR lbB = [Level Before – BalChg]
VAR dC  = [Δ Closed]
VAR dB  = [Δ Balance Change]
RETURN
SWITCH(
  TRUE(),
  s = "Previous Balance", 0,
  s = "New Accounts",     lbN,
  s = "Closed Accounts",  IF( dC < 0, lbC + dC, lbC ),      -- start lower if it’s a decrease
  s = "Balance Change",   IF( dB < 0, lbB + dB, lbB ),      -- start lower if it’s a decrease
  s = "Current Balance",  0,
  0
)

WF Up :=
VAR s = SELECTEDVALUE( Waterfall_Steps[Step] )
RETURN
SWITCH(
  TRUE(),
  s = "New Accounts",     MAX( [Δ New], 0 ),
  s = "Closed Accounts",  MAX( [Δ Closed], 0 ),
  s = "Balance Change",   MAX( [Δ Balance Change], 0 ),
  0
)

WF Down :=
VAR s = SELECTEDVALUE( Waterfall_Steps[Step] )
RETURN
SWITCH(
  TRUE(),
  s = "New Accounts",     ABS( MIN( [Δ New], 0 ) ),
  s = "Closed Accounts",  ABS( MIN( [Δ Closed], 0 ) ),
  s = "Balance Change",   ABS( MIN( [Δ Balance Change], 0 ) ),
  0
)

WF Total :=
VAR s = SELECTEDVALUE( Waterfall_Steps[Step] )
RETURN
SWITCH(
  TRUE(),
  s = "Previous Balance", [Prev Balance],
  s = "Current Balance",  [Curr Balance],
  0
)







Cum After New    := [Prev Balance] + [Δ New]
Cum After Closed := [Prev Balance] + [Δ New] + [Δ Closed]

WF Base Lower :=
VAR s = SELECTEDVALUE( Waterfall_Steps[Step] )
VAR p = [Prev Balance]
VAR dN = [Δ New]
VAR dC = [Δ Closed]
VAR dB = [Δ Balance Change]
RETURN
SWITCH(
  TRUE(),
  s = "Previous Balance", 0,
  s = "New Accounts",     p,
  s = "Closed Accounts",  IF( dC < 0, [Cum After Closed], [Cum After New] ),
  s = "Balance Change",   IF( dB < 0, [Cum After Closed] + dB, [Cum After Closed] ),
  s = "Current Balance",  0,
  0
)

WF Bar Height :=
VAR s = SELECTEDVALUE( Waterfall_Steps[Step] )
RETURN
SWITCH(
  TRUE(),
  s = "Previous Balance", [Prev Balance],
  s = "New Accounts",     ABS( [Δ New] ),
  s = "Closed Accounts",  ABS( [Δ Closed] ),
  s = "Balance Change",   ABS( [Δ Balance Change] ),
  s = "Current Balance",  [Curr Balance],
  0
)

WF Bar Color :=
VAR s = SELECTEDVALUE( Waterfall_Steps[Step] )
VAR sign =
    SWITCH( TRUE(),
        s = "New Accounts",     SIGN( [Δ New] ),
        s = "Closed Accounts",  SIGN( [Δ Closed] ),
        s = "Balance Change",   SIGN( [Δ Balance Change] ),
        0  -- totals
    )
RETURN
SWITCH(
    TRUE(),
    s IN {"Previous Balance","Current Balance"}, "#A9A9A9",   -- totals gray
    sign < 0, "#D64E5B",                                      -- red for down
    "#2DA44E"                                                 -- green for up
)






Latest Month (Common) :=
MIN (
    CALCULATE ( MAX ( RC_Code_Model_Base[MONTH_END] ), ALL ( RC_Code_Model_Base ) ),
    CALCULATE ( MAX ( RC_Exposure_Flow[Month_End] ),  ALL ( RC_Exposure_Flow ) )
)

Prior Month (Common) := EOMONTH ( [Latest Month (Common)], -1 )

Prev Balance :=
CALCULATE( SUM( RC_Code_Model_Base[Actual] ),
           TREATAS( { [Prior Month (Common)] }, RC_Code_Model_Base[MONTH_END] ) )

Curr Balance :=
CALCULATE( SUM( RC_Code_Model_Base[Actual] ),
           TREATAS( { [Latest Month (Common)] }, RC_Code_Model_Base[MONTH_END] ) )

Δ New :=
CALCULATE( SUM( RC_Exposure_Flow[Exposure_Change] ),
           TREATAS( { [Latest Month (Common)] }, RC_Exposure_Flow[Month_End] ),
           KEEPFILTERS( RC_Exposure_Flow[Movement_Type] = "New Account" ) )

Δ Closed :=
CALCULATE( SUM( RC_Exposure_Flow[Exposure_Change] ),
           TREATAS( { [Latest Month (Common)] }, RC_Exposure_Flow[Month_End] ),
           KEEPFILTERS( RC_Exposure_Flow[Movement_Type] = "Closed Account" ) )

Δ Balance Change :=
CALCULATE( SUM( RC_Exposure_Flow[Exposure_Change] ),
           TREATAS( { [Latest Month (Common)] }, RC_Exposure_Flow[Month_End] ),
           KEEPFILTERS( RC_Exposure_Flow[Movement_Type] = "Balance Change" ) )

WF Base Offset :=
VAR s = SELECTEDVALUE ( Waterfall_Steps[Step] )
VAR p = [Prev Balance]
VAR a = [Δ New]
VAR c = [Δ Closed]
RETURN
SWITCH(
  TRUE(),
  s = "New Accounts",     p,
  s = "Closed Accounts",  p + a,
  s = "Balance Change",   p + a + c,
  0
)

WF Delta :=
VAR s = SELECTEDVALUE ( Waterfall_Steps[Step] )
RETURN
SWITCH(
  TRUE(),
  s = "New Accounts",     [Δ New],
  s = "Closed Accounts",  [Δ Closed],
  s = "Balance Change",   [Δ Balance Change],
  0
)

WF Total :=
VAR s = SELECTEDVALUE ( Waterfall_Steps[Step] )
RETURN
SWITCH(
  TRUE(),
  s = "Previous Balance", [Prev Balance],
  s = "Current Balance",  [Curr Balance],
  0
)







WITH params AS (
  SELECT DATE '2025-09-30' AS curr_eom,
         ADD_MONTHS(DATE '2025-09-30', -1) AS prev_eom
),
/* TRUE flags per account+month (no NA filter) */
flag_snap AS (
  SELECT
    CASE WHEN Account_Identifier IS NULL OR TRIM(Account_Identifier)='' THEN '§NULL§' ELSE UPPER(TRIM(Account_Identifier)) END AS Account_Identifier,
    End_of_Month_Date,
    MAX(Non_Accrual_Flag) AS NA_Flag,
    MAX(CASE WHEN Non_Accrual_Flag='Y' AND RBC_Code='R' THEN 1 ELSE 0 END) AS Auto_Flag
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
  GROUP BY 1, End_of_Month_Date
),
flags_prev AS (
  SELECT Account_Identifier, MAX(NA_Flag) AS Prev_NA_Flag, MAX(Auto_Flag) AS Prev_Auto_Flag
  FROM flag_snap WHERE End_of_Month_Date=(SELECT prev_eom FROM params) GROUP BY Account_Identifier
),
flags_curr AS (
  SELECT Account_Identifier, MAX(NA_Flag) AS Curr_NA_Flag, MAX(Auto_Flag) AS Curr_Auto_Flag
  FROM flag_snap WHERE End_of_Month_Date=(SELECT curr_eom FROM params) GROUP BY Account_Identifier
),

/* NA-filtered bases collapsed to 1 row/account/month using SSB */
base AS (
  SELECT
    End_of_Month_Date,
    CASE WHEN Account_Identifier IS NULL OR TRIM(Account_Identifier)='' THEN '§NULL§' ELSE UPPER(TRIM(Account_Identifier)) END AS Account_Identifier,
    SUM(Source_System_Balance) AS SSB,
    MAX(RBC_Code) AS RBC_Code
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE GL_ACCOUNT_HIER_LEVEL_4 IN ('Total Loans','Lns Held for Sale')
    AND End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
    AND Non_Accrual_Flag='Y'
    AND Source_System_Balance>0
  GROUP BY End_of_Month_Date,
           CASE WHEN Account_Identifier IS NULL OR TRIM(Account_Identifier)='' THEN '§NULL§' ELSE UPPER(TRIM(Account_Identifier)) END
),
prev_norm AS (
  SELECT Account_Identifier, SSB AS Prev_SSB
  FROM base WHERE End_of_Month_Date=(SELECT prev_eom FROM params)
),
curr_norm AS (
  SELECT Account_Identifier, SSB AS Curr_SSB, RBC_Code
  FROM base WHERE End_of_Month_Date=(SELECT curr_eom FROM params)
),
joined AS (
  SELECT
    COALESCE(c.Account_Identifier,p.Account_Identifier) AS Account_Identifier,
    p.Prev_SSB,
    c.Curr_SSB,
    COALESCE(fp.Prev_NA_Flag,'N') AS Prev_NA_Flag,
    COALESCE(fc.Curr_NA_Flag,'N') AS Curr_NA_Flag,
    COALESCE(fp.Prev_Auto_Flag,0) AS Prev_Auto_Flag,
    COALESCE(fc.Curr_Auto_Flag,0) AS Curr_Auto_Flag
  FROM curr_norm c
  FULL OUTER JOIN prev_norm p
    ON c.Account_Identifier=p.Account_Identifier
  LEFT JOIN flags_prev fp
    ON fp.Account_Identifier=COALESCE(c.Account_Identifier,p.Account_Identifier)
  LEFT JOIN flags_curr fc
    ON fc.Account_Identifier=COALESCE(c.Account_Identifier,p.Account_Identifier)
),
bridge AS (
  SELECT 'Prev Month Non-Accrual Bal' AS line,
         SUM(COALESCE(Prev_SSB,0))::NUMERIC(38,2) AS amount
  FROM joined
  UNION ALL
  SELECT 'Downgrade IN (ex-Auto)',
         SUM(CASE WHEN Curr_NA_Flag='Y' AND Prev_NA_Flag<>'Y' AND Curr_Auto_Flag=0
                  THEN COALESCE(Curr_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM joined
  UNION ALL
  SELECT 'Exits (ex-Auto)',
         -SUM(CASE WHEN Prev_NA_Flag='Y' AND (Curr_NA_Flag<>'Y' OR COALESCE(Curr_SSB,0)=0) AND Prev_Auto_Flag=0
                   THEN COALESCE(Prev_SSB,0) ELSE 0 END)::NUMERIC(38,2)
  FROM joined
  UNION ALL
  SELECT 'Autochange (net)',
         (SUM(CASE WHEN Curr_Auto_Flag=1 THEN COALESCE(Curr_SSB,0) ELSE 0 END)
         -SUM(CASE WHEN Prev_Auto_Flag=1 THEN COALESCE(Prev_SSB,0) ELSE 0 END))::NUMERIC(38,2)
  FROM joined
  UNION ALL
  SELECT 'Persisting Bal Changes (ex-Auto)',
         SUM(CASE WHEN Prev_NA_Flag='Y' AND Curr_NA_Flag='Y' AND Curr_Auto_Flag=0
                  THEN (COALESCE(Curr_SSB,0)-COALESCE(Prev_SSB,0)) ELSE 0 END)::NUMERIC(38,2)
  FROM joined
  UNION ALL
  SELECT 'Persisting No Change', CAST(0 AS NUMERIC(38,2))
  UNION ALL
  SELECT 'Current Month Bal',
         SUM(COALESCE(Curr_SSB,0))::NUMERIC(38,2)
  FROM joined
)
SELECT line, amount
FROM bridge;




Waterfall Amount :=
VAR curr = CALCULATE(
    SUM( RC_Code_Model_Base[Actual] ),
    TREATAS( { [Latest Month (Common)] }, RC_Code_Model_Base[MONTH_END] )
)
VAR prev = CALCULATE(
    SUM( RC_Code_Model_Base[Actual] ),
    TREATAS( { [Prior Month (Common)] }, RC_Code_Model_Base[MONTH_END] )
)
VAR adds =
    CALCULATE(
        SUM( RC_Exposure_Flow[Exposure_Change] ),
        RC_Exposure_Flow[Movement_Type] = "New Account"
    )
VAR drops =
    CALCULATE(
        SUM( RC_Exposure_Flow[Exposure_Change] ),
        RC_Exposure_Flow[Movement_Type] = "Closed Account"
    )
VAR balchg =
    CALCULATE(
        SUM( RC_Exposure_Flow[Exposure_Change] ),
        RC_Exposure_Flow[Movement_Type] = "Balance Change"
    )
VAR step = SELECTEDVALUE( Waterfall_Steps[Step] )
RETURN
SWITCH(
    TRUE(),
    step = "Previous Balance", prev,
    step = "New Accounts", adds,
    step = "Closed Accounts", drops,
    step = "Balance Change", balchg,
    step = "Current Balance", curr,
    BLANK()
)





j.Prev_SSB,
j.Curr_SSB,
(COALESCE(j.Curr_SSB,0) - COALESCE(j.Prev_SSB,0)) AS MoM_Delta





WITH params AS (
  SELECT
    DATE '2025-09-30'                 AS curr_eom,
    ADD_MONTHS(DATE '2025-09-30', -1) AS prev_eom
),

/* ----- Snapshot true NA flag and Auto flag by account+month (no NA filter here) ----- */
flag_snap AS (
  SELECT
    /* normalize ID once to avoid trim/case mismatches */
    CASE WHEN Account_Identifier IS NULL OR TRIM(Account_Identifier)='' THEN '§NULL§' ELSE UPPER(TRIM(Account_Identifier)) END AS Account_Identifier,
    End_of_Month_Date,
    /* If multiple rows per acct/month, Y wins for NA; Auto_Flag=1 if any NA row has RBC='R' */
    MAX(Non_Accrual_Flag)                                                        AS NA_Flag,
    MAX(CASE WHEN Non_Accrual_Flag='Y' AND RBC_Code='R' THEN 1 ELSE 0 END)       AS Auto_Flag
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
  GROUP BY 1, End_of_Month_Date
),
flags_prev AS (
  SELECT Account_Identifier,
         MAX(NA_Flag)   AS Prev_NA_Flag,
         MAX(Auto_Flag) AS Prev_Auto_Flag
  FROM flag_snap
  WHERE End_of_Month_Date = (SELECT prev_eom FROM params)
  GROUP BY Account_Identifier
),
flags_curr AS (
  SELECT Account_Identifier,
         MAX(NA_Flag)   AS Curr_NA_Flag,
         MAX(Auto_Flag) AS Curr_Auto_Flag
  FROM flag_snap
  WHERE End_of_Month_Date = (SELECT curr_eom FROM params)
  GROUP BY Account_Identifier
),

/* ----- Base pull with filters + Bank_Code; normalize Account_Identifier ----- */
base AS (
  SELECT
      End_of_Month_Date,
      Account_Name,
      Contract_Source_System,
      CIS_Customer_Number,
      Facility_ID,
      CASE WHEN Account_Identifier IS NULL OR TRIM(Account_Identifier)='' THEN '§NULL§' ELSE UPPER(TRIM(Account_Identifier)) END AS Account_Identifier,
      Account_Key,
      Status_Code_Description,
      GL_ACCOUNT_HIER_LEVEL_4,
      Source_System_Balance,
      GL_Balance,
      Available_Balance,
      Borrower_Risk_Rating,
      PD_Grade,
      Days_Past_Due,
      Non_Accrual_Flag,
      PROD_HIER_LEVEL_5,
      RBC_Code,
      GL_ACCOUNT_CODE,
      CASE
        WHEN Contract_Source_System IN ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN')
          THEN 'L-SVB'
        WHEN Contract_Source_System = 'ALL'
             AND GL_ACCOUNT_CODE IN ('1051872','1061833','1041344','1041211','1041345','1041364','1041210',
                                     '1042127','1042213','1042048','1042368','1042408','1042409','1042424',
                                     '1100001','1142067','1042886','1043008')
          THEN 'L-SVB'
        WHEN Contract_Source_System IN ('ADJ','ALL','ALS','FDR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO')
          THEN 'L-FCB'
        WHEN Contract_Source_System IN ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN','INFL05','INFL05-EXCPTN',
                                        'INFL10','INFL10-EXCPTN','LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001',
                                        'SBO001-EXCPTN','STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN',
                                        'STRAT1','STRAT1-EXCPTN')
          THEN 'L-CIT'
        ELSE 'NULL-Need to Research'
      END AS Bank_Code
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE GL_ACCOUNT_HIER_LEVEL_4 IN ('Total Loans','Lns Held for Sale')
    AND End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
    AND Non_Accrual_Flag = 'Y'
    AND Source_System_Balance > 0
),

/* ----- Collapse to 1 row / acct / month for NA population (keeps your filters) ----- */
prev_norm AS (
  SELECT
      Account_Identifier,
      MAX(Account_Name)            AS Account_Name,
      MAX(Contract_Source_System)  AS Contract_Source_System,
      MAX(CIS_Customer_Number)     AS CIS_Customer_Number,
      MAX(Facility_ID)             AS Facility_ID,
      MAX(Account_Key)             AS Account_Key,
      MAX(Status_Code_Description) AS Status_Code_Description,
      MAX(GL_ACCOUNT_HIER_LEVEL_4) AS GL_ACCOUNT_HIER_LEVEL_4,
      SUM(Source_System_Balance)   AS Source_System_Balance,
      SUM(GL_Balance)              AS GL_Balance,
      MAX(Available_Balance)       AS Available_Balance,
      MAX(Borrower_Risk_Rating)    AS Borrower_Risk_Rating,
      MAX(PD_Grade)                AS PD_Grade,
      MAX(Days_Past_Due)           AS Days_Past_Due,
      'Y'                          AS Non_Accrual_Flag,
      MAX(PROD_HIER_LEVEL_5)       AS PROD_HIER_LEVEL_5,
      MAX(RBC_Code)                AS RBC_Code,
      MAX(GL_ACCOUNT_CODE)         AS GL_ACCOUNT_CODE,
      MAX(Bank_Code)               AS Bank_Code
  FROM base
  WHERE End_of_Month_Date = (SELECT prev_eom FROM params)
  GROUP BY Account_Identifier
),
curr_norm AS (
  SELECT
      Account_Identifier,
      MAX(Account_Name)            AS Account_Name,
      MAX(Contract_Source_System)  AS Contract_Source_System,
      MAX(CIS_Customer_Number)     AS CIS_Customer_Number,
      MAX(Facility_ID)             AS Facility_ID,
      MAX(Account_Key)             AS Account_Key,
      MAX(Status_Code_Description) AS Status_Code_Description,
      MAX(GL_ACCOUNT_HIER_LEVEL_4) AS GL_ACCOUNT_HIER_LEVEL_4,
      SUM(Source_System_Balance)   AS Source_System_Balance,
      SUM(GL_Balance)              AS GL_Balance,
      MAX(Available_Balance)       AS Available_Balance,
      MAX(Borrower_Risk_Rating)    AS Borrower_Risk_Rating,
      MAX(PD_Grade)                AS PD_Grade,
      MAX(Days_Past_Due)           AS Days_Past_Due,
      'Y'                          AS Non_Accrual_Flag,
      MAX(PROD_HIER_LEVEL_5)       AS PROD_HIER_LEVEL_5,
      MAX(RBC_Code)                AS RBC_Code,
      MAX(GL_ACCOUNT_CODE)         AS GL_ACCOUNT_CODE,
      MAX(Bank_Code)               AS Bank_Code
  FROM base
  WHERE End_of_Month_Date = (SELECT curr_eom FROM params)
  GROUP BY Account_Identifier
),

/* ----- Join months + attach true flags ----- */
joined AS (
  SELECT
    COALESCE(c.Account_Identifier, p.Account_Identifier) AS Account_Identifier,

    /* NA-pop balances (with your filters) */
    p.Source_System_Balance AS Prev_SSB,
    c.Source_System_Balance AS Curr_SSB,

    /* True NA / Auto flags per month (from flag snapshots) */
    COALESCE(fp.Prev_NA_Flag,'N')   AS Prev_NA_Flag,
    COALESCE(fc.Curr_NA_Flag,'N')   AS Curr_NA_Flag,
    COALESCE(fp.Prev_Auto_Flag,0)   AS Prev_Auto_Flag,
    COALESCE(fc.Curr_Auto_Flag,0)   AS Curr_Auto_Flag,

    /* carry prev fields */
    p.Account_Name              AS Prev_Account_Name,
    p.Contract_Source_System    AS Prev_Contract_Source_System,
    p.CIS_Customer_Number       AS Prev_CIS_Customer_Number,
    p.Facility_ID               AS Prev_Facility_ID,
    p.Account_Key               AS Prev_Account_Key,
    p.Status_Code_Description   AS Prev_Status_Code_Description,
    p.GL_ACCOUNT_HIER_LEVEL_4   AS Prev_GL_ACCOUNT_HIER_LEVEL_4,
    p.GL_Balance                AS Prev_GL_Balance,
    p.Available_Balance         AS Prev_Available_Balance,
    p.Borrower_Risk_Rating      AS Prev_Borrower_Risk_Rating,
    p.PD_Grade                  AS Prev_PD_Grade,
    p.Days_Past_Due             AS Prev_Days_Past_Due,
    p.PROD_HIER_LEVEL_5         AS Prev_PROD_HIER_LEVEL_5,
    p.RBC_Code                  AS Prev_RBC_Code,
    p.GL_ACCOUNT_CODE           AS Prev_GL_ACCOUNT_CODE,
    p.Bank_Code                 AS Prev_Bank_Code,

    /* carry curr fields */
    c.Account_Name              AS Curr_Account_Name,
    c.Contract_Source_System    AS Curr_Contract_Source_System,
    c.CIS_Customer_Number       AS Curr_CIS_Customer_Number,
    c.Facility_ID               AS Curr_Facility_ID,
    c.Account_Key               AS Curr_Account_Key,
    c.Status_Code_Description   AS Curr_Status_Code_Description,
    c.GL_ACCOUNT_HIER_LEVEL_4   AS Curr_GL_ACCOUNT_HIER_LEVEL_4,
    c.GL_Balance                AS Curr_GL_Balance,
    c.Available_Balance         AS Curr_Available_Balance,
    c.Borrower_Risk_Rating      AS Curr_Borrower_Risk_Rating,
    c.PD_Grade                  AS Curr_PD_Grade,
    c.Days_Past_Due             AS Curr_Days_Past_Due,
    c.PROD_HIER_LEVEL_5         AS Curr_PROD_HIER_LEVEL_5,
    c.RBC_Code                  AS Curr_RBC_Code,
    c.GL_ACCOUNT_CODE           AS Curr_GL_ACCOUNT_CODE,
    c.Bank_Code                 AS Curr_Bank_Code
  FROM curr_norm c
  FULL OUTER JOIN prev_norm p
    ON c.Account_Identifier = p.Account_Identifier
  LEFT JOIN flags_prev fp
    ON fp.Account_Identifier = COALESCE(c.Account_Identifier, p.Account_Identifier)
  LEFT JOIN flags_curr fc
    ON fc.Account_Identifier = COALESCE(c.Account_Identifier, p.Account_Identifier)
)

/* ===== FINAL OUTPUT ===== */
SELECT
  /* ---------- CURRENT MONTH ROWS ---------- */
  (SELECT curr_eom FROM params)               AS End_of_Month_Date,
  j.Curr_Account_Name                         AS Account_Name,
  j.Curr_Contract_Source_System               AS Contract_Source_System,
  j.Curr_CIS_Customer_Number                  AS CIS_Customer_Number,
  j.Curr_Facility_ID                          AS Facility_ID,
  j.Account_Identifier                        AS Account_Identifier,
  j.Curr_Account_Key                          AS Account_Key,
  j.Curr_Status_Code_Description              AS Status_Code_Description,
  j.Curr_GL_ACCOUNT_HIER_LEVEL_4              AS GL_ACCOUNT_HIER_LEVEL_4,
  j.Curr_SSB                                  AS Source_System_Balance,
  j.Curr_GL_Balance                           AS GL_Balance,
  j.Curr_Available_Balance                    AS Available_Balance,
  j.Curr_Borrower_Risk_Rating                 AS Borrower_Risk_Rating,
  j.Curr_PD_Grade                             AS PD_Grade,
  j.Curr_Days_Past_Due                        AS Days_Past_Due,
  'Y'                                         AS Non_Accrual_Flag,
  j.Curr_PROD_HIER_LEVEL_5                    AS PROD_HIER_LEVEL_5,
  j.Curr_RBC_Code                             AS RBC_Code,
  j.Curr_GL_ACCOUNT_CODE                      AS GL_ACCOUNT_CODE,
  j.Curr_Bank_Code                            AS Bank_Code,

  /* ----- Owner (current month) ----- */
  CASE
    WHEN j.Curr_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_SSB > 500000                                  THEN 'Samya'
    WHEN j.Curr_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_SSB > 250000                                  THEN 'Casey'
    WHEN j.Curr_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_SSB <= 500000                                 THEN 'Not Covered; Under $500k; Samya'
    WHEN j.Curr_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_SSB <= 250000                                 THEN 'Not Covered; Under $250k; Casey'
    WHEN j.Curr_Contract_Source_System = 'INFL10'                  THEN 'Daniel'
    WHEN j.Curr_Bank_Code = 'L-SVB'                                THEN 'Eleanor'
    WHEN j.Curr_RBC_Code = 'R'                                     THEN 'Autochange'
    WHEN j.Curr_Bank_Code = 'L-FCB'                                THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner,

  /* ----- Characterization (current month rows only; Auto subtypes first) ----- */
  CASE
    WHEN j.Curr_Auto_Flag = 1 AND (j.Prev_NA_Flag <> 'Y' AND j.Curr_NA_Flag = 'Y')
      THEN 'Autochange Downgrade IN'
    WHEN j.Curr_Auto_Flag = 1 AND j.Prev_Auto_Flag = 1
         AND j.Prev_NA_Flag = 'Y' AND j.Curr_NA_Flag = 'Y'
         AND COALESCE(j.Curr_SSB,0) <> COALESCE(j.Prev_SSB,0)
      THEN 'Autochange Persisting Balance Changes'
    WHEN j.Curr_Auto_Flag = 1 AND j.Prev_Auto_Flag = 1
         AND j.Prev_NA_Flag = 'Y' AND j.Curr_NA_Flag = 'Y'
         AND COALESCE(j.Curr_SSB,0)  = COALESCE(j.Prev_SSB,0)
      THEN 'Autochange No Change'

    WHEN j.Prev_NA_Flag <> 'Y' AND j.Curr_NA_Flag = 'Y'
      THEN 'Downgrade IN'
    WHEN j.Prev_NA_Flag = 'Y'  AND j.Curr_NA_Flag = 'Y'
         AND COALESCE(j.Curr_SSB,0) <> COALESCE(j.Prev_SSB,0)
      THEN 'Persisting Balance Changes'
    WHEN j.Prev_NA_Flag = 'Y'  AND j.Curr_NA_Flag = 'Y'
         AND COALESCE(j.Curr_SSB,0)  = COALESCE(j.Prev_SSB,0)
      THEN 'No Change'
    ELSE NULL
  END AS Characterization

FROM joined j
WHERE COALESCE(j.Curr_SSB,0) > 0

UNION ALL

SELECT
  /* ---------- PREVIOUS MONTH ROWS (to surface Exits) ---------- */
  (SELECT prev_eom FROM params)               AS End_of_Month_Date,
  j.Prev_Account_Name                         AS Account_Name,
  j.Prev_Contract_Source_System               AS Contract_Source_System,
  j.Prev_CIS_Customer_Number                  AS CIS_Customer_Number,
  j.Prev_Facility_ID                          AS Facility_ID,
  j.Account_Identifier                        AS Account_Identifier,
  j.Prev_Account_Key                          AS Account_Key,
  j.Prev_Status_Code_Description              AS Status_Code_Description,
  j.Prev_GL_ACCOUNT_HIER_LEVEL_4              AS GL_ACCOUNT_HIER_LEVEL_4,
  j.Prev_SSB                                  AS Source_System_Balance,
  j.Prev_GL_Balance                           AS GL_Balance,
  j.Prev_Available_Balance                    AS Available_Balance,
  j.Prev_Borrower_Risk_Rating                 AS Borrower_Risk_Rating,
  j.Prev_PD_Grade                             AS PD_Grade,
  j.Prev_Days_Past_Due                        AS Prev_Days_Past_Due,
  'Y'                                         AS Non_Accrual_Flag,
  j.Prev_PROD_HIER_LEVEL_5                    AS PROD_HIER_LEVEL_5,
  j.Prev_RBC_Code                             AS RBC_Code,
  j.Prev_GL_ACCOUNT_CODE                      AS GL_ACCOUNT_CODE,
  j.Prev_Bank_Code                            AS Bank_Code,

  /* Owner (prev month attributes on prev rows) */
  CASE
    WHEN j.Prev_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_SSB > 500000                                  THEN 'Samya'
    WHEN j.Prev_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_SSB > 250000                                  THEN 'Casey'
    WHEN j.Prev_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_SSB <= 500000                                 THEN 'Not Covered; Under $500k; Samya'
    WHEN j.Prev_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_SSB <= 250000                                 THEN 'Not Covered; Under $250k; Casey'
    WHEN j.Prev_Contract_Source_System = 'INFL10'                  THEN 'Daniel'
    WHEN j.Prev_Bank_Code = 'L-SVB'                                THEN 'Eleanor'
    WHEN j.Prev_RBC_Code = 'R'                                     THEN 'Autochange'
    WHEN j.Prev_Bank_Code = 'L-FCB'                                THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner,

  /* Characterization on prev rows: Autochange Exit first, then Exit */
  CASE
    WHEN j.Prev_Auto_Flag = 1
         AND (j.Curr_NA_Flag <> 'Y' OR COALESCE(j.Curr_SSB,0) = 0)
      THEN 'Autochange Exit'
    WHEN j.Prev_NA_Flag = 'Y'
         AND (j.Curr_NA_Flag <> 'Y' OR COALESCE(j.Curr_SSB,0) = 0)
      THEN 'Exit'
    ELSE NULL
  END AS Characterization

FROM joined j
WHERE COALESCE(j.Prev_SSB,0) > 0

ORDER BY
  End_of_Month_Date,
  Bank_Code,
  Account_Identifier;




WITH params AS (
  SELECT
    DATE '2025-09-30'                  AS curr_eom,
    ADD_MONTHS(DATE '2025-09-30', -1)  AS prev_eom
),

/* Base pull with filters + Bank_Code */
base AS (
  SELECT
      End_of_Month_Date,
      Account_Name,
      Contract_Source_System,
      CIS_Customer_Number,
      Facility_ID,
      TRIM(Account_Identifier) AS Account_Identifier,
      Account_Key,
      Status_Code_Description,
      GL_ACCOUNT_HIER_LEVEL_4,
      Source_System_Balance,
      GL_Balance,
      Available_Balance,
      Borrower_Risk_Rating,
      PD_Grade,
      Days_Past_Due,
      Non_Accrual_Flag,
      PROD_HIER_LEVEL_5,
      RBC_Code,
      GL_ACCOUNT_CODE,
      /* Bank_Code mapping */
      CASE
        WHEN Contract_Source_System IN ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN')
          THEN 'L-SVB'
        WHEN Contract_Source_System = 'ALL'
             AND GL_ACCOUNT_CODE IN ('1051872','1061833','1041344','1041211','1041345','1041364','1041210',
                                     '1042127','1042213','1042048','1042368','1042408','1042409','1042424',
                                     '1100001','1142067','1042886','1043008')
          THEN 'L-SVB'
        WHEN Contract_Source_System IN ('ADJ','ALL','ALS','FDR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO')
          THEN 'L-FCB'
        WHEN Contract_Source_System IN ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN','INFL05','INFL05-EXCPTN',
                                        'INFL10','INFL10-EXCPTN','LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001',
                                        'SBO001-EXCPTN','STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN',
                                        'STRAT1','STRAT1-EXCPTN')
          THEN 'L-CIT'
        ELSE 'NULL-Need to Research'
      END AS Bank_Code
  FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
  WHERE GL_ACCOUNT_HIER_LEVEL_4 IN ('Total Loans','Lns Held for Sale')
    AND End_of_Month_Date IN ((SELECT prev_eom FROM params),(SELECT curr_eom FROM params))
    AND Non_Accrual_Flag = 'Y'
    AND Source_System_Balance > 0
),

/* One row per account per month (sum balances just in case; carry descriptors) */
prev_norm AS (
  SELECT
      Account_Identifier,
      MAX(Account_Name)            AS Account_Name,
      MAX(Contract_Source_System)  AS Contract_Source_System,
      MAX(CIS_Customer_Number)     AS CIS_Customer_Number,
      MAX(Facility_ID)             AS Facility_ID,
      MAX(Account_Key)             AS Account_Key,
      MAX(Status_Code_Description) AS Status_Code_Description,
      MAX(GL_ACCOUNT_HIER_LEVEL_4) AS GL_ACCOUNT_HIER_LEVEL_4,
      SUM(Source_System_Balance)   AS Source_System_Balance,
      SUM(GL_Balance)              AS GL_Balance,
      MAX(Available_Balance)       AS Available_Balance,
      MAX(Borrower_Risk_Rating)    AS Borrower_Risk_Rating,
      MAX(PD_Grade)                AS PD_Grade,
      MAX(Days_Past_Due)           AS Days_Past_Due,
      'Y'                          AS Non_Accrual_Flag,
      MAX(PROD_HIER_LEVEL_5)       AS PROD_HIER_LEVEL_5,
      MAX(RBC_Code)                AS RBC_Code,
      MAX(GL_ACCOUNT_CODE)         AS GL_ACCOUNT_CODE,
      MAX(Bank_Code)               AS Bank_Code
  FROM base
  WHERE End_of_Month_Date = (SELECT prev_eom FROM params)
  GROUP BY Account_Identifier
),
curr_norm AS (
  SELECT
      Account_Identifier,
      MAX(Account_Name)            AS Account_Name,
      MAX(Contract_Source_System)  AS Contract_Source_System,
      MAX(CIS_Customer_Number)     AS CIS_Customer_Number,
      MAX(Facility_ID)             AS Facility_ID,
      MAX(Account_Key)             AS Account_Key,
      MAX(Status_Code_Description) AS Status_Code_Description,
      MAX(GL_ACCOUNT_HIER_LEVEL_4) AS GL_ACCOUNT_HIER_LEVEL_4,
      SUM(Source_System_Balance)   AS Source_System_Balance,
      SUM(GL_Balance)              AS GL_Balance,
      MAX(Available_Balance)       AS Available_Balance,
      MAX(Borrower_Risk_Rating)    AS Borrower_Risk_Rating,
      MAX(PD_Grade)                AS PD_Grade,
      MAX(Days_Past_Due)           AS Days_Past_Due,
      'Y'                          AS Non_Accrual_Flag,
      MAX(PROD_HIER_LEVEL_5)       AS PROD_HIER_LEVEL_5,
      MAX(RBC_Code)                AS RBC_Code,
      MAX(GL_ACCOUNT_CODE)         AS GL_ACCOUNT_CODE,
      MAX(Bank_Code)               AS Bank_Code
  FROM base
  WHERE End_of_Month_Date = (SELECT curr_eom FROM params)
  GROUP BY Account_Identifier
),

/* Join months to compute change & characterization */
joined AS (
  SELECT
    COALESCE(c.Account_Identifier, p.Account_Identifier) AS Account_Identifier,
    p.Source_System_Balance AS Prev_SSB,
    c.Source_System_Balance AS Curr_SSB,
    /* Autochange flag if RBC='R' in either month */
    CASE WHEN COALESCE(c.RBC_Code, p.RBC_Code) = 'R' THEN 1 ELSE 0 END AS Is_Auto,

    /* carry prev fields */
    p.Account_Name              AS Prev_Account_Name,
    p.Contract_Source_System    AS Prev_Contract_Source_System,
    p.CIS_Customer_Number       AS Prev_CIS_Customer_Number,
    p.Facility_ID               AS Prev_Facility_ID,
    p.Account_Key               AS Prev_Account_Key,
    p.Status_Code_Description   AS Prev_Status_Code_Description,
    p.GL_ACCOUNT_HIER_LEVEL_4   AS Prev_GL_ACCOUNT_HIER_LEVEL_4,
    p.GL_Balance                AS Prev_GL_Balance,
    p.Available_Balance         AS Prev_Available_Balance,
    p.Borrower_Risk_Rating      AS Prev_Borrower_Risk_Rating,
    p.PD_Grade                  AS Prev_PD_Grade,
    p.Days_Past_Due             AS Prev_Days_Past_Due,
    p.PROD_HIER_LEVEL_5         AS Prev_PROD_HIER_LEVEL_5,
    p.RBC_Code                  AS Prev_RBC_Code,
    p.GL_ACCOUNT_CODE           AS Prev_GL_ACCOUNT_CODE,
    p.Bank_Code                 AS Prev_Bank_Code,

    /* carry curr fields */
    c.Account_Name              AS Curr_Account_Name,
    c.Contract_Source_System    AS Curr_Contract_Source_System,
    c.CIS_Customer_Number       AS Curr_CIS_Customer_Number,
    c.Facility_ID               AS Curr_Facility_ID,
    c.Account_Key               AS Curr_Account_Key,
    c.Status_Code_Description   AS Curr_Status_Code_Description,
    c.GL_ACCOUNT_HIER_LEVEL_4   AS Curr_GL_ACCOUNT_HIER_LEVEL_4,
    c.GL_Balance                AS Curr_GL_Balance,
    c.Available_Balance         AS Curr_Available_Balance,
    c.Borrower_Risk_Rating      AS Curr_Borrower_Risk_Rating,
    c.PD_Grade                  AS Curr_PD_Grade,
    c.Days_Past_Due             AS Curr_Days_Past_Due,
    c.PROD_HIER_LEVEL_5         AS Curr_PROD_HIER_LEVEL_5,
    c.RBC_Code                  AS Curr_RBC_Code,
    c.GL_ACCOUNT_CODE           AS Curr_GL_ACCOUNT_CODE,
    c.Bank_Code                 AS Curr_Bank_Code
  FROM curr_norm c
  FULL OUTER JOIN prev_norm p
    ON c.Account_Identifier = p.Account_Identifier
)

/* Final: emit rows for both months with Owner + Characterization */
SELECT
  /* ----- CURRENT MONTH ROWS ----- */
  (SELECT curr_eom FROM params)               AS End_of_Month_Date,
  j.Curr_Account_Name                         AS Account_Name,
  j.Curr_Contract_Source_System               AS Contract_Source_System,
  j.Curr_CIS_Customer_Number                  AS CIS_Customer_Number,
  j.Curr_Facility_ID                          AS Facility_ID,
  j.Account_Identifier                        AS Account_Identifier,
  j.Curr_Account_Key                          AS Account_Key,
  j.Curr_Status_Code_Description              AS Status_Code_Description,
  j.Curr_GL_ACCOUNT_HIER_LEVEL_4              AS GL_ACCOUNT_HIER_LEVEL_4,
  j.Curr_SSB                                  AS Source_System_Balance,
  j.Curr_GL_Balance                           AS GL_Balance,
  j.Curr_Available_Balance                    AS Available_Balance,
  j.Curr_Borrower_Risk_Rating                 AS Borrower_Risk_Rating,
  j.Curr_PD_Grade                             AS PD_Grade,
  j.Curr_Days_Past_Due                        AS Days_Past_Due,
  'Y'                                         AS Non_Accrual_Flag,
  j.Curr_PROD_HIER_LEVEL_5                    AS PROD_HIER_LEVEL_5,
  j.Curr_RBC_Code                             AS RBC_Code,
  j.Curr_GL_ACCOUNT_CODE                      AS GL_ACCOUNT_CODE,
  j.Curr_Bank_Code                            AS Bank_Code,

  /* Owner (uses CURRENT row attributes; thresholds applied) */
  CASE
    WHEN j.Curr_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_SSB > 500000                                  THEN 'Samya'
    WHEN j.Curr_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_SSB > 250000                                  THEN 'Casey'
    WHEN j.Curr_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_SSB <= 500000                                 THEN 'Not Covered; Under $500k; Samya'
    WHEN j.Curr_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Curr_Bank_Code = 'L-CIT'
         AND j.Curr_SSB <= 250000                                 THEN 'Not Covered; Under $250k; Casey'
    WHEN j.Curr_Contract_Source_System = 'INFL10'                  THEN 'Daniel'
    WHEN j.Curr_Bank_Code = 'L-SVB'                                THEN 'Eleanor'
    WHEN j.Curr_RBC_Code = 'R'                                     THEN 'Autochange'
    WHEN j.Curr_Bank_Code = 'L-FCB'                                THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner,

  /* Characterization (precedence: Autochange > Downgrade > Exit > Persisting Δ) */
  CASE
    WHEN j.Is_Auto = 1 THEN 'Autochange'
    WHEN j.Prev_SSB IS NULL OR j.Prev_SSB = 0 THEN 'Downgrade IN'
    WHEN j.Prev_SSB > 0 AND j.Curr_SSB > 0 AND j.Curr_SSB <> j.Prev_SSB THEN 'Persisting Balance Changes'
    ELSE NULL
  END AS Characterization

FROM joined j
WHERE j.Curr_SSB > 0   -- emit only current-month rows here

UNION ALL

SELECT
  /* ----- PREVIOUS MONTH ROWS (to show Exits) ----- */
  (SELECT prev_eom FROM params)               AS End_of_Month_Date,
  j.Prev_Account_Name                         AS Account_Name,
  j.Prev_Contract_Source_System               AS Contract_Source_System,
  j.Prev_CIS_Customer_Number                  AS CIS_Customer_Number,
  j.Prev_Facility_ID                          AS Facility_ID,
  j.Account_Identifier                        AS Account_Identifier,
  j.Prev_Account_Key                          AS Account_Key,
  j.Prev_Status_Code_Description              AS Status_Code_Description,
  j.Prev_GL_ACCOUNT_HIER_LEVEL_4              AS GL_ACCOUNT_HIER_LEVEL_4,
  j.Prev_SSB                                  AS Source_System_Balance,
  j.Prev_GL_Balance                           AS GL_Balance,
  j.Prev_Available_Balance                    AS Available_Balance,
  j.Prev_Borrower_Risk_Rating                 AS Borrower_Risk_Rating,
  j.Prev_PD_Grade                             AS PD_Grade,
  j.Prev_Days_Past_Due                        AS Days_Past_Due,
  'Y'                                         AS Non_Accrual_Flag,
  j.Prev_PROD_HIER_LEVEL_5                    AS PROD_HIER_LEVEL_5,
  j.Prev_RBC_Code                             AS RBC_Code,
  j.Prev_GL_ACCOUNT_CODE                      AS GL_ACCOUNT_CODE,
  j.Prev_Bank_Code                            AS Bank_Code,

  /* Owner (uses PREVIOUS row attributes for prev rows) */
  CASE
    WHEN j.Prev_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_SSB > 500000                                  THEN 'Samya'
    WHEN j.Prev_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_SSB > 250000                                  THEN 'Casey'
    WHEN j.Prev_PROD_HIER_LEVEL_5 = 'Business RE Term Loans'
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_SSB <= 500000                                 THEN 'Not Covered; Under $500k; Samya'
    WHEN j.Prev_PROD_HIER_LEVEL_5 IN ('Business Non-RE Term Loans','Business Commitment Draw')
         AND j.Prev_Bank_Code = 'L-CIT'
         AND j.Prev_SSB <= 250000                                 THEN 'Not Covered; Under $250k; Casey'
    WHEN j.Prev_Contract_Source_System = 'INFL10'                  THEN 'Daniel'
    WHEN j.Prev_Bank_Code = 'L-SVB'                                THEN 'Eleanor'
    WHEN j.Prev_RBC_Code = 'R'                                     THEN 'Autochange'
    WHEN j.Prev_Bank_Code = 'L-FCB'                                THEN 'Connor'
    ELSE 'NOT COVERED'
  END AS Owner,

  /* Characterization: only 'Exit' (and 'Autochange' precedence if needed) */
  CASE
    WHEN j.Is_Auto = 1 THEN 'Autochange'
    WHEN (j.Curr_SSB IS NULL OR j.Curr_SSB = 0)
         AND (j.Prev_SSB IS NOT NULL AND j.Prev_SSB > 0) THEN 'Exit'
    ELSE NULL
  END AS Characterization

FROM joined j
WHERE j.Prev_SSB > 0   -- emit only previous-month rows here

ORDER BY
  End_of_Month_Date,
  Bank_Code,
  Account_Identifier;








The logic is:

1) If PROD_HIER_LEVEL_5 = 'Business RE Term Loans' and Bank_Code = 'L-CIT' then 'Samya'
2) If PROD_HIER_LEVEL_5 = ('Business Non-RE Term Loans' OR 'Business Commitment Draw') and Bank_Code = 'L-CIT' then 'Casey'
3) If PROD_HIER_LEVEL_5 = 'Business RE Term Loans' and Bank_Code = 'L-CIT' and Source_System_Balance < or = to 500000 then 'Not Covered; Under $500k; Samya'
4) If PROD_HIER_LEVEL_5 = ('Business Non-RE Term Loans' OR 'Business Commitment Draw') and Bank_Code = 'L-CIT' and Source_System_Balance < or = to 250000 then 'Not Covered; Under $250k; Casey'
5) If Contract_Source_System = 'INFL10' then 'Daniel'
6) If Bank_Code = 'L-SVB' then 'Eleanor'
7) If RBC_Code = 'R' then 'Autochange'
8) If population remains and Bank_Code = 'L-FCB' then 'Connor'
9) Else 'NOT COVERED'

I also need to work in some logic to create column 'Characterization' which will tag each ACCOUNT_IDENTIFIER as 'Downgrade IN', 'Exit', 'Persisting Balance Changes', and 'Autochange'.




WITH params AS (
  SELECT
    DATE '2025-09-30'  AS curr_eom,
    ADD_MONTHS(DATE '2025-09-30', -1) AS prev_eom
)
SELECT
    End_of_Month_Date,
    Account_Name,
    Contract_Source_System,
    CIS_Customer_Number,
    Facility_ID,
    Account_Identifier,
    Account_Key,
    Status_Code_Description,
    GL_ACCOUNT_HIER_LEVEL_4,
    Source_System_Balance,
    GL_Balance,
    Available_Balance,
    Borrower_Risk_Rating,
    PD_Grade,
    Days_Past_Due,
    Non_Accrual_Flag,
    PROD_HIER_LEVEL_5,
    RBC_Code,
    GL_ACCOUNT_CODE,
    CASE
      WHEN Contract_Source_System IN
           ('AL','CU','LN','LO','UU','US','TA','LJ','CF','FRDS-EXCPTN','FRDS_EXCPTN')
        THEN 'L-SVB'
      WHEN Contract_Source_System = 'ALL'
           AND GL_ACCOUNT_CODE IN
           ('1051872','1061833','1041344','1041211','1041345','1041364','1041210',
            '1042127','1042213','1042048','1042368','1042408','1042409','1042424',
            '1100001','1142067','1042886','1043008')
        THEN 'L-SVB'
      WHEN Contract_Source_System IN
           ('ADJ','ALL','ALS','FDR','FISERV','GGSL','GL','LEA','PCFS','PSL','SBO')
        THEN 'L-FCB'
      WHEN Contract_Source_System IN
           ('ACAR01','ACAR01-EXCPTN','HUBFSV','HUBFSV-EXCPTN',
            'INFL05','INFL05-EXCPTN','INFL10','INFL10-EXCPTN',
            'LNIQ01','LNIQ01-EXCPTN','MSP001','SBO001','SBO001-EXCPTN',
            'STKY01','STKY01-EXCPTN','STRAO1','STRAO1-EXCPTN',
            'STRAT1','STRAT1-EXCPTN')
        THEN 'L-CIT'
      ELSE 'NULL-Need to Research'
    END AS Bank_Code
FROM V_SECURE_PORTFOLIO_DETAIL_LOANHUB
WHERE GL_ACCOUNT_HIER_LEVEL_4 IN ('Total Loans','Lns Held for Sale')
  AND End_of_Month_Date IN ((SELECT curr_eom FROM params),
                            (SELECT prev_eom FROM params))
  AND Non_Accrual_Flag = 'Y'
  AND Source_System_Balance > 0
ORDER BY
  End_of_Month_Date,
  Bank_Code,
  Account_Identifier;










R2 (Portfolio, Monitorable, Month) :=
VAR RcMonSet =
    FILTER (
        VALUES ( Dim_RC[RC_DESCRIPTION] ),
        CALCULATE ( [Monitorable Flag (Measure)] ) = 1
    )
-- Build one row per RC (monitorable), in the current month context
VAR T =
    SUMMARIZECOLUMNS (
        Dim_RC[RC_DESCRIPTION],
        KEEPFILTERS ( RcMonSet ),
        "y",    CALCULATE ( SUM ( RC_Code_Model_Base[Actual] ) ),
        "yhat", CALCULATE ( SUM ( RC_Code_Model_Base[FORECAST_SELECTED] ) )
    )
VAR n      = COUNTROWS ( T )
VAR ybar   = AVERAGEX ( T, [y] )
VAR ss_tot = SUMX ( T, VAR dy = [y] - ybar RETURN dy * dy )
VAR ss_res = SUMX ( T, VAR e  = [y] - [yhat] RETURN e * e )
RETURN IF ( n >= 2 && ss_tot > 0, 1 - DIVIDE ( ss_res, ss_tot ), BLANK() )


Has Data (This Month) :=
VAR exp_this_month =
    CALCULATE ( SUM ( RC_Code_Model_Base[Actual] ) )
RETURN IF ( NOT ISBLANK ( exp_this_month ), 1, 0 )




R2_By_Model (Direct) :=
VAR Data =
    ADDCOLUMNS (
        RC_Code_Model_Base,
        "Residual", [Actual] - [Forecast_Selected]
    )
VAR MeanY =
    AVERAGEX ( Data, [Actual] )
VAR SST =
    SUMX ( Data, POWER ( [Actual] - MeanY, 2 ) )
VAR SSE =
    SUMX ( Data, POWER ( [Residual], 2 ) )
RETURN
IF ( SST > 0, 1 - DIVIDE ( SSE, SST ), BLANK() )

Avg Total R2 (EW, Monitorable) :=
VAR MonitorableRCs =
    FILTER (
        ADDCOLUMNS ( VALUES ( Dim_RC[RC_DESCRIPTION] ), "IsMon", [Monitorable Flag (Measure)] ),
        [IsMon] = 1
    )
VAR WeightedSum =
    SUMX (
        MonitorableRCs,
        VAR Exposure = CALCULATE ( SUM ( RC_Code_Model_Base[Actual] ) )
        VAR R2Value = CALCULATE ( [R2_By_Model (Direct)] )
        RETURN Exposure * R2Value
    )
VAR TotalExp =
    SUMX (
        MonitorableRCs,
        CALCULATE ( SUM ( RC_Code_Model_Base[Actual] ) )
    )
RETURN
IF ( TotalExp > 0, DIVIDE ( WeightedSum, TotalExp ), BLANK() )


Avg Total R2 (EW, Monitorable – Trend) :=
CALCULATE (
    [Avg Total R2 (EW, Monitorable)],
    ALLEXCEPT ( Dim_Date, Dim_Date[MonthEnd] )
)








DBG – Monitorable RCs (Count) :=
VAR rcset_with_flag =
    ADDCOLUMNS ( VALUES ( Dim_RC[RC_DESCRIPTION] ), "mon", CALCULATE ( [Monitorable Flag (Measure)] ) )
RETURN COUNTROWS ( FILTER ( rcset_with_flag, [mon] = 1 ) )

DBG – Monitorable Exposure (Denominator) :=
VAR rcset_with_flag =
    ADDCOLUMNS ( VALUES ( Dim_RC[RC_DESCRIPTION] ), "mon", CALCULATE ( [Monitorable Flag (Measure)] ) )
VAR rcset_mon = FILTER ( rcset_with_flag, [mon] = 1 )
RETURN SUMX ( rcset_mon, CALCULATE ( SUM ( RC_Code_Model_Base[Actual] ) ) )





-- Core R² per current date context (safe for KPI)
R2 By Model (Context, KPI Safe) :=
VAR T =
    SUMMARIZE (
        RC_Code_Model_Base,
        RC_Code_Model_Base[MONTH_END],
        "y",    SUM ( RC_Code_Model_Base[Actual] ),
        "yhat", SUM ( RC_Code_Model_Base[FORECAST_SELECTED] )
    )
VAR n      = COUNTROWS ( T )
VAR ybar   = AVERAGEX ( T, [y] )
VAR ss_tot = SUMX ( T, VAR dy = [y] - ybar RETURN dy * dy )
VAR ss_res = SUMX ( T, VAR e  = [y] - [yhat] RETURN e * e )
RETURN IF ( n >= 2 && ss_tot > 0, 1 - DIVIDE ( ss_res, ss_tot ), 0 )


-- Exposure-weighted average R² over time (monitorable, portfolio view)
Avg Total R2 (EW, Monitorable, Trend – KPI Safe v2) :=
VAR rcset_with_flag =
    ADDCOLUMNS (
        ALL ( Dim_RC[RC_DESCRIPTION] ),                      -- ignore RC slicers → portfolio
        "mon", CALCULATE ( [Monitorable Flag (Measure)] )    -- evaluate per RC in current date context
    )
VAR rcset_mon =
    FILTER ( rcset_with_flag, [mon] = 1 )

VAR weighted_sum =
    SUMX (
        rcset_mon,
        VAR exp_v = CALCULATE ( SUM ( RC_Code_Model_Base[Actual] ) )
        VAR r2_v  = CALCULATE ( [R2 By Model (Context, KPI Safe)] )
        RETURN exp_v * r2_v
    )
VAR total_exp =
    SUMX ( rcset_mon, CALCULATE ( SUM ( RC_Code_Model_Base[Actual] ) ) )
RETURN DIVIDE ( weighted_sum, total_exp, 0 )





R2 By Model (Context, KPI Safe) :=
VAR T =
    SUMMARIZE(
        RC_Code_Model_Base,
        RC_Code_Model_Base[MONTH_END],
        "y",    SUM ( RC_Code_Model_Base[Actual] ),
        "yhat", SUM ( RC_Code_Model_Base[FORECAST_SELECTED] )
    )
VAR n      = COUNTROWS ( T )
VAR ybar   = AVERAGEX ( T, [y] )
VAR ss_tot = SUMX ( T, VAR dy = [y] - ybar RETURN dy * dy )
VAR ss_res = SUMX ( T, VAR e  = [y] - [yhat] RETURN e * e )
-- allow n>=2 to avoid blanks in KPI; fall back to 0 if undefined
RETURN IF ( n >= 2 && ss_tot > 0, 1 - DIVIDE ( ss_res, ss_tot ), 0 )


Avg Total R2 (EW, Monitorable, Trend – KPI Safe) :=
VAR rcset = ALL( Dim_RC[RC_DESCRIPTION] )  -- ignore RC slicers → portfolio
VAR weighted_sum =
    SUMX(
        rcset,
        VAR is_mon = CALCULATE( [Monitorable Flag (Measure)] )         -- evaluated per RC
        VAR exp_v  = CALCULATE( SUM ( RC_Code_Model_Base[Actual] ) )
        VAR r2_v   = CALCULATE( [R2 By Model (Context, KPI Safe)] )
        RETURN IF( is_mon = 1, exp_v * r2_v )
    )
VAR total_exp =
    SUMX(
        rcset,
        VAR is_mon = CALCULATE( [Monitorable Flag (Measure)] )
        VAR exp_v  = CALCULATE( SUM ( RC_Code_Model_Base[Actual] ) )
        RETURN IF( is_mon = 1, exp_v )
    )
RETURN DIVIDE( weighted_sum, total_exp, 0 )





R2 By Model (Context) :=
VAR T =
    SUMMARIZE(
        RC_Code_Model_Base,
        RC_Code_Model_Base[MONTH_END],
        "y",     SUM( RC_Code_Model_Base[Actual] ),
        "yhat",  SUM( RC_Code_Model_Base[FORECAST_SELECTED] )
    )
VAR n        = COUNTROWS( T )
VAR ybar     = AVERAGEX( T, [y] )
VAR ss_tot   = SUMX( T, VAR dy = [y] - ybar   RETURN dy * dy )
VAR ss_res   = SUMX( T, VAR e  = [y] - [yhat] RETURN e  * e  )
RETURN
IF( n >= 3 && ss_tot > 0, 1 - DIVIDE( ss_res, ss_tot ), BLANK() )


Avg Total R2 (Exposure-Weighted, Monitorable, Trend) :=
VAR weighted_sum =
    SUMX(
        VALUES( Dim_RC[RC_DESCRIPTION] ),
        VAR is_mon = CALCULATE( [Monitorable Flag (Measure)] )
        VAR exp_v  = CALCULATE( SUM( RC_Code_Model_Base[Actual] ) )
        VAR r2_v   = CALCULATE( [R2 By Model (Context)] )
        RETURN IF( is_mon = 1 && NOT ISBLANK(r2_v), exp_v * r2_v )
    )
VAR total_exp =
    SUMX(
        VALUES( Dim_RC[RC_DESCRIPTION] ),
        VAR is_mon = CALCULATE( [Monitorable Flag (Measure)] )
        VAR exp_v  = CALCULATE( SUM( RC_Code_Model_Base[Actual] ) )
        RETURN IF( is_mon = 1, exp_v )
    )
RETURN DIVIDE( weighted_sum, total_exp )






Avg Total R2 (Exposure-Weighted, Monitorable, Trend) :=
VAR weighted_sum =
    SUMX(
        VALUES( Dim_RC[RC_DESCRIPTION] ),
        VAR is_mon = CALCULATE( [Monitorable Flag (Measure)] )
        VAR exp_val = CALCULATE( SUM( RC_Code_Model_Base[Actual] ) )
        VAR r2_val = CALCULATE( AVERAGE( RC_Code_Model_Base[R2_By_Model] ) )
        RETURN IF( is_mon = 1, exp_val * r2_val )
    )
VAR total_exp =
    SUMX(
        VALUES( Dim_RC[RC_DESCRIPTION] ),
        VAR is_mon = CALCULATE( [Monitorable Flag (Measure)] )
        VAR exp_val = CALCULATE( SUM( RC_Code_Model_Base[Actual] ) )
        RETURN IF( is_mon = 1, exp_val )
    )
RETURN
DIVIDE( weighted_sum, total_exp )






SELECT
    cdm.LOADDT,
    cdm.CIF,
    cdm.CUST_LINE_NBR,
    cdm.CLIENT_NM,
    clm.INVESTOR_ID,

    -- Display columns
    FORMAT(clm.CommitmentParticipationSold, 'P2', 'en-US') AS PCT_SOLD,
    CASE WHEN clm.RevolvingFlag = 1 THEN 'Yes' ELSE 'No' END AS REVOLVING_FLAG,
    CASE WHEN clm.FormulaLine  = 1 THEN 'Yes' ELSE 'No' END AS FORMULA_LINE,
    FORMAT(clm.GrossLineAmount, 'N2', 'en-US') AS GROSS_LINE_AMT,
    FORMAT(clm.NetLineAmount,   'N2', 'en-US') AS NET_LINE_AMT,
    FORMAT(clm.GrossDisbursed,  'N2', 'en-US') AS GROSS_DISBURSED,
    FORMAT(clm.NetDisbursed,    'N2', 'en-US') AS NET_DISBURSED,
    FORMAT(clm.GrossUtilized,   'N2', 'en-US') AS GROSS_UTILIZED,
    FORMAT(clm.NetUtilized,     'N2', 'en-US') AS NET_UTILIZED,
    FORMAT(cdm.SEC_UNFUNDED,    'N2', 'en-US') AS SEC_UNFUNDED,
    FORMAT(cdm.FRB_UNFUNDED_AMT,'N2', 'en-US') AS FRB_UNFUNDED_AMT,

    -- Correct_FRB_Unfunded (formatted like balances)
    FORMAT(
        CASE 
            WHEN clm.CommitmentParticipationSold > 0 AND clm.RevolvingFlag = 1 AND clm.FormulaLine = 0
                 THEN clm.GrossLineAmount - clm.GrossUtilized
            WHEN clm.CommitmentParticipationSold > 0 AND clm.RevolvingFlag = 0 AND clm.FormulaLine = 0
                 THEN clm.GrossLineAmount - clm.GrossDisbursed
            ELSE NULL
        END
    , 'N2', 'en-US') AS Correct_FRB_Unfunded,

    -- Variance (formatted like balances): FRB_Unfunded_Amt - Correct_FRB_Unfunded
    FORMAT(
        cdm.FRB_UNFUNDED_AMT -
        CASE 
            WHEN clm.CommitmentParticipationSold > 0 AND clm.RevolvingFlag = 1 AND clm.FormulaLine = 0
                 THEN clm.GrossLineAmount - clm.GrossUtilized
            WHEN clm.CommitmentParticipationSold > 0 AND clm.RevolvingFlag = 0 AND clm.FormulaLine = 0
                 THEN clm.GrossLineAmount - clm.GrossDisbursed
            ELSE NULL
        END
    , 'N2', 'en-US') AS Variance,

    -- Comments: only flag ERROR where the calc is relevant and variance <> 0
    CASE 
        WHEN 
            CASE 
                WHEN clm.CommitmentParticipationSold > 0 AND clm.RevolvingFlag = 1 AND clm.FormulaLine = 0
                     THEN cdm.FRB_UNFUNDED_AMT - (clm.GrossLineAmount - clm.GrossUtilized)
                WHEN clm.CommitmentParticipationSold > 0 AND clm.RevolvingFlag = 0 AND clm.FormulaLine = 0
                     THEN cdm.FRB_UNFUNDED_AMT - (clm.GrossLineAmount - clm.GrossDisbursed)
                ELSE NULL
            END IS NULL
            THEN NULL
        WHEN 
            (cdm.FRB_UNFUNDED_AMT -
             CASE 
                 WHEN clm.CommitmentParticipationSold > 0 AND clm.RevolvingFlag = 1 AND clm.FormulaLine = 0
                      THEN clm.GrossLineAmount - clm.GrossUtilized
                 WHEN clm.CommitmentParticipationSold > 0 AND clm.RevolvingFlag = 0 AND clm.FormulaLine = 0
                      THEN clm.GrossLineAmount - clm.GrossDisbursed
                 ELSE NULL
             END) <> 0 
            THEN 'ERROR'
        ELSE NULL
    END AS Comments

FROM CRDADMPRD.DBO.CDM_CREDITLINES_ALL_TOPSIDED cdm
LEFT JOIN CRDLMTUFCALC.CRDLMTUFCALC.DBO.CREDIT_LINE_MONTHLY clm
  ON cdm.LOADDT = clm.LoadDate 
 AND cdm.CUST_LINE_NBR = clm.CreditLineNumber
WHERE cdm.LOADDT IN ('3/31/2025','4/30/2025','5/31/2025','6/30/2025','7/31/2025','8/31/2025','9/30/2025')
  AND cdm.CUST_LINE_NBR IN (
      '00000085407','00000085132','00000085136','00000078700',
      '00000085376','00000085791','200067183CRDCARD1',
      '00000060335','00000085468','200269331IMXARLINE1',
      '200269331CRDCARD1','00000085460');






SELECT
    cdm.LOADDT,
    cdm.CIF,
    cdm.CUST_LINE_NBR,
    cdm.CLIENT_NM,
    clm.INVESTOR_ID,

    -- Display columns
    FORMAT(clm.CommitmentParticipationSold, 'P2', 'en-US') AS PCT_SOLD,
    CASE WHEN clm.RevolvingFlag = 1 THEN 'Yes' ELSE 'No' END AS REVOLVING_FLAG,
    CASE WHEN clm.FormulaLine  = 1 THEN 'Yes' ELSE 'No' END AS FORMULA_LINE,
    FORMAT(clm.GrossLineAmount, 'N2', 'en-US') AS GROSS_LINE_AMT,
    FORMAT(clm.NetLineAmount,   'N2', 'en-US') AS NET_LINE_AMT,
    FORMAT(clm.GrossDisbursed,  'N2', 'en-US') AS GROSS_DISBURSED,
    FORMAT(clm.NetDisbursed,    'N2', 'en-US') AS NET_DISBURSED,
    FORMAT(clm.GrossUtilized,   'N2', 'en-US') AS GROSS_UTILIZED,
    FORMAT(clm.NetUtilized,     'N2', 'en-US') AS NET_UTILIZED,
    FORMAT(cdm.SEC_UNFUNDED,    'N2', 'en-US') AS SEC_UNFUNDED,
    FORMAT(cdm.FRB_UNFUNDED_AMT,'N2', 'en-US') AS FRB_UNFUNDED_AMT,

    -- ✅ Correct_FRB_Unfunded (numeric)
    CASE 
        WHEN clm.CommitmentParticipationSold > 0 
             AND clm.RevolvingFlag = 1 
             AND clm.FormulaLine  = 0
          THEN clm.GrossLineAmount - clm.GrossUtilized
        WHEN clm.CommitmentParticipationSold > 0 
             AND clm.RevolvingFlag = 0 
             AND clm.FormulaLine  = 0
          THEN clm.GrossLineAmount - clm.GrossDisbursed
        ELSE NULL
    END AS Correct_FRB_Unfunded,

    -- ✅ Variance: CDM.FRB_Unfunded_Amt - Correct_FRB_Unfunded
    (cdm.FRB_UNFUNDED_AMT - 
        CASE 
            WHEN clm.CommitmentParticipationSold > 0 
                 AND clm.RevolvingFlag = 1 
                 AND clm.FormulaLine  = 0
              THEN clm.GrossLineAmount - clm.GrossUtilized
            WHEN clm.CommitmentParticipationSold > 0 
                 AND clm.RevolvingFlag = 0 
                 AND clm.FormulaLine  = 0
              THEN clm.GrossLineAmount - clm.GrossDisbursed
            ELSE NULL
        END
    ) AS Variance,

    -- (Optional formatted Variance)
    FORMAT(
        cdm.FRB_UNFUNDED_AMT - 
        CASE 
            WHEN clm.CommitmentParticipationSold > 0 
                 AND clm.RevolvingFlag = 1 
                 AND clm.FormulaLine  = 0
              THEN clm.GrossLineAmount - clm.GrossUtilized
            WHEN clm.CommitmentParticipationSold > 0 
                 AND clm.RevolvingFlag = 0 
                 AND clm.FormulaLine  = 0
              THEN clm.GrossLineAmount - clm.GrossDisbursed
            ELSE NULL
        END,
        'N2', 'en-US'
    ) AS Variance_fmt,

    CASE 
        WHEN cdm.SEC_UNFUNDED = cdm.FRB_UNFUNDED_AMT THEN 'MATCH' 
        ELSE 'DIFFERENT' 
    END AS [SEC=FRB?]

FROM CRDADMPRD.DBO.CDM_CREDITLINES_ALL_TOPSIDED cdm
LEFT JOIN CRDLMTUFCALC.CRDLMTUFCALC.DBO.CREDIT_LINE_MONTHLY clm
  ON cdm.LOADDT = clm.LoadDate 
 AND cdm.CUST_LINE_NBR = clm.CreditLineNumber
WHERE cdm.LOADDT IN (
    '3/31/2025','4/30/2025','5/31/2025','6/30/2025',
    '7/31/2025','8/31/2025','9/30/2025')
  AND cdm.CUST_LINE_NBR IN (
      '00000085407','00000085132','00000085136','00000078700',
      '00000085376','00000085791','200067183CRDCARD1',
      '00000060335','00000085468','200269331IMXARLINE1',
      '200269331CRDCARD1','00000085460');






Getting an error on the below query: Msg 8116, Level 16, State 1, Line 1
Argument data type bit is invalid for argument 1 of format function.

SELECT
	cdm.LOADDT,
	cdm.CIF,
	cdm.CUST_LINE_NBR,
	cdm.CLIENT_NM,
	clm.INVESTOR_ID,
	FORMAT(clm.CommitmentParticipationSold,'P2') AS PCT_SOLD,
	FORMAT(clm.RevolvingFlag,'N2') AS REVOLVING_FLAG,
	FORMAT(clm.FormulaLine,'N2') AS FORMULA_LINE,
	FORMAT(clm.GrossLineAmount,'N2') AS GROSS_LINE_AMT,
	FORMAT(clm.NetLineAmount,'N2') AS NET_LINE_AMT,
	FORMAT(clm.GrossDisbursed,'N2') AS GROSS_DISBURSED,
	FORMAT(clm.NetDisbursed,'N2') AS NET_DISBURSED,
	FORMAT(clm.GrossUtilized,'N2') AS GROSS_UTILIZED,
	FORMAT(clm.NetUtilized,'N2') AS NET_UTILIZED,
	FORMAT(cdm.SEC_UNFUNDED,'N2') AS SEC_UNFUNDED,
	FORMAT(cdm.FRB_UNFUNDED_AMT,'N2') AS FRB_UNFUNDED_AMT,
	CASE WHEN (cdm.SEC_UNFUNDED = cdm.FRB_UNFUNDED_AMT) THEN 'MATCH' ELSE 'DIFFERENT' END AS 'SEC=FRB?'
FROM CRDADMPRD.DBO.CDM_CREDITLINES_ALL_TOPSIDED cdm
LEFT JOIN CRDLMTUFCALC.CRDLMTUFCALC.DBO.CREDIT_LINE_MONTHLY clm
ON cdm.LOADDT = clm.LoadDate AND cdm.CUST_LINE_NBR = clm.CreditLineNumber
WHERE cdm.LOADDT IN ('3/31/2025','4/30/2025','5/31/2025','6/30/2025','7/31/2025','8/31/2025','9/30/2025')
 AND cdm.CUST_LINE_NBR IN (
	'00000085407',
	'00000085132',
	'00000085136',
	'00000078700',
	'00000085376',
	'00000085791',
	'200067183CRDCARD1',
	'00000060335',
	'00000085468',
	'200269331IMXARLINE1',
	'200269331CRDCARD1',
	'00000085460')






Recon Check (Common) :=
VAR prev = [Exposure Prev (Total, Common)]
VAR curr = [Exposure Curr (Total, Common)]
VAR mid  = [Δ New (Total, Common)] + [Δ Closed (Total, Common)] + [Δ Balance Change (Total, Common)]
RETURN curr - (prev + mid)





WF Base Offset :=
VAR step = SELECTEDVALUE( 'Waterfall Steps'[Step] )
VAR prev   = [Exposure Prev (Total, Common)]
VAR dNew   = [Δ New (Total, Common)]
VAR dClose = [Δ Closed (Total, Common)]
VAR dBal   = [Δ Balance Change (Total, Common)]
RETURN
SWITCH(
  TRUE(),
  step = "Previous Balance", 0,
  step = "New Accounts",     prev,
  step = "Closed Accounts",  prev + dNew,
  step = "Balance Change",   prev + dNew + dClose,
  step = "Current Balance",  0,
  BLANK()
)

WF Up :=
VAR step = SELECTEDVALUE( 'Waterfall Steps'[Step] )
VAR dNew   = [Δ New (Total, Common)]
VAR dClose = [Δ Closed (Total, Common)]
VAR dBal   = [Δ Balance Change (Total, Common)]
RETURN
SWITCH(
  TRUE(),
  step = "New Accounts",     MAX( dNew, 0 ),
  step = "Closed Accounts",  MAX( dClose, 0 ),
  step = "Balance Change",   MAX( dBal, 0 ),
  0
)

WF Down :=
VAR step = SELECTEDVALUE( 'Waterfall Steps'[Step] )
VAR dNew   = [Δ New (Total, Common)]
VAR dClose = [Δ Closed (Total, Common)]
VAR dBal   = [Δ Balance Change (Total, Common)]
RETURN
SWITCH(
  TRUE(),
  step = "New Accounts",     MIN( dNew, 0 ),
  step = "Closed Accounts",  MIN( dClose, 0 ),
  step = "Balance Change",   MIN( dBal, 0 ),
  0
)

WF Total Bar :=
VAR step = SELECTEDVALUE( 'Waterfall Steps'[Step] )
VAR prev = [Exposure Prev (Total, Common)]
VAR curr = [Exposure Curr (Total, Common)]
RETURN
SWITCH(
  TRUE(),
  step = "Previous Balance", prev,
  step = "Current Balance",  curr,
  0
)







Latest Month (Common) :=
VAR m1 =
    CALCULATE ( MAX ( RC_Code_Model_Base[MONTH_END] ), ALL ( RC_Code_Model_Base ) )
VAR m2 =
    CALCULATE ( MAX ( RC_Exposure_Flow[Month_End] ), ALL ( RC_Exposure_Flow ) )
RETURN
MIN ( m1, m2 )


Exposure Prev (Total, Common) :=
VAR pm = [Prior Month (Common)]
RETURN
IF (
    ISBLANK ( pm ),
    BLANK (),
    CALCULATE (
        SUM ( RC_Code_Model_Base[Actual] ),
        REMOVEFILTERS ( Dim_Date ),
        TREATAS ( { pm }, RC_Code_Model_Base[MONTH_END] )
    )
)

Exposure Curr (Total, Common) :=
VAR lm = [Latest Month (Common)]
RETURN
IF (
    ISBLANK ( lm ),
    BLANK (),
    CALCULATE (
        SUM ( RC_Code_Model_Base[Actual] ),
        REMOVEFILTERS ( Dim_Date ),
        TREATAS ( { lm }, RC_Code_Model_Base[MONTH_END] )
    )
)


Δ New (Total, Common) :=
VAR lm = [Latest Month (Common)]
RETURN
CALCULATE (
    SUM ( RC_Exposure_Flow[Exposure_Change] ),
    REMOVEFILTERS ( Dim_Date ),
    TREATAS ( { lm }, RC_Exposure_Flow[Month_End] ),
    KEEPFILTERS ( RC_Exposure_Flow[Movement_Type] = "New Account" )
)

Δ Closed (Total, Common) :=
VAR lm = [Latest Month (Common)]
RETURN
CALCULATE (
    SUM ( RC_Exposure_Flow[Exposure_Change] ),
    REMOVEFILTERS ( Dim_Date ),
    TREATAS ( { lm }, RC_Exposure_Flow[Month_End] ),
    KEEPFILTERS ( RC_Exposure_Flow[Movement_Type] = "Closed Account" )
)

Δ Xfer In (Total, Common) :=
VAR lm = [Latest Month (Common)]
RETURN
CALCULATE (
    SUM ( RC_Exposure_Flow[Exposure_Change] ),
    REMOVEFILTERS ( Dim_Date ),
    TREATAS ( { lm }, RC_Exposure_Flow[Month_End] ),
    KEEPFILTERS ( RC_Exposure_Flow[Movement_Type] = "Transfer In" )
)

Δ Xfer Out (Total, Common) :=
VAR lm = [Latest Month (Common)]
RETURN
CALCULATE (
    SUM ( RC_Exposure_Flow[Exposure_Change] ),
    REMOVEFILTERS ( Dim_Date ),
    TREATAS ( { lm }, RC_Exposure_Flow[Month_End] ),
    KEEPFILTERS ( RC_Exposure_Flow[Movement_Type] = "Transfer Out" )
)

Δ Balance Change (Total, Common) :=
VAR lm = [Latest Month (Common)]
RETURN
CALCULATE (
    SUM ( RC_Exposure_Flow[Exposure_Change] ),
    REMOVEFILTERS ( Dim_Date ),
    TREATAS ( { lm }, RC_Exposure_Flow[Month_End] ),
    KEEPFILTERS ( RC_Exposure_Flow[Movement_Type] = "Balance Change" )
)


Waterfall Amount (MoM Total, Common) :=
VAR step   = SELECTEDVALUE ( 'Waterfall Steps'[Step] )
VAR prev   = [Exposure Prev (Total, Common)]
VAR newA   = [Δ New (Total, Common)]
VAR closed = [Δ Closed (Total, Common)]
VAR xin    = [Δ Xfer In (Total, Common)]
VAR xout   = [Δ Xfer Out (Total, Common)]
VAR bal    = [Δ Balance Change (Total, Common)]
VAR curr   = [Exposure Curr (Total, Common)]
RETURN
SWITCH (
    TRUE (),
    step = "Previous Balance", prev,
    step = "New Accounts",     newA,
    step = "Closed Accounts",  closed,
    step = "Transfers In",     xin,
    step = "Transfers Out",    xout,
    step = "Balance Change",   bal,
    step = "Current Balance",
        curr - ( prev + newA + closed + xin + xout + bal ),
    BLANK ()
)






Waterfall Amount (Sel, TotalAware) :=
VAR step   = SELECTEDVALUE( 'Waterfall Steps'[Step] )
VAR prev   = [Exposure Prev (Sel)]
VAR newA   = [Δ New (Sel)]
VAR closed = [Δ Closed (Sel)]
VAR xin    = [Δ Xfer In (Sel)]
VAR xout   = [Δ Xfer Out (Sel)]
VAR bal    = [Δ Balance Change (Sel)]
VAR curr   = [Exposure Curr (Sel)]
RETURN
SWITCH(
    TRUE(),
    step = "Previous Balance", prev,
    step = "New Accounts",     newA,
    step = "Closed Accounts",  closed,
    step = "Transfers In",     xin,
    step = "Transfers Out",    xout,
    step = "Balance Change",   bal,
    step = "Current Balance",
        curr - (prev + newA + closed + xin + xout + bal),
    BLANK()
)




Δ New (Sel) :=
VAR lm = [Selected Month]
RETURN
CALCULATE(
    SUM( RC_Exposure_Flow[Exposure_Change] ),
    REMOVEFILTERS( Dim_Date ),
    TREATAS( { lm }, RC_Exposure_Flow[Month_End] ),
    KEEPFILTERS( RC_Exposure_Flow[Movement_Type] = "New Account" )
)

Δ Closed (Sel) :=
VAR lm = [Selected Month]
RETURN
CALCULATE(
    SUM( RC_Exposure_Flow[Exposure_Change] ),
    REMOVEFILTERS( Dim_Date ),
    TREATAS( { lm }, RC_Exposure_Flow[Month_End] ),
    KEEPFILTERS( RC_Exposure_Flow[Movement_Type] = "Closed Account" )
)

Δ Xfer In (Sel) :=
VAR lm = [Selected Month]
RETURN
CALCULATE(
    SUM( RC_Exposure_Flow[Exposure_Change] ),
    REMOVEFILTERS( Dim_Date ),
    TREATAS( { lm }, RC_Exposure_Flow[Month_End] ),
    KEEPFILTERS( RC_Exposure_Flow[Movement_Type] = "Transfer In" )
)

Δ Xfer Out (Sel) :=
VAR lm = [Selected Month]
RETURN
CALCULATE(
    SUM( RC_Exposure_Flow[Exposure_Change] ),
    REMOVEFILTERS( Dim_Date ),
    TREATAS( { lm }, RC_Exposure_Flow[Month_End] ),
    KEEPFILTERS( RC_Exposure_Flow[Movement_Type] = "Transfer Out" )
)

Δ Balance Change (Sel) :=
VAR lm = [Selected Month]
RETURN
CALCULATE(
    SUM( RC_Exposure_Flow[Exposure_Change] ),
    REMOVEFILTERS( Dim_Date ),
    TREATAS( { lm }, RC_Exposure_Flow[Month_End] ),
    KEEPFILTERS( RC_Exposure_Flow[Movement_Type] = "Balance Change" )
)





Δ New (Sel) :=
COALESCE(
  CALCULATE(
    SUM( RC_Exposure_Flow[Exposure_Change] ),
    RC_Exposure_Flow[Month_End] = [Selected Month],
    RC_Exposure_Flow[Movement_Type] = "New Account"
  ),
  0
)

Δ Closed (Sel) :=
COALESCE(
  CALCULATE(
    SUM( RC_Exposure_Flow[Exposure_Change] ),
    RC_Exposure_Flow[Month_End] = [Selected Month],
    RC_Exposure_Flow[Movement_Type] = "Closed Account"
  ),
  0
)

Δ Xfer In (Sel) :=
COALESCE(
  CALCULATE(
    SUM( RC_Exposure_Flow[Exposure_Change] ),
    RC_Exposure_Flow[Month_End] = [Selected Month],
    RC_Exposure_Flow[Movement_Type] = "Transfer In"
  ),
  0
)

Δ Xfer Out (Sel) :=
COALESCE(
  CALCULATE(
    SUM( RC_Exposure_Flow[Exposure_Change] ),
    RC_Exposure_Flow[Month_End] = [Selected Month],
    RC_Exposure_Flow[Movement_Type] = "Transfer Out"
  ),
  0
)

Δ Balance Change (Sel) :=
COALESCE(
  CALCULATE(
    SUM( RC_Exposure_Flow[Exposure_Change] ),
    RC_Exposure_Flow[Month_End] = [Selected Month],
    RC_Exposure_Flow[Movement_Type] = "Balance Change"
  ),
  0
)





-- Month helpers
Selected Month :=
SELECTEDVALUE(
    Dim_Date[MonthEnd],
    CALCULATE( MAX( Dim_Date[MonthEnd] ), ALL(Dim_Date) )
)

Prior Month :=
EOMONTH( [Selected Month], -1 )

-- Start/End exposure (robust TREATAS pattern)
Exposure Prev (Sel) :=
VAR pm = [Prior Month]
RETURN
IF (
    ISBLANK(pm),
    BLANK(),
    CALCULATE(
        SUM ( RC_Code_Model_Base[Actual] ),
        REMOVEFILTERS ( Dim_Date ),                     -- don’t double-filter via relationship
        TREATAS ( { pm }, RC_Code_Model_Base[MONTH_END] )
    )
)

Exposure Curr (Sel) :=
VAR lm = [Selected Month]
RETURN
IF (
    ISBLANK(lm),
    BLANK(),
    CALCULATE(
        SUM ( RC_Code_Model_Base[Actual] ),
        REMOVEFILTERS ( Dim_Date ),
        TREATAS ( { lm }, RC_Code_Model_Base[MONTH_END] )
    )
)


Waterfall Amount (Sel, TotalAware) :=
VAR step   = SELECTEDVALUE( 'Waterfall Steps'[Step] )
VAR prev   = [Exposure Prev (Sel)]
VAR newA   = [Δ New (Sel)]
VAR closed = [Δ Closed (Sel)]
VAR xin    = [Δ Xfer In (Sel)]
VAR xout   = [Δ Xfer Out (Sel)]
VAR bal    = [Δ Balance Change (Sel)]
VAR curr   = [Exposure Curr (Sel)]
RETURN
SWITCH(
  TRUE(),
  step = "Previous Balance", prev,
  step = "New Accounts",     newA,
  step = "Closed Accounts",  closed,
  step = "Transfers In",     xin,
  step = "Transfers Out",    xout,
  step = "Balance Change",   bal,
  step = "Current Balance",  curr - (prev + newA + closed + xin + xout + bal),
  BLANK()
)






Selected Month :=
SELECTEDVALUE( Dim_Date[MonthEnd], CALCULATE( MAX(Dim_Date[MonthEnd]), ALL(Dim_Date) ) )

Prior Month :=
EOMONTH( [Selected Month], -1 )

Exposure Prev (Sel) :=
CALCULATE( SUM( RC_Code_Model_Base[Actual] ),
          RC_Code_Model_Base[MONTH_END] = [Prior Month] )

Exposure Curr (Sel) :=
CALCULATE( SUM( RC_Code_Model_Base[Actual] ),
          RC_Code_Model_Base[MONTH_END] = [Selected Month] )

Δ New (Sel) :=
COALESCE(
  CALCULATE( SUM(RC_Exposure_Flow[Exposure_Change]),
             RC_Exposure_Flow[Month_End] = [Selected Month],
             RC_Exposure_Flow[Movement_Type] = "New Account"), 0 )

Δ Closed (Sel) :=
COALESCE(
  CALCULATE( SUM(RC_Exposure_Flow[Exposure_Change]),
             RC_Exposure_Flow[Month_End] = [Selected Month],
             RC_Exposure_Flow[Movement_Type] = "Closed Account"), 0 )

Δ Xfer In (Sel) :=
COALESCE(
  CALCULATE( SUM(RC_Exposure_Flow[Exposure_Change]),
             RC_Exposure_Flow[Month_End] = [Selected Month],
             RC_Exposure_Flow[Movement_Type] = "Transfer In"), 0 )

Δ Xfer Out (Sel) :=
COALESCE(
  CALCULATE( SUM(RC_Exposure_Flow[Exposure_Change]),
             RC_Exposure_Flow[Month_End] = [Selected Month],
             RC_Exposure_Flow[Movement_Type] = "Transfer Out"), 0 )

Δ Balance Change (Sel) :=
COALESCE(
  CALCULATE( SUM(RC_Exposure_Flow[Exposure_Change]),
             RC_Exposure_Flow[Month_End] = [Selected Month],
             RC_Exposure_Flow[Movement_Type] = "Balance Change"), 0 )

Waterfall Amount (Sel, TotalAware) :=
VAR step   = SELECTEDVALUE( 'Waterfall Steps'[Step] )
VAR prev   = [Exposure Prev (Sel)]
VAR newA   = [Δ New (Sel)]
VAR closed = [Δ Closed (Sel)]
VAR xin    = [Δ Xfer In (Sel)]
VAR xout   = [Δ Xfer Out (Sel)]
VAR bal    = [Δ Balance Change (Sel)]
VAR curr   = [Exposure Curr (Sel)]
RETURN
SWITCH(
  TRUE(),
  step = "Previous Balance", prev,
  step = "New Accounts",     newA,
  step = "Closed Accounts",  closed,
  step = "Transfers In",     xin,
  step = "Transfers Out",    xout,
  step = "Balance Change",   bal,
  step = "Current Balance",  curr - (prev + newA + closed + xin + xout + bal),
  BLANK()
)

Recon Check :=
VAR prev = [Exposure Prev (Sel)]
VAR curr = [Exposure Curr (Sel)]
VAR mid  = [Δ New (Sel)] + [Δ Closed (Sel)] + [Δ Xfer In (Sel)] + [Δ Xfer Out (Sel)] + [Δ Balance Change (Sel)]
RETURN curr - (prev + mid)

Accounts for Selected Step (Sel) :=
VAR lm   = [Selected Month]
VAR step = SELECTEDVALUE( 'Waterfall Steps'[Step] )
VAR mt =
    SWITCH( step,
        "New Accounts",    "New Account",
        "Closed Accounts", "Closed Account",
        "Transfers In",    "Transfer In",
        "Transfers Out",   "Transfer Out",
        "Balance Change",  "Balance Change",
        BLANK()
    )
RETURN
IF(
  NOT ISBLANK(mt),
  CALCULATE( SUM( RC_Exposure_Flow[Account_Count] ),
             RC_Exposure_Flow[Month_End] = lm,
             RC_Exposure_Flow[Movement_Type] = mt )
)





Waterfall Steps =
DATATABLE(
  "Step", STRING, "StepOrder", INTEGER,
  {
    {"Previous Balance", 1},
    {"New Accounts",     2},
    {"Closed Accounts",  3},
    {"Transfers In",     4},
    {"Transfers Out",    5},
    {"Balance Change",   6},
    {"Current Balance",  7}
  }
)




Waterfall Steps =
DATATABLE(
    "Step", STRING,
    {
        {"Previous Balance"},
        {"New Accounts"},
        {"Closed Accounts"},
        {"Transfers In"},
        {"Transfers Out"},
        {"Balance Change"},
        {"Current Balance"}
    }
)


Waterfall Step Order =
SWITCH(
    TRUE(),
    'Waterfall Steps'[Step] = "Previous Balance", 1,
    'Waterfall Steps'[Step] = "New Accounts",     2,
    'Waterfall Steps'[Step] = "Closed Accounts",  3,
    'Waterfall Steps'[Step] = "Transfers In",     4,
    'Waterfall Steps'[Step] = "Transfers Out",    5,
    'Waterfall Steps'[Step] = "Balance Change",   6,
    'Waterfall Steps'[Step] = "Current Balance",  7,
    99
)

Selected Month :=
SELECTEDVALUE(
    Dim_Date[MonthEnd],
    CALCULATE( MAX( Dim_Date[MonthEnd] ), ALL( Dim_Date ) )
)

Prior Month :=
EOMONTH( [Selected Month], -1 )

